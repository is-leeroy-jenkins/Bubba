<Window
    x:Class="Bubba.SystemDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Bubba"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="http://schemas.syncfusion.com/wpf"
    Width="775"
    Height="190"
    wpf:SfSkinManager.Theme="{wpf:SkinManager ThemeName=FluentDark}"
    Background="{StaticResource ControlBackground}"
    BorderBrush="{StaticResource BlueBorderBrush}"
    BorderThickness="1,1,1,1"
    FontFamily="Roboto"
    Foreground="{StaticResource WhiteForeground}"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">

    <Canvas>
        <local:MetroTextBox
            x:Name="SystemDialogTextBox"
            Canvas.Left="30"
            Canvas.Top="34"
            Width="645"
            Height="129"
            Padding="20,20,10,10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="{StaticResource BlackBackground}"
            BorderBrush="{StaticResource MutedForeground}"
            BorderThickness="1"
            FontFamily="Roboto"
            FontSize="12"
            Foreground="{StaticResource FormForeground}"
            ToolTip="Enter System Prompt" />

        <local:MetroTile
            x:Name="SystemDialogGoButton"
            Title=""
            Canvas.Left="697"
            Canvas.Top="126"
            Width="50"
            Height="45"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="{StaticResource ControlBackground}"
            BorderBrush="{StaticResource ControlBackground}"
            Foreground="{StaticResource FormForeground}"
            Header=""
            ImageSource="/Resources/Assets/ToolStripImages/GoButton.png"
            ToolTip="Set Prompt" />

        <local:MetroTile
            x:Name="SystemDialogCancelButton"
            Title=""
            Canvas.Left="695"
            Canvas.Top="25"
            Width="50"
            Height="44"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="{StaticResource ControlBackground}"
            BorderBrush="{StaticResource ControlBackground}"
            Foreground="{StaticResource FormForeground}"
            Header=""
            ImageSource="/Resources/Assets/ToolStripImages/StopButton.png"
            ToolTip="Close Prompt" />

        <local:MetroTile
            x:Name="SystemDialogRefreshButton"
            Title=""
            Canvas.Left="697"
            Canvas.Top="76"
            Width="49"
            Height="46"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{StaticResource ControlBackground}"
            BorderBrush="{StaticResource ControlBackground}"
            Foreground="{StaticResource FormForeground}"
            Header=""
            ImageSource="/Resources/Assets/ToolStripImages/ResetButton.png"
            ToolTip="Clear Prompt" />

        <Label
            x:Name="HeaderLabel"
            Canvas.Left="30"
            Canvas.Top="4"
            Width="622"
            Height="25"
            Padding="5,0,5,5"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Top"
            Content="System Instructions"
            FontSize="10"
            Foreground="{StaticResource LightBlueBrush}" />
    </Canvas>
</Window>
