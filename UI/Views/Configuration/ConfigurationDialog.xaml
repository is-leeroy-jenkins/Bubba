<Window
    x:Class="Bubba.ConfigurationDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Bubba"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:num="clr-namespace:System.Globalization;assembly=System.Runtime"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:wpf="http://schemas.syncfusion.com/wpf"
    Title="System Configuration"
    Width="800"
    Height="420"
    wpf:SfSkinManager.Theme="{wpf:SkinManager ThemeName=FluentDark}"
    Background="{StaticResource FormBackground}"
    BorderBrush="{StaticResource BlueBorderBrush}"
    Foreground="{StaticResource FormForeground}"
    Icon="/Resources/Assets/ApplicationImages/Bubba.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="34*" />
            <RowDefinition Height="325*" />
            <RowDefinition Height="75*" />
        </Grid.RowDefinitions>
        <b:MetroEditor
            x:Name="Editor"
            Grid.Row="1"
            MaxWidth="840"
            Margin="25,10,230,40"
            Padding="15,15,5,5"
            Background="{StaticResource ControlInteriorBrush}"
            BorderThickness="1"
            ClipToBounds="True"
            FontFamily="Source Code Pro"
            FontSize="12"
            Foreground="{StaticResource WhiteForeground}"
            OutliningAreaWidth="15"
            VerticalScrollBarVisibility="Visible" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Canvas Grid.Column="1">
                <wpf:SfTextInputLayout
                    Canvas.Left="10"
                    Canvas.Top="10"
                    Width="165"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    ContainerType="Outlined"
                    FontFamily="Roboto"
                    FontSize="9"
                    Hint="Name">
                    <TextBox FontFamily="Roboto" Text="John" />
                </wpf:SfTextInputLayout>
                <wpf:SfTextInputLayout
                    Canvas.Left="10"
                    Canvas.Top="85"
                    Width="165"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    ContainerType="Outlined"
                    FontSize="9"
                    Hint="Name">
                    <TextBox FontFamily="Roboto" Text="John" />
                </wpf:SfTextInputLayout>
            </Canvas>
        </Grid>
    </Grid>
</Window>
