<Window
    x:Class="Bubba.ChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Bubba"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:num="clr-namespace:System.Globalization;assembly=System.Runtime"
    xmlns:plt="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:sp="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:web="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
    xmlns:wpf="http://schemas.syncfusion.com/wpf"
    Title="Bubba"
    Width="1350"
    Height="700"
    MinWidth="1000"
    MinHeight="400"
    wpf:SfSkinManager.Theme="{wpf:SkinManager ThemeName=FluentDark}"
    Background="{StaticResource FormBackground}"
    BorderBrush="{StaticResource BlueBorderBrush}"
    BorderThickness="1,1,1,1"
    FontFamily="Roboto"
    Foreground="{StaticResource FormForeground}"
    Icon="/Resources/Assets/ApplicationImages/Bubba.png"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">


    <!--  ******************************************** RESOURCES *********************************************  -->

    <Window.Resources>
        <Style TargetType="{x:Type ToolTip}">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderBrush" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Background" Value="{StaticResource BlackBackground}" />
            <Setter Property="Foreground" Value="{StaticResource LightBlueBrush}" />
        </Style>

        <Style TargetType="{x:Type Thumb}">
            <Setter Property="Width" Value="13" />
            <Setter Property="Height" Value="13" />
            <Setter Property="BorderBrush" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Background" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border
                            x:Name="ThumbBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="12" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!--  *********************************************  CONTEXT MENU *************************************  -->

    <Window.ContextMenu>
        <ContextMenu x:Name="ChatWindowContextMenu">
            <wpf:MenuItemAdv
                Click="OnFileMenuOptionClick"
                Header="File"
                ToolTip="Browse File System">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FileItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnPromptOptionClick"
                Header="System Prompt"
                ToolTip="Change System Prompt">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ChatItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <wpf:MenuItemAdv
                Click="OnChromeOptionClick"
                Header="Chrome"
                ToolTip="Launch Chrome Browser">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ChromeItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnEdgeOptionClick"
                Header="Edge"
                ToolTip="Launch Edge Browser">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/EdgeItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnFirefoxOptionClick"
                Header="FireFox"
                ToolTip="Launch Firefox Browser">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FirefoxItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <wpf:MenuItemAdv
                Click="OnCalculatorMenuOptionClick"
                Header="Calculator"
                ToolTip="Open Calculator">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CalculatorItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnControlPanelOptionClick"
                Header="Control Panel"
                ToolTip="Windows Control Panel">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ControlPanelItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnTaskManagerOptionClick"
                Header="Task Manager"
                ToolTip="Windows Task Manager">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/TaskManagerItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <wpf:MenuItemAdv
                Click="OnCloseOptionClick"
                Header="Exit"
                ToolTip="Exit Application">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CloseItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

        </ContextMenu>
    </Window.ContextMenu>

    <!--  ********************************************* MAIN LAYOUT *************************************  -->

    <Grid>
        <Grid x:Name="WindowGrid">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="58.04" />
            </Grid.RowDefinitions>

            <!--  *********************************************  TOOLSTRIP *************************************  -->

            <ToolBar
                x:Name="ToolStrip"
                Grid.Row="1"
                Margin="0,5,5,5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{StaticResource FormBackground}"
                BorderBrush="{StaticResource FormBackground}"
                ClipToBounds="True"
                FontFamily="Roboto"
                Foreground="{StaticResource FormForeground}"
                SnapsToDevicePixels="True"
                UseLayoutRounding="True">

                <Label
                    x:Name="StatusLabel"
                    Width="140"
                    Height="30"
                    Padding="1,1,1,1"
                    VerticalContentAlignment="Center"
                    FontFamily="Roboto" />

                <Separator
                    Width="2"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />

                <b:ToolStripTextBox
                    x:Name="ToolStripTextBox"
                    Width="576"
                    Height="35"
                    Padding="15,1,1,1"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    Background="{StaticResource ControlInteriorBrush}"
                    BorderBrush="{StaticResource BlueBorderBrush}"
                    BorderThickness="1"
                    FontFamily="Roboto"
                    FontSize="16"
                    Foreground="{StaticResource WhiteForeground}"
                    SelectionBackgroundColor="{StaticResource ControlHoverBrush}"
                    SelectionBrush="{StaticResource GreenBackground}"
                    TextChanged="OnToolStripTextBoxTextChanged"
                    ToolTip="Input Text" />

                <Separator
                    Width="2"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />

                <b:ToolStripButton
                    x:Name="ToolStripSendButton"
                    Width="40"
                    Height="30"
                    Margin="5,1,5,1"
                    Click="OnSendButtonClick"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/PromptButton.png"
                    ToolTip="Send Text" />

                <b:ToolStripButton
                    x:Name="ToolStripRefreshButton"
                    Margin="5,1,5,1"
                    Click="OnToolStripRefreshButtonClick"
                    ImageSource="/Resources/Assets/MenuImages/RefreshItem.png"
                    ToolTip="Clear Propmt Text" />

                <b:ToolStripButton
                    x:Name="ToolStripDeleteButton"
                    Margin="5,1,5,1"
                    ImageSource="/Resources/Assets/ToolStripImages/PreviousButton.png"
                    ToolTip="Delete/Backspace" />

                <b:ToolStripButton
                    x:Name="ToolStripCancelButton"
                    Margin="5,1,5,1"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/StopButton.png"
                    ToolTip="Cancel" />

                <b:ToolStripButton
                    x:Name="ToolStripRemoveButton"
                    Width="40"
                    Height="30"
                    Margin="5,1,5,1"
                    Click="OnSendButtonClick"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/DeleteButton.png"
                    ToolTip="Send Text" />

                <b:ToolStripButton
                    x:Name="ToolStripFileButton"
                    Margin="1,1,5,1"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/GptUploadButton.png"
                    ToolTip="GPT File" />

                <Separator
                    Width="5"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />

                <wpf:SfLinearProgressBar
                    x:Name="ProgressBar"
                    Width="200"
                    Height="28"
                    HorizontalContentAlignment="Right"
                    Background="{StaticResource ControlBackground}"
                    BorderBrush="{StaticResource ControlBackground}"
                    FontFamily="Roboto"
                    Foreground="{StaticResource BlueBorderBrush}"
                    ProgressColor="{StaticResource GreenBackground}"
                    TrackColor="{StaticResource BlueBackground}" />

                <Separator
                    Width="5"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />

                <b:ToolStripButton
                    x:Name="ToolStripMenuButton"
                    Width="40"
                    Height="30"
                    Margin="15,1,5,1"
                    HorizontalAlignment="Right"
                    HorizontalContentAlignment="Right"
                    Click="OnToggleButtonClick"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/ToggleButton.png"
                    ToolTip="Show/Hide Toolbar" />
            </ToolBar>

            <!--  *********************************************  TAB CONTROL *************************************  -->

            <Grid Grid.Row="0" />

            <mah:MetroTabControl
                x:Name="TabControl"
                Grid.Row="0"
                Foreground="{StaticResource FormForeground}">

                <!--  ********************************************* CHAT TAB *************************************  -->

                <TabItem
                    x:Name="ChatTab"
                    Foreground="{StaticResource FormForeground}"
                    Header="Chat"
                    Tag="Chat">
                    <Grid
                        x:Name="ChatTabGrid"
                        Background="{StaticResource FormBackground}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="935*" />
                            <ColumnDefinition Width="403*" />
                        </Grid.ColumnDefinitions>

                        <wpf:SfTextBoxExt
                            x:Name="ChatTextBox"
                            Grid.Column="0"
                            Width="920"
                            Height="572"
                            Margin="5"
                            FontSize="16"
                            BorderBrush="{StaticResource BlueBorderBrush}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text=""
                            TextWrapping="Wrap" />

                        <mah:MetroTabControl
                            x:Name="ParamTabControl"
                            Grid.Column="1"
                            Background="{DynamicResource BackgroundBrush}"
                            TabStripMargin="0,5,1,5">

                            <TabItem
                                x:Name="RequestTab"
                                Margin="3"
                                Padding="10"
                                Background="{DynamicResource BackgroundBrush}"
                                Foreground="{DynamicResource FormForeground}"
                                Header="Settings">

                                <Grid Background="{DynamicResource BackgroundBrush}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <Canvas Margin="5">

                                        <StackPanel
                                            Canvas.Left="30"
                                            Width="270"
                                            Height="527"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            Background="{StaticResource FormBackground}">

                                            <Separator
                                                Height="15"
                                                Background="{x:Null}"
                                                BorderBrush="{x:Null}"
                                                Foreground="{x:Null}" />

                                            <Grid
                                                x:Name="ApiGrid"
                                                Height="40">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="8*" />
                                                    <ColumnDefinition Width="8*" />
                                                    <ColumnDefinition Width="11*" />
                                                </Grid.ColumnDefinitions>

                                                <CheckBox
                                                    x:Name="StreamCheckBox"
                                                    Width="65"
                                                    Height="40"
                                                    Margin="0,1,0,1"
                                                    HorizontalAlignment="Left"
                                                    HorizontalContentAlignment="Left"
                                                    Content="Stream"
                                                    FontFamily="Roboto"
                                                    Checked="OnStreamCheckBoxChecked"
                                                    Foreground="{DynamicResource FormForeground}"
                                                    IsChecked="False"
                                                    Tag="stream"
                                                    ToolTip="Streams the Response" />

                                                <CheckBox
                                                    x:Name="StoreCheckBox"
                                                    Grid.Column="1"
                                                    Margin="3,0,0,0"
                                                    Content="Store"
                                                    FontFamily="Roboto"
                                                    Checked="OnStoreCheckBoxChecked"
                                                    Foreground="{DynamicResource FormForeground}"
                                                    IsChecked="True"
                                                    Tag="store"
                                                    ToolTip="Save the chat" />

                                                <wpf:IntegerTextBox
                                                    x:Name="MaxTokenTextBox"
                                                    Grid.Column="2"
                                                    Width="90"
                                                    Height="35"
                                                    Margin="10,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    HorizontalContentAlignment="Center"
                                                    AutomationProperties.HelpText="Maximum Tokens"
                                                    BorderBrush="{DynamicResource BlueBorderBrush}"
                                                    FontFamily="Roboto"
                                                    ShowSpinButton="True"
                                                    TextWrapping="Wrap"
                                                    ToolTip="Max Completion Tokens"
                                                    UseNullOption="True"
                                                    WatermarkText="Max Tokens:"
                                                    WatermarkTextIsVisible="True"
                                                    Value="10000" />

                                            </Grid>

                                            <Separator
                                                Height="5"
                                                Background="{x:Null}"
                                                BorderBrush="{x:Null}"
                                                Foreground="{x:Null}" />

                                            <GroupBox
                                                x:Name="ApiGroupBox"
                                                Height="100"
                                                Margin="10,1,10,1"
                                                Padding="1"
                                                HorizontalContentAlignment="Stretch"
                                                VerticalContentAlignment="Stretch"
                                                Background="{DynamicResource GroupBoxBackground}"
                                                BorderBrush="{DynamicResource MutedForeground}"
                                                FontFamily="Roboto"
                                                FontSize="12"
                                                Foreground="{StaticResource FormForeground}"
                                                Header="AI Request">

                                                <b:MetroDropDown
                                                    x:Name="GenerationListBox"
                                                    Height="40"
                                                    Margin="3,3,3,3"
                                                    FontSize="14"
                                                    VerticalAlignment="Center"
                                                    VerticalContentAlignment="Center"
                                                    Background="{StaticResource ControlInteriorBrush}"
                                                    BorderBrush="{StaticResource BlueBorderBrush}"
                                                    Foreground="{StaticResource FormForeground}"
                                                    Text="Select API" />

                                            </GroupBox>

                                            <Separator
                                                Height="5"
                                                Background="{x:Null}"
                                                BorderBrush="{x:Null}"
                                                Foreground="{x:Null}" />

                                            <GroupBox
                                                x:Name="LanguageModelGroupBox"
                                                Height="80"
                                                Margin="10,1,10,1"
                                                Padding="1"
                                                HorizontalContentAlignment="Stretch"
                                                VerticalContentAlignment="Stretch"
                                                Background="{DynamicResource GroupBoxBackground}"
                                                BorderBrush="{DynamicResource MutedForeground}"
                                                FontFamily="Roboto"
                                                FontSize="12"
                                                Foreground="{StaticResource FormForeground}"
                                                Header="Language Models">

                                                <b:MetroDropDown
                                                    x:Name="ModelDropDown"
                                                    Height="30"
                                                    Margin="3,3,3,3"
                                                    FontSize="14"
                                                    VerticalAlignment="Center"
                                                    VerticalContentAlignment="Center"
                                                    Background="{StaticResource ControlInteriorBrush}"
                                                    BorderBrush="{StaticResource BlueBorderBrush}"
                                                    Foreground="{StaticResource FormForeground}"
                                                    Text="Select LLM" />

                                            </GroupBox>

                                            <Separator
                                                Height="10"
                                                Background="{x:Null}"
                                                BorderBrush="{x:Null}"
                                                Foreground="{DynamicResource TransparentBrush}" />

                                            <GroupBox
                                                x:Name="ResponseFormatGroupBox"
                                                Height="80"
                                                Margin="10,1,10,1"
                                                Padding="1"
                                                HorizontalContentAlignment="Stretch"
                                                VerticalContentAlignment="Stretch"
                                                Background="{DynamicResource GroupBoxBackground}"
                                                BorderBrush="{DynamicResource MutedForeground}"
                                                FontFamily="Roboto"
                                                FontSize="12"
                                                Foreground="{StaticResource FormForeground}"
                                                Header="Response Format">

                                                <b:MetroDropDown
                                                    x:Name="ResponseFormatDropDown"
                                                    Height="40"
                                                    Margin="3,3,3,3"
                                                    FontSize="14"
                                                    VerticalAlignment="Center"
                                                    VerticalContentAlignment="Center"
                                                    Background="{StaticResource ControlInteriorBrush}"
                                                    BorderBrush="{StaticResource BlueBorderBrush}"
                                                    Foreground="{StaticResource FormForeground}"
                                                    Text="Select Format" />
                                            </GroupBox>

                                            <Separator
                                                Height="10"
                                                Background="{x:Null}"
                                                BorderBrush="{x:Null}"
                                                Foreground="{DynamicResource TransparentBrush}" />

                                            <GroupBox
                                                x:Name="ReasoningGroupBox"
                                                Height="80"
                                                Margin="10,1,10,1"
                                                Padding="1"
                                                HorizontalContentAlignment="Stretch"
                                                VerticalContentAlignment="Stretch"
                                                Background="{DynamicResource GroupBoxBackground}"
                                                BorderBrush="{DynamicResource MutedForeground}"
                                                FontFamily="Roboto"
                                                FontSize="12"
                                                Foreground="{StaticResource FormForeground}"
                                                Header="Response Format">

                                                <b:MetroDropDown
                                                    x:Name="EffortDropDown"
                                                    Height="40"
                                                    Margin="3,3,3,3"
                                                    FontSize="14"
                                                    VerticalAlignment="Center"
                                                    VerticalContentAlignment="Center"
                                                    Background="{StaticResource ControlInteriorBrush}"
                                                    BorderBrush="{StaticResource BlueBorderBrush}"
                                                    Foreground="{StaticResource FormForeground}"
                                                    Text="Select Effort" />
                                            </GroupBox>

                                        </StackPanel>

                                    </Canvas>
                                </Grid>
                            </TabItem>

                            <!--  ********************************************* SETTING TAB *************************************  -->

                            <TabItem
                                x:Name="SettingTab"
                                Margin="3"
                                Padding="10"
                                Background="{DynamicResource BackgroundBrush}"
                                Foreground="{DynamicResource FormForeground}"
                                Header="Parameters">

                                <Grid Background="{DynamicResource BackgroundBrush}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <Canvas Margin="1">

                                        <StackPanel
                                            Canvas.Left="10"
                                            Width="270"
                                            Height="542"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            Background="{StaticResource FormBackground}">

                                            <Separator
                                                Height="3"
                                                Background="{x:Null}"
                                                BorderBrush="{x:Null}"
                                                Foreground="{x:Null}" />

                                            <GroupBox
                                                x:Name="TemperatureGroupBox"
                                                Height="95"
                                                Margin="10,1,10,1"
                                                Padding="1"
                                                HorizontalContentAlignment="Stretch"
                                                VerticalContentAlignment="Stretch"
                                                Background="{DynamicResource GroupBoxBackground}"
                                                BorderBrush="{DynamicResource MutedForeground}"
                                                FontFamily="Roboto"
                                                FontSize="12"
                                                Foreground="{StaticResource FormForeground}"
                                                Header="Temperature">


                                                <wpf:SfRangeSlider
                                                    x:Name="TemperatureSlider"
                                                    Width="240"
                                                    Height="75"
                                                    Margin="1"
                                                    Padding="1"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    ActiveMinorTickStroke="{StaticResource WhiteForeground}"
                                                    ActiveTickStroke="{StaticResource WhiteForeground}"
                                                    Background="{DynamicResource BlueBorderBrush}"
                                                    BorderThickness="1"
                                                    Foreground="{StaticResource FormForeground}"
                                                    LargeChange="0.25"
                                                    Maximum="2"
                                                    Minimum="-2"
                                                    MinorTickFrequency="2"
                                                    MinorTickLength="5"
                                                    MinorTickStroke="{StaticResource WhiteForeground}"
                                                    ShowRange="True"
                                                    ShowValueLabels="True"
                                                    SmallChange="0.05"
                                                    SnapsTo="Ticks"
                                                    TickFrequency="0.5"
                                                    TickPlacement="BottomRight"
                                                    TickStroke="{StaticResource WhiteForeground}"
                                                    ToolTip="Lower values increase deterministic output"
                                                    ToolTipFormat="P"
                                                    Value="0.08" />
                                            </GroupBox>

                                            <Separator
                                                Height="5"
                                                Background="{x:Null}"
                                                BorderBrush="{x:Null}"
                                                Foreground="{x:Null}" />

                                            <GroupBox
                                                x:Name="TopPercentGroupBox"
                                                Height="95"
                                                Margin="10,1,10,1"
                                                Padding="1"
                                                HorizontalContentAlignment="Stretch"
                                                VerticalContentAlignment="Stretch"
                                                Background="{DynamicResource GroupBoxBackground}"
                                                BorderBrush="{DynamicResource MutedForeground}"
                                                FontFamily="Roboto"
                                                FontSize="12"
                                                Foreground="{StaticResource FormForeground}"
                                                Header="Top Percent">

                                                <wpf:SfRangeSlider
                                                    x:Name="TopPercentSlider"
                                                    Width="240"
                                                    Height="75"
                                                    Margin="1"
                                                    Padding="1"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    ActiveMinorTickStroke="{StaticResource WhiteForeground}"
                                                    ActiveTickStroke="{StaticResource WhiteForeground}"
                                                    AllowRangeDrag="True"
                                                    Background="{DynamicResource BlueBorderBrush}"
                                                    Foreground="{StaticResource FormForeground}"
                                                    Maximum="1"
                                                    Minimum="0"
                                                    MinorTickFrequency="1"
                                                    MinorTickLength="5"
                                                    MinorTickStroke="{StaticResource WhiteForeground}"
                                                    ShowValueLabels="True"
                                                    SnapsTo="Ticks"
                                                    TickFrequency="0.2"
                                                    TickPlacement="BottomRight"
                                                    TickStroke="{StaticResource WhiteForeground}"
                                                    ToolTip="top p% probability mass"
                                                    Value="0.09" />
                                            </GroupBox>

                                            <Separator
                                                Height="5"
                                                Background="{x:Null}"
                                                BorderBrush="{x:Null}"
                                                Foreground="{x:Null}" />

                                            <GroupBox
                                                x:Name="FequencyPenaltyGroupBox"
                                                Height="95"
                                                Margin="10,1,10,1"
                                                Padding="1"
                                                HorizontalContentAlignment="Stretch"
                                                VerticalContentAlignment="Stretch"
                                                Background="{DynamicResource GroupBoxBackground}"
                                                BorderBrush="{DynamicResource MutedForeground}"
                                                FontFamily="Roboto"
                                                FontSize="12"
                                                Foreground="{StaticResource FormForeground}"
                                                Header="Frequency Penalty">

                                                <wpf:SfRangeSlider
                                                    x:Name="FrequencySlider"
                                                    Width="240"
                                                    Height="75"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    ActiveMinorTickStroke="{StaticResource WhiteForeground}"
                                                    ActiveTickStroke="{StaticResource WhiteForeground}"
                                                    Background="{DynamicResource BlueBorderBrush}"
                                                    Foreground="{StaticResource FormForeground}"
                                                    Maximum="2"
                                                    Minimum="-2"
                                                    MinorTickFrequency="2"
                                                    MinorTickLength="5"
                                                    MinorTickStroke="{StaticResource WhiteForeground}"
                                                    ShowValueLabels="True"
                                                    SnapsTo="Ticks"
                                                    Tag="FrequencyPenalty"
                                                    TickFrequency="0.5"
                                                    TickPlacement="BottomRight"
                                                    TickStroke="{StaticResource WhiteForeground}"
                                                    ToolTip="Positive values decrease reptition"
                                                    Value="0.00" />

                                            </GroupBox>

                                            <Separator
                                                Height="5"
                                                Background="{x:Null}"
                                                BorderBrush="{x:Null}"
                                                Foreground="{x:Null}" />

                                            <GroupBox
                                                x:Name="PercentGroupBox"
                                                Height="95"
                                                Margin="10,1,10,1"
                                                Padding="1"
                                                HorizontalContentAlignment="Center"
                                                VerticalContentAlignment="Top"
                                                Background="{DynamicResource GroupBoxBackground}"
                                                BorderBrush="{DynamicResource MutedForeground}"
                                                FontFamily="Roboto"
                                                FontSize="12"
                                                Foreground="{StaticResource FormForeground}"
                                                Header="Presense Penalty">

                                                <wpf:SfRangeSlider
                                                    x:Name="PresenceSlider"
                                                    Width="240"
                                                    Height="75"
                                                    Margin="1"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    ActiveMinorTickStroke="{StaticResource WhiteForeground}"
                                                    ActiveTickStroke="{StaticResource WhiteForeground}"
                                                    Background="{DynamicResource BlueBorderBrush}"
                                                    Foreground="{StaticResource FormForeground}"
                                                    Maximum="2"
                                                    Minimum="-2"
                                                    MinorTickFrequency="2"
                                                    MinorTickLength="5"
                                                    MinorTickStroke="{StaticResource WhiteForeground}"
                                                    ShowValueLabels="True"
                                                    SnapsTo="Ticks"
                                                    TickFrequency="0.5"
                                                    TickPlacement="BottomRight"
                                                    TickStroke="{StaticResource WhiteForeground}"
                                                    ToolTip="Positive values creative output" />

                                            </GroupBox>

                                            <Separator
                                                Height="5"
                                                Background="{x:Null}"
                                                BorderBrush="{x:Null}"
                                                Foreground="{x:Null}" />

                                            <GroupBox
                                                x:Name="ProbsGroupBox"
                                                Height="95"
                                                Margin="1"
                                                Padding="1"
                                                HorizontalContentAlignment="Center"
                                                VerticalContentAlignment="Top"
                                                Background="{DynamicResource GroupBoxBackground}"
                                                BorderBrush="{DynamicResource MutedForeground}"
                                                FontFamily="Roboto"
                                                FontSize="12"
                                                Foreground="{StaticResource FormForeground}"
                                                Header="Top Log-Probability" Width="250">

                                                <wpf:SfRangeSlider
                                                    x:Name="TopLogProbSlider"
                                                    Height="75"
                                                    Margin="1,0,1,0"
                                                    ActiveMinorTickStroke="{DynamicResource WhiteForeground}"
                                                    ActiveTickStroke="{DynamicResource WhiteForeground}"
