<Window
    x:Class="Bubba.ChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Bubba"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:num="clr-namespace:System.Globalization;assembly=System.Runtime"
    xmlns:plt="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:sp="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:web="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
    xmlns:wpf="http://schemas.syncfusion.com/wpf"
    Title="Bubba"
    Width="1350"
    Height="700"
    MinWidth="1000"
    MinHeight="400"
    wpf:SfSkinManager.Theme="{wpf:SkinManager ThemeName=FluentDark}"
    Background="{StaticResource FormBackground}"
    BorderBrush="{StaticResource BlueBorderBrush}"
    BorderThickness="1,1,1,1"
    FontFamily="Roboto"
    Foreground="{StaticResource FormForeground}"
    Icon="/Resources/Assets/ApplicationImages/Bubba.png"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">


    <!--  ******************************************** RESOURCES *********************************************  -->

    <Window.Resources>
        <Style TargetType="{x:Type ToolTip}">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderBrush" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Background" Value="{StaticResource BlackBackground}" />
            <Setter Property="Foreground" Value="{StaticResource LightBlueBrush}" />
        </Style>

        <Style TargetType="{x:Type Thumb}">
            <Setter Property="Width" Value="13" />
            <Setter Property="Height" Value="13" />
            <Setter Property="BorderBrush" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Background" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border
                            x:Name="ThumbBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="12" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!--  *********************************************  CONTEXT MENU *************************************  -->

    <Window.ContextMenu>
        <ContextMenu x:Name="ChatWindowContextMenu">
            <wpf:MenuItemAdv
                Click="OnFileMenuOptionClick"
                Header="File"
                ToolTip="Browse File System">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FileItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnPromptOptionClick"
                Header="System Prompt"
                ToolTip="Change System Prompt">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ChatItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <wpf:MenuItemAdv
                Click="OnChromeOptionClick"
                Header="Chrome"
                ToolTip="Launch Chrome Browser">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ChromeItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnEdgeOptionClick"
                Header="Edge"
                ToolTip="Launch Edge Browser">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/EdgeItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnFirefoxOptionClick"
                Header="FireFox"
                ToolTip="Launch Firefox Browser">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FirefoxItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <wpf:MenuItemAdv
                Click="OnCalculatorMenuOptionClick"
                Header="Calculator"
                ToolTip="Open Calculator">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CalculatorItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnControlPanelOptionClick"
                Header="Control Panel"
                ToolTip="Windows Control Panel">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ControlPanelItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnTaskManagerOptionClick"
                Header="Task Manager"
                ToolTip="Windows Task Manager">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/TaskManagerItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <wpf:MenuItemAdv
                Click="OnCloseOptionClick"
                Header="Exit"
                ToolTip="Exit Application">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CloseItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

        </ContextMenu>
    </Window.ContextMenu>

    <!--  ********************************************* MAIN LAYOUT *************************************  -->

    <Grid>
        <Grid x:Name="WindowGrid">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="58.04" />
            </Grid.RowDefinitions>

            <!--  *********************************************  TOOLSTRIP *************************************  -->

            <ToolBar
                x:Name="ToolStrip"
                Grid.Row="1"
                Margin="0,5,5,5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{StaticResource FormBackground}"
                BorderBrush="{StaticResource FormBackground}"
                ClipToBounds="True"
                FontFamily="Roboto"
                Foreground="{StaticResource FormForeground}"
                SnapsToDevicePixels="True"
                UseLayoutRounding="True">

                <Label
                    x:Name="StatusLabel"
                    Width="180"
                    Height="30"
                    Padding="1,1,1,1"
                    VerticalContentAlignment="Center"
                    FontFamily="Roboto" />

                <Separator
                    Width="2"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />

                <b:ToolStripTextBox
                    x:Name="ToolStripTextBox"
                    Width="576"
                    Height="35"
                    Padding="15,1,1,1"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    Background="{StaticResource ControlInteriorBrush}"
                    BorderBrush="{StaticResource BlueBorderBrush}"
                    BorderThickness="2"
                    FontFamily="Roboto"
                    FontSize="14"
                    Foreground="{StaticResource WhiteForeground}"
                    SelectionBackgroundColor="{StaticResource ControlHoverBrush}"
                    SelectionBrush="{StaticResource GreenBackground}"
                    ToolTip="Input Text" />

                <Separator
                    Width="2"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />

                <b:ToolStripButton
                    x:Name="ToolStripSendButton"
                    Width="40"
                    Height="30"
                    Margin="5,1,5,1"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/PromptButton.png"
                    ToolTip="Send Text" />

                <b:ToolStripButton
                    x:Name="ToolStripRefreshButton"
                    Margin="5,1,5,1"
                    ImageSource="/Resources/Assets/MenuImages/RefreshItem.png"
                    ToolTip="Clear Propmt Text" />

                <b:ToolStripButton
                    x:Name="ToolStripDeleteButton"
                    Margin="5,1,5,1"
                    ImageSource="/Resources/Assets/ToolStripImages/PreviousButton.png"
                    ToolTip="Delete/Backspace" />

                <b:ToolStripButton
                    x:Name="ToolStripCancelButton"
                    Margin="5,1,5,1"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/StopButton.png"
                    ToolTip="Cancel" />

                <wpf:SfLinearProgressBar
                    x:Name="ProgressBar"
                    Width="240"
                    Height="28"
                    HorizontalContentAlignment="Right"
                    Background="{StaticResource ControlBackground}"
                    BorderBrush="{StaticResource ControlBackground}"
                    FontFamily="Roboto"
                    Foreground="{StaticResource BlueBorderBrush}"
                    ProgressColor="{StaticResource GreenBackground}"
                    TrackColor="{StaticResource BlueBackground}" />

                <Separator
                    Width="5"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />

                <b:ToolStripButton
                    x:Name="ToolStripMenuButton"
                    Width="40"
                    Height="30"
                    Margin="15,1,5,1"
                    HorizontalAlignment="Right"
                    HorizontalContentAlignment="Right"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/ToggleButton.png"
                    ToolTip="Show/Hide Toolbar" />
            </ToolBar>

            <!--  *********************************************  TAB CONTROL *************************************  -->

            <Grid Grid.Row="0" />

            <mah:MetroTabControl
                x:Name="TabControl"
                Grid.Row="0">

                <!--  ********************************************* CHAT TAB *************************************  -->

                <TabItem
                    x:Name="ChatTabItem"
                    Header="Chat">
                    <Grid
                        x:Name="ChatTabGrid"
                        Background="{StaticResource FormBackground}">
                        <GroupBox
                            x:Name="ChatLogGroupBox"
                            Width="1252"
                            Margin="30,37,0,33"
                            HorizontalAlignment="Left"
                            Background="{StaticResource GroupBoxBackground}"
                            Foreground="{StaticResource FormForeground}">

                            <wpf:SfTextBoxExt
                                x:Name="GptTextBox"
                                Height="469"
                                Margin="25,0,22,0"
                                Text=""
                                TextWrapping="Wrap" />

                        </GroupBox>

                        <Label
                            x:Name="TokenLabel"
                            Width="930"
                            Margin="30,574,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content=""
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}" />

                    </Grid>
                </TabItem>

                <!--  ********************************************* PARAMETER TAB *************************************  -->

                <TabItem
                    x:Name="ParameterTabItem"
                    Header="GPT">
                    <Grid
                        x:Name="ParameterTabGrid"
                        Height="Auto"
                        Background="{StaticResource FormBackground}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="61*" />
                            <RowDefinition Height="88*" />
                        </Grid.RowDefinitions>

                        <GroupBox
                            Grid.Row="1"
                            Width="287"
                            Margin="10,10,0,192"
                            HorizontalAlignment="Left"
                            Background="{StaticResource GroupBoxBackground}"
                            BorderBrush="{StaticResource MutedForeground}"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}"
                            Header="Randomness">
                            <wpf:SfRangeSlider
                                x:Name="TemperatureSlider"
                                Width="250"
                                Height="80"
                                Margin="10,0,0,0"
                                Padding="1,1,1,1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                ActiveMinorTickStroke="{StaticResource WhiteForeground}"
                                ActiveTickStroke="{StaticResource WhiteForeground}"
                                BorderThickness="0,0,0,0"
                                Foreground="{StaticResource FormForeground}"
                                LargeChange="0.5"
                                Maximum="2"
                                Minimum="-2"
                                MinorTickFrequency="2"
                                MinorTickLength="5"
                                MinorTickStroke="{StaticResource WhiteForeground}"
                                ShowValueLabels="True"
                                SmallChange="0.1"
                                SnapsTo="Ticks"
                                TickFrequency="0.5"
                                TickPlacement="BottomRight"
                                TickStroke="{StaticResource WhiteForeground}"
                                ToolTip="Lower values increase deterministic output"
                                ToolTipFormat="P"
                                Value="0.80" />

                        </GroupBox>

                        <GroupBox
                            Grid.Row="1"
                            Width="284"
                            Margin="443,176,0,26"
                            HorizontalAlignment="Left"
                            Background="{StaticResource GroupBoxBackground}"
                            BorderBrush="{StaticResource MutedForeground}"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}"
                            Header="Frequency Penalty">
                            <wpf:SfRangeSlider
                                x:Name="FrequencySlider"
                                Width="250"
                                Height="80"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                ActiveMinorTickStroke="{StaticResource WhiteForeground}"
                                ActiveTickStroke="{StaticResource WhiteForeground}"
                                AllowRangeDrag="True"
                                Foreground="{StaticResource FormForeground}"
                                Maximum="2"
                                Minimum="-2"
                                MinorTickFrequency="2"
                                MinorTickLength="5"
                                MinorTickStroke="{StaticResource WhiteForeground}"
                                ShowValueLabels="True"
                                SnapsTo="Ticks"
                                Tag="FrequencyPenalty"
                                TickFrequency="0.50"
                                TickPlacement="BottomRight"
                                TickStroke="{StaticResource WhiteForeground}"
                                ToolTip="Positive values decrease reptition"
                                Value="0.00" />
                        </GroupBox>

                        <GroupBox
                            Grid.Row="1"
                            Margin="10,176,0,26"
                            Background="{StaticResource GroupBoxBackground}"
                            BorderBrush="{StaticResource MutedForeground}"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}"
                            Header="Nucleus Sampling" HorizontalAlignment="Left" Width="287">
                            <wpf:SfRangeSlider
                                x:Name="TopPercentSlider"
                                Width="250"
                                Height="90"
                                Margin="13,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                ActiveMinorTickStroke="{StaticResource WhiteForeground}"
                                ActiveTickStroke="{StaticResource WhiteForeground}"
                                AllowRangeDrag="True"
                                Foreground="{StaticResource FormForeground}"
                                Maximum="1"
                                Minimum="0"
                                MinorTickFrequency="1"
                                MinorTickLength="5"
                                MinorTickStroke="{StaticResource WhiteForeground}"
                                ShowValueLabels="True"
                                SnapsTo="Ticks"
                                TickFrequency="0.10"
                                TickPlacement="BottomRight"
                                TickStroke="{StaticResource WhiteForeground}"
                                ToolTip="top p% probability mass"
                                Value="0.90" />
                        </GroupBox>

                        <GroupBox
                            Grid.Row="1"
                            Width="288"
                            Margin="439,10,0,192"
                            HorizontalAlignment="Left"
                            Background="{StaticResource GroupBoxBackground}"
                            BorderBrush="{StaticResource MutedForeground}"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}"
                            Header="Presense Penalty">
                            <wpf:SfRangeSlider
                                x:Name="PresenceSlider"
                                Width="250"
                                Height="80"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                ActiveMinorTickStroke="{StaticResource WhiteForeground}"
                                ActiveTickStroke="{StaticResource WhiteForeground}"
                                AllowRangeDrag="True"
                                Foreground="{StaticResource FormForeground}"
                                Maximum="2"
                                Minimum="-2"
                                MinorTickFrequency="2"
                                MinorTickLength="5"
                                MinorTickStroke="{StaticResource WhiteForeground}"
                                ShowValueLabels="True"
                                SnapsTo="Ticks"
                                TickFrequency="0.50"
                                TickPlacement="BottomRight"
                                TickStroke="{StaticResource WhiteForeground}"
                                ToolTip="Positive values creative output" />
                        </GroupBox>

                        <GroupBox
                            Grid.Row="1"
                            Margin="902,176,0,26"
                            Background="{StaticResource GroupBoxBackground}"
                            BorderBrush="{StaticResource MutedForeground}"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}"
                            Header="Speech Rate"
                            RenderTransformOrigin="0.5,0.5"
                            ToolTip="Speed" HorizontalAlignment="Left" Width="295">
                            <GroupBox.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform />
                                    <SkewTransform AngleX="0" />
                                    <RotateTransform />
                                    <TranslateTransform X="0" />
                                </TransformGroup>
                            </GroupBox.RenderTransform>

                            <wpf:SfRangeSlider
                                x:Name="SpeechRateSlider"
                                Width="250"
                                Height="80"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                ActiveMinorTickStroke="{StaticResource WhiteForeground}"
                                ActiveTickStroke="{StaticResource WhiteForeground}"
                                AllowRangeDrag="True"
                                Foreground="{StaticResource FormForeground}"
                                Maximum="4"
                                Minimum="1"
                                MinorTickFrequency="4"
                                MinorTickLength="4"
                                MinorTickStroke="{StaticResource WhiteForeground}"
                                ShowValueLabels="True"
                                SnapsTo="Ticks"
                                TickFrequency="1"
                                TickPlacement="BottomRight"
                                TickStroke="{StaticResource WhiteForeground}"
                                Value="1" />
                        </GroupBox>

                        <GroupBox
                            x:Name="LogProbsGroupBox"
                            Grid.Row="1"
                            Width="295"
                            Margin="902,10,0,192"
                            HorizontalAlignment="Left"
                            Background="{StaticResource GroupBoxBackground}"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}"
                            Header="Top Log-Probabilites">

                            <wpf:SfRangeSlider
                                x:Name="TopLogProbSlider"
                                Width="250"
                                Height="81"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                Maximum="20"
                                Minimum="0"
                                MinorTickFrequency="1"
                                ShowValueLabels="True"
                                TickFrequency="2"
                                TickPlacement="BottomRight"
                                Value="40" />
                        </GroupBox>

                        <Grid
                            x:Name="SystemGrid"
                            Grid.Row="0"
                            Margin="0,0,10,10"
                            ClipToBounds="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="415*" />
                                <ColumnDefinition Width="249*" />
                                <ColumnDefinition Width="221*" />
                                <ColumnDefinition Width="215*" />
                                <ColumnDefinition Width="198*" />
                            </Grid.ColumnDefinitions>


                            <GroupBox
                                x:Name="ImageSizeGroup"
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                Margin="252,0,15,5"
                                Background="{StaticResource GroupBoxBackground}"
                                FontFamily="Roboto"
                                FontSize="14"
                                Foreground="{StaticResource FormForeground}"
                                Header="Image">
                                <Canvas
                                    x:Name="VisionCanvas"
                                    Height="186">

                                    <ComboBox
                                        x:Name="ImageSizeDropDown"
                                        Canvas.Left="16"
                                        Canvas.Top="10"
                                        Width="141"
                                        Height="40"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Background="{StaticResource ControlInteriorBrush}"
                                        BorderBrush="{StaticResource BlueBorderBrush}"
                                        BorderThickness="1"
                                        FontFamily="Roboto"
                                        Text="    Sizes" />

                                    <ComboBox
                                        x:Name="ImageQualityDropDown"
                                        Canvas.Left="16"
                                        Canvas.Top="76"
                                        Width="141"
                                        Height="40"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Background="{StaticResource ControlInteriorBrush}"
                                        BorderBrush="{StaticResource BlueBorderBrush}"
                                        BorderThickness="1"
                                        Tag="Quality"
                                        Text="    Quality"
                                        ToolTip="Select Image Quality">

                                        <ComboBoxItem
                                            Width="Auto"
                                            Height="40"
                                            Content="standard" />

                                        <ComboBoxItem
                                            Width="Auto"
                                            Height="40"
                                            Content="hd" />
                                    </ComboBox>

                                    <ComboBox
                                        x:Name="ImageDetailDropDown"
                                        Canvas.Left="16"
                                        Canvas.Top="141"
                                        Width="141"
                                        Height="40"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Background="{StaticResource ControlInteriorBrush}"
                                        BorderBrush="{StaticResource BlueBorderBrush}"
                                        BorderThickness="1">

                                        <ComboBoxItem
                                            Width="Auto"
                                            Height="40"
                                            Content="low" />

                                        <ComboBoxItem
                                            Width="Auto"
                                            Height="40"
                                            Content="medium" />

                                        <ComboBoxItem
                                            Width="Auto"
                                            Height="40"
                                            Content="high" />
                                    </ComboBox>
                                </Canvas>
                            </GroupBox>


                            <GroupBox
                                x:Name="OptionsGroupBox"
                                Grid.Column="4"
                                Margin="0,0,10,5"
                                Background="{StaticResource GroupBoxBackground}"
                                BorderBrush="{StaticResource MutedForeground}"
                                FontFamily="Roboto"
                                FontSize="14"
                                Foreground="{StaticResource FormForeground}"
                                Header="Options">
                                <Canvas>
                                    <wpf:IntegerTextBox
                                        x:Name="MaxTokenTextBox"
                                        Canvas.Left="64"
                                        Canvas.Top="15"
                                        Width="85"
                                        Height="40"
                                        Padding="5,1,1,1"
                                        HorizontalAlignment="Center"
                                        Background="{StaticResource ControlInteriorBrush}"
                                        BorderBrush="{StaticResource BlueBorderBrush}"
                                        BorderThickness="1"
                                        ClipToBounds="True"
                                        FontFamily="Roboto"
                                        FontSize="12"
                                        MaxValue="14000"
                                        MinValue="1"
                                        NumberGroupSeparator=","
                                        ShowSpinButton="True"
                                        Tag="max_completion_tokens"
                                        Text=""
                                        TextWrapping="Wrap"
                                        ToolTip="Upper Limit on Tokens"
                                        UseNullOption="True"
                                        WatermarkTextIsVisible="True"
                                        Value="12000" />

                                    <ComboBox
                                        x:Name="EffortDropDown"
                                        Canvas.Left="20"
                                        Canvas.Top="85"
                                        Width="132"
                                        Height="40"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Background="{StaticResource ControlInteriorBrush}"
                                        BorderBrush="{StaticResource BlueBorderBrush}"
                                        BorderThickness="1"
                                        Tag="ReasoningEffort"
                                        ToolTip="Reasoning Effort" />

                                    <Label
                                        x:Name="TokenLabel1"
                                        Canvas.Left="15"
                                        Canvas.Top="20"
                                        Width="39"
                                        Height="24"
                                        Padding="0,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Right"
                                        VerticalContentAlignment="Center"
                                        Content="Tokens"
                                        FontFamily="Roboto"
                                        Foreground="{StaticResource FormForeground}"
                                        ScrollViewer.CanContentScroll="False"
                                        UseLayoutRounding="True" />

                                    <ComboBox
                                        x:Name="VoicesDropDown"
                                        Canvas.Left="20"
                                        Canvas.Top="145"
                                        Width="132"
                                        Height="40"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Background="{StaticResource ControlInteriorBrush}"
                                        BorderBrush="{StaticResource BlueBorderBrush}"
                                        BorderThickness="1"
                                        FontFamily="Roboto"
                                        Tag="Voice"
                                        Text="  Voices"
                                        ToolTip="AI Voices" />
                                </Canvas>
                            </GroupBox>


                            <GroupBox
                                x:Name="InputGroupBox"
                                Grid.Column="3"
                                Margin="0,0,10,5"
                                Background="{StaticResource GroupBoxBackground}"
                                BorderBrush="{StaticResource MutedForeground}"
                                FontFamily="Roboto"
                                FontSize="14"
                                Foreground="{StaticResource FormForeground}"
                                Header="IO">
                                <Canvas
                                    x:Name="InputOutputCanvas"
                                    Width="187"
                                    Height="211"
                                    HorizontalAlignment="Left">

                                    <CheckBox
                                        x:Name="StoreCheckBox"
                                        Canvas.Left="10"
                                        Canvas.Top="36"
                                        Width="63"
                                        Height="20"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Content="Store"
                                        FontFamily="Roboto"
                                        FontSize="14"
                                        Foreground="{StaticResource FormForeground}"
                                        ToolTip="Store Output" />

                                    <CheckBox
                                        x:Name="StreamCheckBox"
                                        Canvas.Left="10"
                                        Canvas.Top="74"
                                        Width="63"
                                        Height="20"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Content="Stream"
                                        FontFamily="Roboto"
                                        FontSize="14"
                                        Foreground="{StaticResource FormForeground}"
                                        ToolTip="Stream Output" />

                                    <CheckBox
                                        x:Name="ListenCheckBox"
                                        Canvas.Left="10"
                                        Canvas.Top="106"
                                        Width="63"
                                        Height="24"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Content="Listen"
                                        FontFamily="Roboto"
                                        FontSize="14"
                                        Foreground="{StaticResource FormForeground}"
                                        ToolTip="Activate Audio" />


                                    <CheckBox
                                        x:Name="MuteCheckBox"
                                        Canvas.Left="10"
                                        Canvas.Top="150"
                                        Width="63"
                                        Height="24"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Content="Mute"
                                        FontFamily="Roboto"
                                        FontSize="14"
                                        Foreground="{StaticResource FormForeground}"
                                        ToolTip="Deactivate Audio" />

                                    <b:MetroTile
                                        x:Name="GptFileButton"
                                        Canvas.Left="116"
                                        Canvas.Top="129"
                                        Width="62"
                                        Height="45"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Background="{DynamicResource GroupBoxBackground}"
