                            BorderThickness="2" />
                        <Canvas
                            x:Name="DataFilterGrid"
                            Grid.Column="1">

                            <b:MetroDropDown
                                x:Name="DataComboBox"
                                Canvas.Left="30"
                                Canvas.Top="64"
                                Width="243"
                                Height="43"
                                BorderBrush="{StaticResource BlueBorderBrush}"
                                Background="{StaticResource ControlInteriorBrush}"
                                HorizontalAlignment="Left"
                                AllowMultiSelect="True"
                                DefaultText="ComboBox Items">
                                <wpf:ComboBoxItemAdv Content="Item 1" />
                                <wpf:ComboBoxItemAdv Content="Item 2" />
                                <wpf:ComboBoxItemAdv Content="Item 3" />
                                <wpf:ComboBoxItemAdv Content="Item 4" />
                                <wpf:ComboBoxItemAdv Content="Item 5" />
                            </b:MetroDropDown>

                            <b:MetroListBox
                                Canvas.Left="31"
                                Canvas.Top="128"
                                Width="243"
                                Height="384"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top" />
                        </Canvas>
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                        </Grid>
                    </Grid>
                </TabItem>

                <!--  ********************************************* PLOT TAB *************************************  -->

                <TabItem
                    x:Name="PlotTabItem"
                    Foreground="{StaticResource FormForeground}"
                    Header="Graph"
                    Tag="Graph">

                    <Grid
                        x:Name="PlotTabGrid"
                        Background="{StaticResource FormBackground}">

                        <sp:WpfPlot
                            x:Name="Plotter"
                            Width="1210"
                            Height="530"
                            Margin="40,42,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            BorderBrush="{StaticResource BlueBorderBrush}"
                            Foreground="{StaticResource FormForeground}" />


                    </Grid>
                </TabItem>

                <!--  ********************************************* BUSY TAB *************************************  -->

                <TabItem
                    x:Name="BusyTabItem"
                    BorderBrush="{x:Null}"
                    Foreground="{StaticResource FormForeground}"
                    Header="Busy"
                    Tag="Busy">

                    <Grid
                        x:Name="BusyTabGrid"
                        Background="{StaticResource FormBackground}">

                        <Image
                            Width="1288"
                            Height="Auto"
                            Margin="10,5,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Source="/Resources/Assets/LoaderImages/Processing.gif"
                            Stretch="Fill" />
                    </Grid>

                </TabItem>

            </mah:MetroTabControl>
        </Grid>
    </Grid>
</Window>
