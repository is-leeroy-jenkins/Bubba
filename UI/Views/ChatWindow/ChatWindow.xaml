<Window
    x:Class="Bubba.ChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Bubba"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:num="clr-namespace:System.Globalization;assembly=System.Runtime"
    xmlns:plt="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:sp="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:web="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
    xmlns:wpf="http://schemas.syncfusion.com/wpf"
    Title="Bubba"
    Width="1350"
    Height="700"
    MinWidth="1000"
    MinHeight="400"
    wpf:SfSkinManager.Theme="{wpf:SkinManager ThemeName=FluentDark}"
    Background="{StaticResource FormBackground}"
    BorderBrush="{StaticResource BlueBorderBrush}"
    BorderThickness="1,1,1,1"
    FontFamily="Roboto"
    Foreground="{StaticResource FormForeground}"
    Icon="/Resources/Assets/ApplicationImages/Bubba.png"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">


    <!--  ******************************************** RESOURCES *********************************************  -->

    <Window.Resources>
        <Style TargetType="{x:Type ToolTip}">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderBrush" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Background" Value="{StaticResource BlackBackground}" />
            <Setter Property="Foreground" Value="{StaticResource LightBlueBrush}" />
        </Style>

        <Style TargetType="{x:Type Thumb}">
            <Setter Property="Width" Value="13" />
            <Setter Property="Height" Value="13" />
            <Setter Property="BorderBrush" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Background" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border
                            x:Name="ThumbBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="12" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!--  *********************************************  CONTEXT MENU *************************************  -->

    <Window.ContextMenu>
        <ContextMenu x:Name="ChatWindowContextMenu">
            <wpf:MenuItemAdv
                Click="OnFileMenuOptionClick"
                Header="File"
                ToolTip="Browse File System">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FileItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnPromptOptionClick"
                Header="System Prompt"
                ToolTip="Change System Prompt">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ChatItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <wpf:MenuItemAdv
                Click="OnChromeOptionClick"
                Header="Chrome"
                ToolTip="Launch Chrome Browser">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ChromeItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnEdgeOptionClick"
                Header="Edge"
                ToolTip="Launch Edge Browser">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/EdgeItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnFirefoxOptionClick"
                Header="FireFox"
                ToolTip="Launch Firefox Browser">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FirefoxItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <wpf:MenuItemAdv
                Click="OnCalculatorMenuOptionClick"
                Header="Calculator"
                ToolTip="Open Calculator">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CalculatorItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnControlPanelOptionClick"
                Header="Control Panel"
                ToolTip="Windows Control Panel">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ControlPanelItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnTaskManagerOptionClick"
                Header="Task Manager"
                ToolTip="Windows Task Manager">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/TaskManagerItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <wpf:MenuItemAdv
                Click="OnCloseOptionClick"
                Header="Exit"
                ToolTip="Exit Application">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CloseItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

        </ContextMenu>
    </Window.ContextMenu>

    <!--  ********************************************* MAIN LAYOUT *************************************  -->

    <Grid>
        <Grid x:Name="WindowGrid">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="58.04" />
            </Grid.RowDefinitions>

            <!--  *********************************************  TOOLSTRIP *************************************  -->

            <ToolBar
                x:Name="ToolStrip"
                Grid.Row="1"
                Margin="0,5,5,5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{StaticResource FormBackground}"
                BorderBrush="{StaticResource FormBackground}"
                ClipToBounds="True"
                FontFamily="Roboto"
                Foreground="{StaticResource FormForeground}"
                SnapsToDevicePixels="True"
                UseLayoutRounding="True">

                <Label
                    x:Name="StatusLabel"
                    Width="180"
                    Height="30"
                    Padding="1,1,1,1"
                    VerticalContentAlignment="Center"
                    FontFamily="Roboto" />

                <Separator
                    Width="2"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />

                <b:ToolStripTextBox
                    x:Name="ToolStripTextBox"
                    Width="576"
                    Height="35"
                    Padding="15,1,1,1"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    Background="{StaticResource ControlInteriorBrush}"
                    BorderBrush="{StaticResource BlueBorderBrush}"
                    BorderThickness="1"
                    FontFamily="Roboto"
                    FontSize="14"
                    Foreground="{StaticResource WhiteForeground}"
                    SelectionBackgroundColor="{StaticResource ControlHoverBrush}"
                    SelectionBrush="{StaticResource GreenBackground}"
                    TextChanged="OnToolStripTextBoxTextChanged"
                    ToolTip="Input Text" />

                <Separator
                    Width="2"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />

                <b:ToolStripButton
                    x:Name="ToolStripSendButton"
                    Width="40"
                    Height="30"
                    Margin="5,1,5,1"
                    Click="OnSendButtonClick"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/PromptButton.png"
                    ToolTip="Send Text" />

                <b:ToolStripButton
                    x:Name="ToolStripRefreshButton"
                    Margin="5,1,5,1"
                    Click="OnToolStripRefreshButtonClick"
                    ImageSource="/Resources/Assets/MenuImages/RefreshItem.png"
                    ToolTip="Clear Propmt Text" />

                <b:ToolStripButton
                    x:Name="ToolStripDeleteButton"
                    Margin="5,1,5,1"
                    ImageSource="/Resources/Assets/ToolStripImages/PreviousButton.png"
                    ToolTip="Delete/Backspace" />

                <b:ToolStripButton
                    x:Name="ToolStripCancelButton"
                    Margin="5,1,5,1"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/StopButton.png"
                    ToolTip="Cancel" />

                <wpf:SfLinearProgressBar
                    x:Name="ProgressBar"
                    Width="240"
                    Height="28"
                    HorizontalContentAlignment="Right"
                    Background="{StaticResource ControlBackground}"
                    BorderBrush="{StaticResource ControlBackground}"
                    FontFamily="Roboto"
                    Foreground="{StaticResource BlueBorderBrush}"
                    ProgressColor="{StaticResource GreenBackground}"
                    TrackColor="{StaticResource BlueBackground}" />

                <Separator
                    Width="5"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />

                <b:ToolStripButton
                    x:Name="ToolStripMenuButton"
                    Width="40"
                    Height="30"
                    Margin="15,1,5,1"
                    HorizontalAlignment="Right"
                    HorizontalContentAlignment="Right"
                    Click="OnToggleButtonClick"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/ToggleButton.png"
                    ToolTip="Show/Hide Toolbar" />
            </ToolBar>

            <!--  *********************************************  TAB CONTROL *************************************  -->

            <Grid Grid.Row="0" />

            <mah:MetroTabControl
                x:Name="TabControl"
                Grid.Row="0"
                Foreground="{StaticResource FormForeground}">

                <!--  ********************************************* CHAT TAB *************************************  -->

                <TabItem
                    x:Name="ChatTab"
                    Foreground="{StaticResource FormForeground}"
                    Header="Chat"
                    Tag="Chat">
                    <Grid
                        x:Name="ChatTabGrid"
                        Background="{StaticResource FormBackground}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="935*" />
                            <ColumnDefinition Width="403*" />
                        </Grid.ColumnDefinitions>

                        <wpf:SfTextBoxExt
                            x:Name="ChatTextBox"
                            Grid.Column="0"
                            Width="920"
                            Height="572"
                            Margin="5,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text=""
                            TextWrapping="Wrap" />

                        <mah:MetroTabControl
                            x:Name="ParamTabControl"
                              Background="{DynamicResource BackgroundBrush}"
                            Grid.Column="1">

                            <TabItem
                                x:Name="RequestTab"
                                Margin="3,3,3,3"
                                Background="{DynamicResource BackgroundBrush}"
                                Foreground="{DynamicResource FormForeground}"
                                Header="Request">

                                <Grid Background="{DynamicResource BackgroundBrush}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <Canvas Margin="10,10,198,350">

                                        <StackPanel
                                            Canvas.Left="5"
                                            Canvas.Top="10"
                                            Width="175"
                                            Height="169"
                                            HorizontalAlignment="Stretch">

                                            <b:MetroDropDown
                                                x:Name="RequestDropDown"
                                                Width="160"
                                                Height="40"
                                                Margin="3,10,10,3"
                                                HorizontalAlignment="Stretch"
                                                Background="{StaticResource ControlInteriorBrush}"
                                                BorderBrush="{StaticResource BlueBorderBrush}"
                                                BorderThickness="1"
                                                FontFamily="Roboto"
                                                Text="    API Requests" />

                                            <b:MetroDropDown
                                                x:Name="ModelDropDown"
                                                Width="160"
                                                Height="40"
                                                Margin="3,10,10,3"
                                                HorizontalAlignment="Stretch"
                                                Background="{StaticResource ControlInteriorBrush}"
                                                BorderBrush="{StaticResource BlueBorderBrush}"
                                                BorderThickness="1"
                                                FontFamily="Roboto"
                                                Text="    Language Models" />

                                            <b:MetroDropDown
                                                x:Name="ResponseFormatDropDown"
                                                Width="160"
                                                Height="40"
                                                Margin="3,10,10,3"
                                                HorizontalAlignment="Stretch"
                                                Background="{StaticResource ControlInteriorBrush}"
                                                BorderBrush="{StaticResource BlueBorderBrush}"
                                                BorderThickness="1"
                                                FontFamily="Roboto"
                                                Text="    Response Formats" />

                                        </StackPanel>
                                    </Canvas>

                                    <Canvas 
                                        Margin="200,20,10,375">

                                        <StackPanel
                                            Width="173"
                                            Height="149" HorizontalAlignment="Left" VerticalAlignment="Center">

                                            <CheckBox
                                                x:Name="StoreCheck"
                                                Width="96"
                                                Height="35"
                                                HorizontalAlignment="Center"
                                                Content="Stream" />

                                            <CheckBox
                                                x:Name="StreamCheck"
                                                Width="96"
                                                Height="35"
                                                Content="Store" />

                                            <CheckBox
                                                x:Name="MuteCheck"
                                                Width="96"
                                                Height="35"
                                                Content="Mute" />

                                            <CheckBox
                                                x:Name="ListenCheck"
                                                Width="96"
                                                Height="35"
                                                Content="Listen" />

                                        </StackPanel>

                                    </Canvas>

                                    <Canvas Margin="201,214,10,165" />

                                    <StackPanel Margin="201,230,10,165">

                                        <b:MetroDropDown
                                            x:Name="ImageDetailDropDown"
                                            Width="160"
                                            Height="40"
                                            Margin="10,3,10,3"
                                            HorizontalAlignment="Stretch"
                                            Background="{StaticResource ControlInteriorBrush}"
                                            BorderBrush="{StaticResource BlueBorderBrush}"
                                            BorderThickness="1"
                                            FontFamily="Roboto"
                                            Text="    Detail" />

                                        <b:MetroDropDown
                                            x:Name="ImageQualityDropDown"
                                            Width="160"
                                            Height="40"
                                            Margin="10,3,10,3"
                                            HorizontalAlignment="Stretch"
                                            Background="{StaticResource ControlInteriorBrush}"
                                            BorderBrush="{StaticResource BlueBorderBrush}"
                                            BorderThickness="1"
                                            FontFamily="Roboto"
                                            Text="    Qualtiy" />

                                        <b:MetroDropDown
                                            x:Name="ImageSizeDropDown"
                                            Width="160"
                                            Height="40"
                                            Margin="10,3,10,3"
                                            HorizontalAlignment="Stretch"
                                            Background="{StaticResource ControlInteriorBrush}"
                                            BorderBrush="{StaticResource BlueBorderBrush}"
                                            BorderThickness="1"
                                            FontFamily="Roboto"
                                            Text="   Size" />

                                    </StackPanel>

                                    <Canvas Margin="10,230,197,165" />

                                    <StackPanel Margin="10,230,197,180">

                                        <b:MetroDropDown
                                            x:Name="ResponseDropDown"
                                            Width="160"
                                            Height="40"
                                            Margin="10,3,10,3"
                                            HorizontalAlignment="Stretch"
                                            Background="{StaticResource ControlInteriorBrush}"
                                            BorderBrush="{StaticResource BlueBorderBrush}"
                                            BorderThickness="1"
                                            FontFamily="Roboto"
                                            Text="    Response Format" />

                                        <b:MetroDropDown
                                            x:Name="AudioFormatDropDown"
                                            Width="160"
                                            Height="40"
                                            Margin="10,3,10,3"
                                            HorizontalAlignment="Stretch"
                                            Background="{StaticResource ControlInteriorBrush}"
                                            BorderBrush="{StaticResource BlueBorderBrush}"
                                            BorderThickness="1"
                                            FontFamily="Roboto"
                                            Text="    Audio Format" />

                                        <b:MetroDropDown
                                            x:Name="ImageFormatDropDown"
                                            Width="160"
                                            Height="40"
                                            Margin="10,3,10,3"
                                            HorizontalAlignment="Stretch"
                                            Background="{StaticResource ControlInteriorBrush}"
                                            BorderBrush="{StaticResource BlueBorderBrush}"
                                            BorderThickness="1"
                                            FontFamily="Roboto"
                                            Text="   Image Format" />

                                    </StackPanel>

                                    <Canvas
                                        Canvas.Left="175"
                                        Canvas.Top="394"
                                        Height="140"
                                        Margin="14,409,218,0"
                                        VerticalAlignment="Top">

                                        <StackPanel/>
                                        <wpf:IntegerTextBox
                                                x:Name="MaxTokenTextBox"
                                                Canvas.Left="77"
                                                Width="84"
                                                Height="40"
                                                Padding="5,1,1,1"
                                                HorizontalAlignment="Left"
                                                Background="{StaticResource ControlInteriorBrush}"
                                                BorderBrush="{StaticResource BlueBorderBrush}"
                                                BorderThickness="1"
                                                ClipToBounds="True"
                                                FontFamily="Roboto"
                                                FontSize="12"
                                                MaxValue="14000"
                                                MinValue="1"
                                                NumberGroupSeparator=","
                                                ShowSpinButton="True"
                                                Tag="max_completion_tokens"
                                                Text=""
                                                TextWrapping="Wrap"
                                                ToolTip="Upper Limit on Token Usage"
                                                UseNullOption="True"
                                                WatermarkTextIsVisible="True"
                                                Value="10000" />

                                    </Canvas>
                                    <StackPanel
                                        Width="192"
                                        Height="140"
                                        Margin="0,0,0,10"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom">

                                        <b:MetroDropDown
                                            x:Name="ReasoingDropDown"
                                            Width="160"
                                            Height="40"
                                            Margin="10,3,10,3"
                                            HorizontalAlignment="Stretch"
                                            Background="{StaticResource ControlInteriorBrush}"
                                            BorderBrush="{StaticResource BlueBorderBrush}"
                                            BorderThickness="1"
                                            FontFamily="Roboto"
                                            Text="    Reasoning Effort" />

                                        <b:MetroDropDown
                                            x:Name="VoiceDropDown"
                                            Width="160"
                                            Height="40"
                                            Margin="10,3,10,3"
                                            HorizontalAlignment="Stretch"
                                            Background="{StaticResource ControlInteriorBrush}"
                                            BorderBrush="{StaticResource BlueBorderBrush}"
                                            BorderThickness="1"
                                            FontFamily="Roboto"
                                            Text="   Sound/Voice" />

                                    </StackPanel>

                                </Grid>

                            </TabItem>
                            <TabItem
                                x:Name="SettingTab"
                                Margin="3,3,3,3"
                                Background="{DynamicResource BackgroundBrush}"
                                Foreground="{DynamicResource FormForeground}"
                                Header="Setting" />
                            <TabItem
                                x:Name="AudioTab"
                                Margin="3,3,3,3"
                                Background="{DynamicResource BackgroundBrush}"
                                Foreground="{DynamicResource FormForeground}"
                                Header="Audio" />
                            <TabItem
                                x:Name="ImageTab"
                                Margin="3,3,3,3"
                                Background="{DynamicResource BackgroundBrush}"
                                Foreground="{DynamicResource FormForeground}"
                                Header="Image">
                                <Grid Background="#FFE5E5E5" />
                            </TabItem>
                        </mah:MetroTabControl>

                    </Grid>
                </TabItem>

                <!--  ********************************************* PARAMETER TAB *************************************  -->

                <TabItem
                    x:Name="ParameterTab"
                    Height="22"
                    VerticalAlignment="Top"
                    Foreground="{StaticResource FormForeground}"
                    Header="GPT"
                    Tag="GPT">
                    <Grid
                        x:Name="ParameterTabGrid"
                        Height="Auto"
                        Background="{StaticResource FormBackground}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="61*" />
                            <RowDefinition Height="88*" />
                        </Grid.RowDefinitions>

                        <GroupBox
                            Grid.Row="1"
                            Width="415"
                            Margin="10,10,0,192"
                            HorizontalAlignment="Left"
                            Background="{StaticResource GroupBoxBackground}"
                            BorderBrush="{StaticResource MutedForeground}"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}"
                            Header="Randomness">
                            <wpf:SfRangeSlider
                                x:Name="TemperatureSlider"
                                Width="250"
                                Height="80"
                                Margin="10,0,0,0"
                                Padding="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                ActiveMinorTickStroke="{StaticResource WhiteForeground}"
                                ActiveTickStroke="{StaticResource WhiteForeground}"
                                Background="{DynamicResource BlueBorderBrush}"
                                BorderThickness="1"
                                Foreground="{StaticResource FormForeground}"
                                LargeChange="0.25"
                                Maximum="2"
                                Minimum="-2"
                                MinorTickFrequency="2"
                                MinorTickLength="5"
                                MinorTickStroke="{StaticResource WhiteForeground}"
                                ShowRange="True"
                                ShowValueLabels="True"
                                SmallChange="0.05"
                                SnapsTo="Ticks"
                                TickFrequency="0.275"
                                TickPlacement="BottomRight"
                                TickStroke="{StaticResource WhiteForeground}"
                                ToolTip="Lower values increase deterministic output"
                                ToolTipFormat="P"
                                Value="0.08" />

                        </GroupBox>

                        <GroupBox
                            Grid.Row="1"
                            Width="415"
                            Margin="443,176,0,26"
                            HorizontalAlignment="Left"
                            Background="{StaticResource GroupBoxBackground}"
                            BorderBrush="{StaticResource MutedForeground}"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}"
                            Header="Frequency Penalty">
                            <wpf:SfRangeSlider
                                x:Name="FrequencySlider"
                                Width="250"
                                Height="80"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                ActiveMinorTickStroke="{StaticResource WhiteForeground}"
                                ActiveTickStroke="{StaticResource WhiteForeground}"
                                Background="{DynamicResource BlueBorderBrush}"
                                Foreground="{StaticResource FormForeground}"
                                Maximum="2"
                                Minimum="-2"
                                MinorTickFrequency="2"
                                MinorTickLength="5"
                                MinorTickStroke="{StaticResource WhiteForeground}"
                                ShowValueLabels="True"
                                SnapsTo="Ticks"
                                Tag="FrequencyPenalty"
                                TickFrequency="0.295"
                                TickPlacement="BottomRight"
                                TickStroke="{StaticResource WhiteForeground}"
                                ToolTip="Positive values decrease reptition"
                                Value="0.00" />
                        </GroupBox>

                        <GroupBox
                            Grid.Row="1"
                            Width="415"
                            Margin="10,176,0,26"
                            HorizontalAlignment="Left"
                            Background="{StaticResource GroupBoxBackground}"
                            BorderBrush="{StaticResource MutedForeground}"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}"
                            Header="Nucleus Sampling">
                            <wpf:SfRangeSlider
                                x:Name="TopPercentSlider"
                                Width="250"
                                Height="90"
                                Margin="13,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                ActiveMinorTickStroke="{StaticResource WhiteForeground}"
                                ActiveTickStroke="{StaticResource WhiteForeground}"
                                AllowRangeDrag="True"
                                Background="{DynamicResource BlueBorderBrush}"
                                Foreground="{StaticResource FormForeground}"
                                Maximum="1"
                                Minimum="0"
                                MinorTickFrequency="1"
                                MinorTickLength="5"
                                MinorTickStroke="{StaticResource WhiteForeground}"
                                ShowValueLabels="True"
                                SnapsTo="Ticks"
                                TickFrequency="0.075"
                                TickPlacement="BottomRight"
                                TickStroke="{StaticResource WhiteForeground}"
                                ToolTip="top p% probability mass"
                                Value="0.09" />
                        </GroupBox>

                        <GroupBox
                            Grid.Row="1"
                            Width="415"
                            Margin="439,10,0,192"
                            HorizontalAlignment="Left"
                            Background="{StaticResource GroupBoxBackground}"
                            BorderBrush="{StaticResource MutedForeground}"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}"
                            Header="Presense Penalty">
                            <wpf:SfRangeSlider
                                x:Name="PresenceSlider"
                                Width="250"
                                Height="80"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                ActiveMinorTickStroke="{StaticResource WhiteForeground}"
                                ActiveTickStroke="{StaticResource WhiteForeground}"
                                Background="{DynamicResource BlueBorderBrush}"
                                Foreground="{StaticResource FormForeground}"
                                Maximum="2"
                                Minimum="-2"
                                MinorTickFrequency="2"
                                MinorTickLength="5"
                                MinorTickStroke="{StaticResource WhiteForeground}"
                                ShowValueLabels="True"
                                SnapsTo="Ticks"
                                TickFrequency="0.295"
                                TickPlacement="BottomRight"
                                TickStroke="{StaticResource WhiteForeground}"
                                ToolTip="Positive values creative output" />
                        </GroupBox>

                        <GroupBox
                            Grid.Row="1"
                            Width="415"
                            Margin="902,176,0,26"
                            HorizontalAlignment="Left"
                            Background="{StaticResource GroupBoxBackground}"
                            BorderBrush="{StaticResource MutedForeground}"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}"
                            Header="Speech Rate"
                            RenderTransformOrigin="0.5,0.5"
                            ToolTip="Speed">
                            <GroupBox.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform />
                                    <SkewTransform AngleX="0" />
                                    <RotateTransform />
                                    <TranslateTransform X="0" />
                                </TransformGroup>
                            </GroupBox.RenderTransform>

                            <wpf:SfRangeSlider
                                x:Name="SpeechRateSlider"
                                Width="250"
                                Height="80"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                ActiveMinorTickStroke="{StaticResource WhiteForeground}"
                                ActiveTickStroke="{StaticResource WhiteForeground}"
                                Background="{DynamicResource BlueBorderBrush}"
                                Foreground="{StaticResource FormForeground}"
                                Maximum="4"
                                Minimum="1"
                                MinorTickFrequency="4"
                                MinorTickLength="4"
                                MinorTickStroke="{StaticResource WhiteForeground}"
                                ShowValueLabels="True"
                                SnapsTo="Ticks"
                                Tag="speed"
                                TickFrequency="1"
                                TickPlacement="BottomRight"
                                TickStroke="{StaticResource WhiteForeground}"
                                Value="1" />
                        </GroupBox>

                        <GroupBox
                            x:Name="LogProbsGroupBox"
                            Grid.Row="1"
                            Width="415"
                            Margin="902,10,0,192"
                            HorizontalAlignment="Left"
                            Background="{StaticResource GroupBoxBackground}"
                            FontFamily="Roboto"
