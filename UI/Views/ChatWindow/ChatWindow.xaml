                    MinimumNumberDecimalDigits="1"
                    NegativeForeground="{StaticResource RedForeground}"
                    NumberDecimalDigits="2"
                    SelectionOpacity="1"
                    SnapsToDevicePixels="True"
                    Tag="Temperature"
                    Text="{Binding Value, ElementName=TemperatureSlider, Mode=TwoWay, StringFormat=N1}"
                    ToolTip="A number between 0 and 2. Default=1"
                    UseNullOption="True"
                    ZeroColor="#FFEFA90D" />

                <wpf:SfRangeSlider
                    x:Name="TopPercentSlider"
                    Canvas.Left="242"
                    Canvas.Top="89"
                    Width="160"
                    Height="45"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
