<Window
    x:Class="Bubba.ChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Bubba"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:num="clr-namespace:System.Globalization;assembly=System.Runtime"
    xmlns:plt="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:sp="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:web="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
    xmlns:wpf="http://schemas.syncfusion.com/wpf"
    Title="Bubba"
    Width="1370"
    Height="720"
    MinWidth="1000"
    MinHeight="400"
    MaxWidth="1920"
    MaxHeight="1080"
    wpf:SfSkinManager.Theme="{wpf:SkinManager ThemeName=FluentDark}"
    Background="{StaticResource FormBackground}"
    BorderBrush="{StaticResource BlueBorderBrush}"
    BorderThickness="1,1,1,1"
    FontFamily="Roboto"
    Foreground="{StaticResource FormForeground}"
    Icon="/Resources/Assets/ApplicationImages/Bubba.png"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">


    <!--  ******************************************** RESOURCES *********************************************  -->

    <Window.Resources>
        <Style TargetType="{x:Type ToolTip}">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderBrush" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Background" Value="{StaticResource BlackBackground}" />
            <Setter Property="Foreground" Value="{StaticResource LightBlueBrush}" />
        </Style>

        <Style TargetType="{x:Type Thumb}">
            <Setter Property="Width" Value="13" />
            <Setter Property="Height" Value="13" />
            <Setter Property="BorderBrush" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Background" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border
                            x:Name="ThumbBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="12" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!--  *********************************************  CONTEXT MENU *************************************  -->

    <Window.ContextMenu>
        <ContextMenu x:Name="ChatWindowContextMenu">
            <wpf:MenuItemAdv
                Click="OnFileMenuOptionClick"
                Header="File"
                ToolTip="Browse File System">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FileItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnPromptOptionClick"
                Header="System Prompt"
                ToolTip="Change System Prompt">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ChatItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <wpf:MenuItemAdv
                Click="OnChromeOptionClick"
                Header="Chrome"
                ToolTip="Launch Chrome Browser">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ChromeItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnEdgeOptionClick"
                Header="Edge"
                ToolTip="Launch Edge Browser">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/EdgeItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnFirefoxOptionClick"
                Header="FireFox"
                ToolTip="Launch Firefox Browser">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FirefoxItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <wpf:MenuItemAdv
                Click="OnCalculatorMenuOptionClick"
                Header="Calculator"
                ToolTip="Open Calculator">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CalculatorItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnControlPanelOptionClick"
                Header="Control Panel"
                ToolTip="Windows Control Panel">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ControlPanelItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnTaskManagerOptionClick"
                Header="Task Manager"
                ToolTip="Windows Task Manager">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/TaskManagerItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <wpf:MenuItemAdv
                Click="OnCloseOptionClick"
                Header="Exit"
                ToolTip="Exit Application">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CloseItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

        </ContextMenu>
    </Window.ContextMenu>

    <!--  ********************************************* MAIN LAYOUT *************************************  -->

    <Grid>
        <Grid x:Name="WindowGrid">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="58.04" />
            </Grid.RowDefinitions>

            <!--  *********************************************  TOOLSTRIP *************************************  -->

            <ToolBar
                x:Name="ToolStrip"
                Grid.Row="1"
                Margin="0,5,5,5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{StaticResource FormBackground}"
                BorderBrush="{StaticResource FormBackground}"
                ClipToBounds="True"
                FontFamily="Roboto"
                Foreground="{StaticResource FormForeground}"
                SnapsToDevicePixels="True"
                UseLayoutRounding="True">

                <Label
                    x:Name="StatusLabel"
                    Width="140"
                    Height="30"
                    Padding="1,1,1,1"
                    VerticalContentAlignment="Center"
                    FontFamily="Roboto" />

                <Separator
                    Width="2"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />

                <b:ToolStripTextBox
                    x:Name="ToolStripTextBox"
                    Width="576"
                    Height="35"
                    Padding="15,1,1,1"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    Background="{StaticResource ControlInteriorBrush}"
                    BorderBrush="{StaticResource BlueBorderBrush}"
                    BorderThickness="1"
                    FontFamily="Roboto"
                    FontSize="16"
                    Foreground="{StaticResource WhiteForeground}"
                    SelectionBackgroundColor="{StaticResource ControlHoverBrush}"
                    SelectionBrush="{StaticResource GreenBackground}"
                    ToolTip="Input Text" />

                <Separator
                    Width="2"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />

                <b:ToolStripButton
                    x:Name="ToolStripSendButton"
                    Width="40"
                    Height="30"
                    Margin="5,1,5,1"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/PromptButton.png"
                    ToolTip="Send Text" />

                <b:ToolStripButton
                    x:Name="ToolStripRefreshButton"
                    Width="40"
                    Height="30"
                    ImageSource="/Resources/Assets/MenuImages/RefreshItem.png"
                    ToolTip="Clear Propmt Text" />

                <b:ToolStripButton
                    x:Name="ToolStripDeleteButton"
                    Width="40"
                    Height="34"
                    ImageSource="/Resources/Assets/ToolStripImages/PreviousButton.png"
                    ToolTip="Delete/Backspace" />

                <b:ToolStripButton
                    x:Name="ToolStripCancelButton"
                    Width="40"
                    Height="39"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/StopButton.png"
                    ToolTip="Cancel" />

                <b:ToolStripButton
                    x:Name="ToolStripRemoveButton"
                    Width="40"
                    Height="30"
                    Margin="5,1,5,1"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/DeleteButton.png"
                    ToolTip="Send Text" />

                <b:ToolStripButton
                    x:Name="ToolStripFileButton"
                    Width="40"
                    Height="30"
                    Margin="1,1,5,1"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/GptUploadButton.png"
                    ToolTip="GPT File" />

                <Separator
                    Width="5"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />

                <wpf:SfLinearProgressBar
                    x:Name="ProgressBar"
                    Width="200"
                    Height="28"
                    HorizontalContentAlignment="Right"
                    Background="{StaticResource ControlBackground}"
                    BorderBrush="{StaticResource ControlBackground}"
                    FontFamily="Roboto"
                    Foreground="{StaticResource BlueBorderBrush}"
                    ProgressColor="{StaticResource GreenBackground}"
                    TrackColor="{StaticResource BlueBackground}" />

                <Separator
                    Width="5"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />

                <b:ToolStripButton
                    x:Name="ToolStripMenuButton"
                    Width="40"
                    Height="30"
                    Margin="5,1,5,1"
                    HorizontalAlignment="Right"
                    HorizontalContentAlignment="Right"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/ToggleButton.png"
                    ToolTip="Show/Hide Toolbar" />
            </ToolBar>

            <!--  *********************************************  TAB CONTROL *************************************  -->

            <Grid Grid.Row="0" />

            <mah:MetroTabControl
                x:Name="TabControl"
                Grid.Row="0"
                mah:HeaderedControlHelper.HeaderFontFamily="Roboto"
                Foreground="{StaticResource FormForeground}"
                SelectedIndex="0">

                <!--  ********************************************* CHAT TAB *************************************  -->

                <TabItem
                    x:Name="ChatTab"
                    Foreground="{StaticResource BlueBorderBrush}"
                    Header="Chat"
                    Tag="Chat"
                    Margin="3"
                    ToolTip="AI Functionality">
                    <Grid
                        x:Name="ChatTabGrid"
                        Background="{StaticResource FormBackground}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="935*" />
                            <ColumnDefinition Width="403*" />
                        </Grid.ColumnDefinitions>

                        <wpf:SfTextBoxExt
                            x:Name="ChatTextBox"
                            Grid.Column="0"
                            Height="550"
                            Margin="5,0,14,0"
                            Padding="20,10,5,3"
                            VerticalAlignment="Center"
                            BorderBrush="{StaticResource BlueBorderBrush}"
                            BorderThickness="1"
                            FontSize="16"
                            Text=""
                            TextWrapping="Wrap" />

                        <mah:MetroTabControl
                            x:Name="ParamTabControl"
                            Grid.Column="1"
                            Background="{StaticResource BackgroundBrush}"
                            ScrollViewer.CanContentScroll="True"
                            TabStripMargin="0,5,1,5">

                            <TabItem
                                x:Name="RequestTab"
                                Margin="3"
                                Padding="10"
                                Background="{StaticResource BackgroundBrush}"
                                Foreground="{DynamicResource FormForeground}"
                                Header="Settings"
                                Tag="Settings"
                                ToolTip="General Options">

                                <Grid Background="{StaticResource BackgroundBrush}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <Canvas Margin="5">

                                        <StackPanel
                                            Canvas.Left="30"
                                            Width="270"
                                            Height="527"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            Background="{StaticResource FormBackground}">

                                            <Separator
                                                Height="35"
                                                Background="{x:Null}"
                                                BorderBrush="{x:Null}"
                                                Foreground="{x:Null}" />

                                            <Grid
                                                x:Name="ApiGrid"
                                                Height="40">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="8*" />
                                                    <ColumnDefinition Width="8*" />
                                                    <ColumnDefinition Width="11*" />
                                                </Grid.ColumnDefinitions>

                                                <CheckBox
                                                    x:Name="StreamCheckBox"
                                                    Width="65"
                                                    Height="40"
                                                    Margin="3,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    HorizontalContentAlignment="Left"
                                                    Content="Stream"
                                                    FontFamily="Roboto"
                                                    Foreground="{StaticResource FormForeground}"
                                                    IsChecked="False"
                                                    Tag="stream"
                                                    ToolTip="Streams the Response" />

                                                <CheckBox
                                                    x:Name="StoreCheckBox"
                                                    Grid.Column="1"
                                                    Width="65"
                                                    Height="40"
                                                    Margin="3,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    HorizontalContentAlignment="Left"
                                                    Content="Store"
                                                    FontFamily="Roboto"
                                                    Foreground="{StaticResource FormForeground}"
                                                    IsChecked="True"
                                                    Tag="store"
                                                    ToolTip="Save the chat" />

                                                <wpf:IntegerTextBox
                                                    x:Name="MaxTokenTextBox"
                                                    Grid.Column="2"
                                                    Width="90"
                                                    Height="35"
                                                    Margin="10,0,0,1"
                                                    HorizontalAlignment="Left"
                                                    HorizontalContentAlignment="Center"
                                                    AutomationProperties.HelpText="Maximum Tokens"
                                                    BorderBrush="{StaticResource BlueBorderBrush}"
                                                    FontFamily="Roboto"
                                                    ShowSpinButton="True"
                                                    TextWrapping="Wrap"
                                                    ToolTip="Maximum Completion Tokens"
                                                    UseNullOption="True"
                                                    WatermarkText="Max Tokens:"
                                                    WatermarkTextIsVisible="True"
                                                    Value="10000" />

                                            </Grid>

                                            <Separator
                                                Height="5"
                                                Background="{x:Null}"
                                                BorderBrush="{x:Null}"
                                                Foreground="{x:Null}" />

                                            <GroupBox
                                                x:Name="ApiGroupBox"
                                                Height="80"
                                                Margin="10,1,10,1"
                                                Padding="1"
                                                HorizontalContentAlignment="Stretch"
                                                VerticalContentAlignment="Stretch"
                                                Background="{StaticResource GroupBoxBackground}"
                                                BorderBrush="{StaticResource MutedForeground}"
                                                FontFamily="Roboto"
                                                FontSize="12"
                                                Foreground="{StaticResource FormForeground}"
                                                Header="AI Request">

                                                <b:MetroDropDown
                                                    x:Name="GenerationListBox"
                                                    Height="35"
                                                    Margin="3,3,3,3"
                                                    VerticalAlignment="Center"
                                                    VerticalContentAlignment="Center"
                                                    Background="{StaticResource ControlInteriorBrush}"
                                                    BorderBrush="{StaticResource BlueBorderBrush}"
                                                    FontSize="14"
                                                    Foreground="{StaticResource FormForeground}"
                                                    Text="Select API" />

                                            </GroupBox>

                                            <Separator
                                                Height="5"
                                                Background="{x:Null}"
                                                BorderBrush="{x:Null}"
                                                Foreground="{x:Null}" />

                                            <GroupBox
                                                x:Name="LanguageModelGroupBox"
                                                Height="80"
                                                Margin="10,1,10,1"
                                                Padding="1"
                                                HorizontalContentAlignment="Stretch"
                                                VerticalContentAlignment="Stretch"
                                                Background="{StaticResource GroupBoxBackground}"
                                                BorderBrush="{StaticResource MutedForeground}"
                                                FontFamily="Roboto"
                                                FontSize="12"
                                                Foreground="{StaticResource FormForeground}"
                                                Header="Language Models">

                                                <b:MetroDropDown
                                                    x:Name="ModelDropDown"
                                                    Height="35"
                                                    Margin="3,3,3,3"
                                                    VerticalAlignment="Center"
                                                    VerticalContentAlignment="Center"
                                                    Background="{StaticResource ControlInteriorBrush}"
                                                    BorderBrush="{StaticResource BlueBorderBrush}"
                                                    FontSize="14"
                                                    Foreground="{StaticResource FormForeground}"
                                                    Text="Select LLM" />

                                            </GroupBox>

                                            <Separator
                                                Height="10"
                                                Background="{x:Null}"
                                                BorderBrush="{x:Null}"
                                                Foreground="{StaticResource TransparentBrush}" />

                                            <GroupBox
                                                x:Name="ResponseFormatGroupBox"
                                                Height="80"
                                                Margin="10,1,10,1"
                                                Padding="1"
                                                HorizontalContentAlignment="Stretch"
                                                VerticalContentAlignment="Stretch"
                                                Background="{StaticResource GroupBoxBackground}"
                                                BorderBrush="{StaticResource MutedForeground}"
                                                FontFamily="Roboto"
                                                FontSize="12"
                                                Foreground="{StaticResource FormForeground}"
                                                Header="Response Format">

                                                <b:MetroDropDown
                                                    x:Name="ResponseFormatDropDown"
                                                    Height="35"
                                                    Margin="3,3,3,3"
                                                    VerticalAlignment="Center"
                                                    VerticalContentAlignment="Center"
                                                    Background="{StaticResource ControlInteriorBrush}"
                                                    BorderBrush="{StaticResource BlueBorderBrush}"
                                                    FontSize="14"
                                                    Foreground="{StaticResource FormForeground}"
                                                    Text="Select Format">

                                                    <b:MetroDropDownItem
                                                        Height="35"
                                                        Content="text"
                                                        FontFamily="Roboto"
                                                        FontSize="14"
                                                        Foreground="{StaticResource WhiteForeground}"
                                                        Tag="text" />

                                                    <b:MetroDropDownItem
                                                        Height="35"
                                                        Content="json_object"
                                                        FontFamily="Roboto"
                                                        FontSize="14"
                                                        Foreground="{StaticResource WhiteForeground}"
                                                        Tag="json_object" />

                                                    <b:MetroDropDownItem
                                                        Height="35"
                                                        Content="json_schema"
                                                        FontFamily="Roboto"
                                                        FontSize="14"
                                                        Foreground="{StaticResource WhiteForeground}"
                                                        Tag="json_schema" />


                                                    <b:MetroDropDownItem
                                                        Height="35"
                                                        Content="url"
                                                        FontFamily="Roboto"
                                                        FontSize="14"
                                                        Foreground="{StaticResource WhiteForeground}"
                                                        Tag="url" />

                                                    <b:MetroDropDownItem
                                                        Height="35"
                                                        Content="base64_json"
                                                        FontFamily="Roboto"
                                                        FontSize="14"
                                                        Foreground="{StaticResource WhiteForeground}"
                                                        Tag="base64_json" />

                                                </b:MetroDropDown>
                                            </GroupBox>

                                            <Separator
                                                Height="10"
                                                Background="{x:Null}"
                                                BorderBrush="{x:Null}"
                                                Foreground="{StaticResource TransparentBrush}" />

                                            <GroupBox
                                                x:Name="ReasoningGroupBox"
                                                Height="80"
                                                Margin="10,1,10,1"
                                                Padding="1"
                                                HorizontalContentAlignment="Stretch"
                                                VerticalContentAlignment="Stretch"
                                                Background="{StaticResource GroupBoxBackground}"
                                                BorderBrush="{StaticResource MutedForeground}"
                                                FontFamily="Roboto"
                                                FontSize="12"
                                                Foreground="{StaticResource FormForeground}"
                                                Header="Reasoning Effort">

                                                <b:MetroDropDown
                                                    x:Name="EffortDropDown"
                                                    Height="35"
                                                    Margin="3,3,3,3"
                                                    VerticalAlignment="Center"
                                                    VerticalContentAlignment="Center"
                                                    Background="{StaticResource ControlInteriorBrush}"
                                                    BorderBrush="{StaticResource BlueBorderBrush}"
                                                    FontSize="14"
                                                    Foreground="{StaticResource FormForeground}"
                                                    Text="Select Effort">

                                                    <b:MetroDropDownItem
                                                        Height="35"
                                                        Background="{StaticResource ControlInteriorBrush}"
                                                        Content="low"
                                                        FontFamily="Roboto"
                                                        FontSize="14"
                                                        Foreground="{StaticResource WhiteForeground}"
                                                        Tag="low" />

                                                    <b:MetroDropDownItem
                                                        Height="35"
                                                        Background="{StaticResource ControlInteriorBrush}"
                                                        Content="medium"
                                                        FontFamily="Roboto"
                                                        FontSize="14"
                                                        Foreground="{StaticResource WhiteForeground}"
                                                        Tag="medium" />

                                                    <b:MetroDropDownItem
                                                        Height="35"
                                                        Background="{StaticResource ControlInteriorBrush}"
                                                        Content="high"
                                                        FontFamily="Roboto"
                                                        Foreground="{StaticResource WhiteForeground}"
                                                        Tag="high" />
                                                </b:MetroDropDown>
                                            </GroupBox>

                                        </StackPanel>

                                    </Canvas>
                                </Grid>
                            </TabItem>

                            <!--  ********************************************* SETTING TAB *************************************  -->

                            <TabItem
                                x:Name="SettingTab"
                                Margin="3"
                                Padding="10"
                                Background="{StaticResource BackgroundBrush}"
                                Foreground="{StaticResource BlueBorderBrush}"
                                Header="Parameters"
                                Tag="GPT"
                                ToolTip="Hyperparameters">

                                <Grid Background="{StaticResource BackgroundBrush}">

                                    <Canvas Margin="1">

                                        <StackPanel
                                            Canvas.Left="10"
                                            Canvas.Top="19"
                                            Width="270"
                                            Height="506"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            Background="{StaticResource FormBackground}">

                                            <GroupBox
                                                x:Name="TemperatureGroupBox"
                                                Height="95"
                                                Margin="10,1,10,1"
                                                Padding="1"
                                                HorizontalContentAlignment="Stretch"
                                                VerticalContentAlignment="Stretch"
                                                Background="{StaticResource GroupBoxBackground}"
                                                BorderBrush="{StaticResource MutedForeground}"
                                                FontFamily="Roboto"
                                                FontSize="12"
                                                Foreground="{StaticResource FormForeground}"
                                                Header="Temperature">


                                                <wpf:SfRangeSlider
                                                    x:Name="TemperatureSlider"
                                                    Width="230"
                                                    Height="70"
                                                    Margin="3"
                                                    Padding="1"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    VerticalContentAlignment="Top"
                                                    ActiveMinorTickStroke="{StaticResource FormForeground}"
                                                    ActiveTickStroke="{StaticResource WhiteForeground}"
                                                    ActiveTrackStyle="{StaticResource ActiveTrackStyle}"
                                                    AllowRangeDrag="True"
                                                    Background="{StaticResource BlueBorderBrush}"
                                                    BorderThickness="1"
                                                    Foreground="{StaticResource FormForeground}"
                                                    LabelPlacement="BottomRight"
                                                    LargeChange="0.25"
                                                    Maximum="2"
                                                    Minimum="-2"
                                                    MinorTickFrequency="1"
                                                    MinorTickLength="5"
                                                    MinorTickStroke="{StaticResource WhiteForeground}"
                                                    ShowValueLabels="True"
                                                    SmallChange="0.1"
                                                    SnapsTo="Ticks"
                                                    Tag="Temperature"
                                                    ThumbStyle="{StaticResource ThumbStyle}"
                                                    TickFrequency="0.5"
                                                    TickPlacement="BottomRight"
                                                    TickStroke="{StaticResource WhiteForeground}"
                                                    ToolTip="Lower values increase deterministic output"
                                                    ToolTipFormat="P"
                                                    UseLayoutRounding="True"
                                                    Value="0.80" />
                                            </GroupBox>

                                            <GroupBox
                                                x:Name="TopPercentGroupBox"
                                                Height="95"
                                                Margin="10,1,10,1"
                                                Padding="1"
                                                HorizontalContentAlignment="Stretch"
                                                VerticalContentAlignment="Stretch"
                                                Background="{StaticResource GroupBoxBackground}"
                                                BorderBrush="{StaticResource MutedForeground}"
                                                FontFamily="Roboto"
                                                FontSize="12"
                                                Foreground="{StaticResource FormForeground}"
                                                Header="Top Percent">

                                                <wpf:SfRangeSlider
                                                    x:Name="TopPercentSlider"
                                                    Width="230"
                                                    Height="70"
                                                    Margin="1"
                                                    Padding="1"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Top"
                                                    VerticalContentAlignment="Stretch"
                                                    ActiveMinorTickStroke="{StaticResource WhiteForeground}"
                                                    ActiveTickStroke="{StaticResource WhiteForeground}"
                                                    AllowRangeDrag="True"
                                                    Background="{StaticResource BlueBorderBrush}"
                                                    Foreground="{StaticResource FormForeground}"
                                                    Maximum="1"
                                                    Minimum="0"
                                                    MinorTickFrequency="0.2"
                                                    MinorTickLength="5"
                                                    MinorTickStroke="{StaticResource WhiteForeground}"
                                                    ShowValueLabels="True"
                                                    SmallChange="0.1"
                                                    SnapsTo="Ticks"
                                                    Tag="TopPercent"
                                                    ThumbStyle="{StaticResource ThumbStyle}"
                                                    TickFrequency="0.1"
                                                    TickPlacement="BottomRight"
                                                    TickStroke="{StaticResource WhiteForeground}"
                                                    ToolTip="top p% probability mass"
                                                    ToolTipFormat="P"
                                                    Value="0.9" />
                                            </GroupBox>

                                            <GroupBox
                                                x:Name="FequencyPenaltyGroupBox"
                                                Height="95"
                                                Margin="10,1,10,1"
                                                Padding="1"
                                                HorizontalContentAlignment="Stretch"
                                                VerticalContentAlignment="Stretch"
                                                Background="{StaticResource GroupBoxBackground}"
                                                BorderBrush="{StaticResource MutedForeground}"
                                                FontFamily="Roboto"
                                                FontSize="12"
                                                Foreground="{StaticResource FormForeground}"
                                                Header="Frequency Penalty">

                                                <wpf:SfRangeSlider
                                                    x:Name="FrequencySlider"
                                                    Width="230"
                                                    Height="70"
                                                    Margin="1"
                                                    Padding="1,1,1,1"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Top"
                                                    VerticalContentAlignment="Stretch"
                                                    ActiveMinorTickStroke="{StaticResource WhiteForeground}"
                                                    ActiveTickStroke="{StaticResource WhiteForeground}"
                                                    Background="{StaticResource BlueBorderBrush}"
                                                    Foreground="{StaticResource FormForeground}"
                                                    LargeChange="0.5"
                                                    Maximum="2"
                                                    Minimum="-2"
                                                    MinorTickFrequency="2"
                                                    MinorTickLength="5"
                                                    MinorTickStroke="{StaticResource WhiteForeground}"
                                                    ShowValueLabels="True"
                                                    SmallChange="0.25"
                                                    SnapsTo="Ticks"
                                                    Tag="FrequencyPenalty"
