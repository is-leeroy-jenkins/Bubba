<Window
    x:Class="Bubba.ChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Bubba"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:num="clr-namespace:System.Globalization;assembly=System.Runtime"
    xmlns:plt="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:sp="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:wpf="http://schemas.syncfusion.com/wpf"
    Title="Bubba"
    Width="1370"
    Height="730"
    MinWidth="1000"
    MinHeight="400"
    MaxWidth="1920"
    MaxHeight="1080"
    wpf:SfSkinManager.Theme="{wpf:SkinManager ThemeName=FluentDark}"
    Background="{StaticResource FormBackground}"
    BorderBrush="{StaticResource BlueBorderBrush}"
    BorderThickness="1"
    FontFamily="Roboto"
    Foreground="{StaticResource FormForeground}"
    Icon="/Resources/Assets/ApplicationImages/Bubba.png"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">


    <!--  ******************************************** RESOURCES *********************************************  -->

    <Window.Resources>
        <Style TargetType="{x:Type ToolTip}">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderBrush" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Background" Value="{StaticResource BlackBackground}" />
            <Setter Property="Foreground" Value="{StaticResource LightBlueBrush}" />
        </Style>

        <Style TargetType="{x:Type Thumb}">
            <Setter Property="Width" Value="13" />
            <Setter Property="Height" Value="13" />
            <Setter Property="BorderBrush" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Background" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border
                            x:Name="ThumbBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="12" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!--  *********************************************  CONTEXT MENU *************************************  -->

    <Window.ContextMenu>
        <ContextMenu x:Name="ChatWindowContextMenu">
            <wpf:MenuItemAdv
                Click="OnFileMenuOptionClick"
                Header="File"
                ToolTip="Browse File System">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FileItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnPromptMenuOptionClick"
                Header="System Prompt"
                ToolTip="Change System Prompt">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ChatItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <wpf:MenuItemAdv
                Click="OnChromeOptionClick"
                Header="Chrome"
                ToolTip="Launch Chrome Browser">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ChromeItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnEdgeOptionClick"
                Header="Edge"
                ToolTip="Launch Edge Browser">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/EdgeItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnFirefoxOptionClick"
                Header="FireFox"
                ToolTip="Launch Firefox Browser">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FirefoxItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <wpf:MenuItemAdv
                Click="OnCalculatorMenuOptionClick"
                Header="Calculator"
                ToolTip="Open Calculator">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CalculatorItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnControlPanelOptionClick"
                Header="Control Panel"
                ToolTip="Windows Control Panel">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ControlPanelItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnTaskManagerOptionClick"
                Header="Task Manager"
                ToolTip="Windows Task Manager">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/TaskManagerItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <wpf:MenuItemAdv
                Click="OnCloseOptionClick"
                Header="Exit"
                ToolTip="Exit Application">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CloseItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

        </ContextMenu>
    </Window.ContextMenu>

    <!--  ********************************************* MAIN LAYOUT *************************************  -->

    <Grid>
        <Grid x:Name="WindowGrid">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="58.04" />
            </Grid.RowDefinitions>

            <!--  *********************************************  TOOLSTRIP *************************************  -->

            <ToolBar
                x:Name="ToolStrip"
                Grid.Row="1"
                Margin="0,5,5,5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{StaticResource FormBackground}"
                BorderBrush="{StaticResource FormBackground}"
                ClipToBounds="True"
                FontFamily="Roboto"
                Foreground="{StaticResource FormForeground}"
                SnapsToDevicePixels="True"
                UseLayoutRounding="True">

                <Label
                    x:Name="StatusLabel"
                    Width="140"
                    Height="30"
                    Padding="1,1,1,1"
                    VerticalContentAlignment="Center"
                    FontFamily="Roboto" />

                <Separator
                    Width="2"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />

                <b:ToolStripTextBox
                    x:Name="ToolStripTextBox"
                    Width="576"
                    Height="35"
                    Padding="15,1,1,1"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    Background="{StaticResource ControlInteriorBrush}"
                    BorderBrush="{StaticResource BlueBorderBrush}"
                    BorderThickness="1"
                    FontFamily="Roboto"
                    FontSize="16"
                    Foreground="{StaticResource WhiteForeground}"
                    SelectionBackgroundColor="{StaticResource ControlHoverBrush}"
                    SelectionBrush="{StaticResource GreenBackground}"
                    ToolTip="Input Text" />

                <Separator
                    Width="2"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />

                <b:ToolStripButton
                    x:Name="ToolStripSendButton"
                    Width="40"
                    Height="30"
                    Margin="5,1,5,1"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/PromptButton.png"
                    ToolTip="Send Text" />

                <b:ToolStripButton
                    x:Name="ToolStripRefreshButton"
                    Width="40"
                    Height="30"
                    Margin="5,1,5,1"
                    ImageSource="/Resources/Assets/ToolStripImages/RefreshButton.png"
                    ToolTip="Clear Propmt Text" />

                <b:ToolStripButton
                    x:Name="ToolStripBackspaceButton"
                    Width="40"
                    Height="30"
                    Margin="5,1,5,1"
                    ImageSource="/Resources/Assets/ToolStripImages/BackspaceButton.png"
                    ToolTip="Backspace" />

                <b:ToolStripButton
                    x:Name="ToolStripCancelButton"
                    Width="40"
                    Height="30"
                    Margin="5,1,5,1"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/CancelButton.png"
                    ToolTip="Cancel" />

                <b:ToolStripButton
                    x:Name="ToolStripRemoveButton"
                    Width="40"
                    Height="30"
                    Margin="5,1,5,1"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/DeleteButton.png"
                    ToolTip="Send Text" />

                <b:ToolStripButton
                    x:Name="ToolStripFileButton"
                    Width="40"
                    Height="30"
                    Margin="5,1,5,1"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/GptUploadButton.png"
                    ToolTip="GPT File" />

                <Separator
                    Width="5"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />

                <wpf:SfLinearProgressBar
                    x:Name="ProgressBar"
                    Width="200"
                    Height="28"
                    HorizontalContentAlignment="Right"
                    Background="{StaticResource ControlBackground}"
                    BorderBrush="{StaticResource ControlBackground}"
                    FontFamily="Roboto"
                    Foreground="{StaticResource BlueBorderBrush}"
                    IsIndeterminate="{Binding ElementName=Browser, Path=IsLoading}"
                    ProgressColor="{StaticResource GreenBackground}"
                    TrackColor="{StaticResource FormBackground}" />

                <Separator
                    Width="5"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />

                <b:ToolStripButton
                    x:Name="ToolStripMenuButton"
                    Width="40"
                    Height="30"
                    Margin="5,1,5,1"
                    HorizontalAlignment="Right"
                    HorizontalContentAlignment="Right"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/ToggleButton.png"
                    ToolTip="Show/Hide Toolbar" />
            </ToolBar>

            <!--  *********************************************  TAB CONTROL *************************************  -->

            <Grid Grid.Row="0" />

            <mah:MetroTabControl
                x:Name="TabControl"
                Grid.Row="0"
                mah:HeaderedControlHelper.HeaderFontFamily="Roboto"
                mah:TabControlHelper.UnderlineMouseOverBrush="{DynamicResource BlueBackground}"
                mah:TabControlHelper.UnderlineMouseOverSelectedBrush="{DynamicResource BlueBorderBrush}"
                mah:TabControlHelper.UnderlinePlacement="Bottom"
                mah:TabControlHelper.UnderlineSelectedBrush="{DynamicResource BlueBorderBrush}"
                mah:TabControlHelper.Underlined="SelectedTabItem"
                Foreground="{StaticResource FormForeground}"
                IsTabStop="True"
                SelectedIndex="0"
                TabStripMargin="3,3,3,3">

                <!--  ********************************************* CHAT TAB *************************************  -->

                <TabItem
                    x:Name="ChatTab"
                    Width="60"
                    Height="30"
                    Margin="3"
                    Padding="1,1,1,1"
                    Background="{DynamicResource FormBackground}"
                    BorderBrush="{DynamicResource FormBackground}"
                    Foreground="{DynamicResource FormForeground}"
                    Header="Chat"
                    Tag="Chat">
                    <Grid
                        x:Name="ChatTabGrid"
                        Background="{StaticResource FormBackground}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="925*" />
                            <ColumnDefinition Width="433*" />
                        </Grid.ColumnDefinitions>

                        <wpf:SfTextBoxExt
                            x:Name="ChatTextBox"
                            Grid.Column="0"
                            Margin="40,10,22,20"
                            Padding="20,10,5,3"
                            BorderBrush="{StaticResource BlueBorderBrush}"
                            BorderThickness="1"
                            FontSize="16"
                            Text=""
                            TextWrapping="Wrap" />

                        <mah:MetroTabControl
                            x:Name="OptionTabControl"
                            Grid.Column="1"
                            Margin="1"
                            Padding="1,1,1,1"
                            mah:HeaderedControlHelper.HeaderFontFamily="Roboto"
                            mah:TabControlHelper.UnderlineMouseOverBrush="{DynamicResource BlueBackground}"
                            mah:TabControlHelper.UnderlineMouseOverSelectedBrush="{DynamicResource BlueBorderBrush}"
                            mah:TabControlHelper.UnderlinePlacement="Bottom"
                            mah:TabControlHelper.UnderlineSelectedBrush="{DynamicResource BlueBorderBrush}"
                            mah:TabControlHelper.Underlined="SelectedTabItem"
                            Background="{StaticResource BackgroundBrush}"
                            FontFamily="Roboto"
                            ScrollViewer.CanContentScroll="True"
                            Style="{DynamicResource MahApps.Styles.TabControl}"
                            TabStripMargin="0,5,1,5">

                            <TabItem
                                x:Name="RequestTab"
                                Width="60"
                                Height="30"
                                Margin="3"
                                Padding="1,1,1,1"
                                Background="{StaticResource BackgroundBrush}"
                                Foreground="{DynamicResource FormForeground}"
                                Header="Settings"
                                Tag="Settings"
                                ToolTip="API Options">

                                <Canvas
                                    Height="560"
                                    Margin="10,0,8,0">

                                    <Separator
                                        Height="20"
                                        Background="{x:Null}"
                                        BorderBrush="{x:Null}"
                                        Foreground="{x:Null}" />


                                    <CheckBox
                                        x:Name="StreamCheckBox"
                                        Canvas.Left="106"
                                        Canvas.Top="56"
                                        Width="64"
                                        Height="32"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Left"
                                        Content="Stream"
                                        FontFamily="Roboto"
                                        Foreground="{StaticResource FormForeground}"
                                        IsChecked="False"
                                        Tag="stream"
                                        ToolTip="Streams the Response" />

                                    <CheckBox
                                        x:Name="StoreCheckBox"
                                        Canvas.Left="14"
                                        Canvas.Top="52"
                                        Width="65"
                                        Height="36"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Left"
                                        Content="Store"
                                        FontFamily="Roboto"
                                        Foreground="{StaticResource FormForeground}"
                                        IsChecked="True"
                                        Tag="store"
                                        ToolTip="Save the chat" />

                                    <wpf:IntegerTextBox
                                        x:Name="MaxTokenTextBox"
                                        Canvas.Left="196"
                                        Canvas.Top="52"
                                        Width="90"
                                        Height="36"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center"
                                        AutomationProperties.HelpText="Maximum Tokens"
                                        BorderBrush="{StaticResource BlueBorderBrush}"
                                        FontFamily="Roboto"
                                        ShowSpinButton="True"
                                        TextWrapping="Wrap"
                                        ToolTip="Maximum Completion Tokens"
                                        UseNullOption="True"
                                        WatermarkText="Max Tokens:"
                                        WatermarkTextIsVisible="True"
                                        Value="10000" />


                                    <Separator
                                        Height="5"
                                        Background="{x:Null}"
                                        BorderBrush="{x:Null}"
                                        Foreground="{x:Null}" />

                                    <GroupBox
                                        x:Name="ApiGroupBox"
                                        Canvas.Left="10"
                                        Canvas.Top="129"
                                        Width="276"
                                        Height="80"
                                        Padding="1"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Background="{StaticResource GroupBoxBackground}"
                                        BorderBrush="{StaticResource MutedForeground}"
                                        FontFamily="Roboto"
                                        FontSize="12"
                                        Foreground="{StaticResource FormForeground}"
                                        Header="AI Request">

                                        <b:MetroDropDown
                                            x:Name="GenerationListBox"
                                            Height="36"
                                            Margin="10,0,7,0"
                                            VerticalAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Background="{StaticResource ControlInteriorBrush}"
                                            BorderBrush="{StaticResource BlueBorderBrush}"
                                            FontSize="14"
                                            Foreground="{StaticResource FormForeground}"
                                            Text="Select API" />

                                    </GroupBox>

                                    <Separator
                                        Height="5"
                                        Background="{x:Null}"
                                        BorderBrush="{x:Null}"
                                        Foreground="{x:Null}" />

                                    <GroupBox
                                        x:Name="LanguageModelGroupBox"
                                        Canvas.Left="14"
                                        Canvas.Top="240"
                                        Width="272"
                                        Height="80"
                                        Padding="1"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Background="{StaticResource GroupBoxBackground}"
                                        BorderBrush="{StaticResource MutedForeground}"
                                        FontFamily="Roboto"
                                        FontSize="12"
                                        Foreground="{StaticResource FormForeground}"
                                        Header="Language Models">

                                        <b:MetroDropDown
                                            x:Name="ModelDropDown"
                                            Height="35"
                                            Margin="10,0,12,0"
                                            VerticalAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Background="{StaticResource ControlInteriorBrush}"
                                            BorderBrush="{StaticResource BlueBorderBrush}"
                                            FontSize="14"
                                            Foreground="{StaticResource FormForeground}"
                                            Text="Select LLM" />
                                    </GroupBox>

                                    <Separator
                                        Height="5"
                                        Background="{x:Null}"
                                        BorderBrush="{x:Null}"
                                        Foreground="{StaticResource TransparentBrush}" />

                                    <GroupBox
                                        x:Name="PromptGroupBox"
                                        Canvas.Left="10"
                                        Canvas.Top="359"
                                        Width="276"
                                        Height="80"
                                        Padding="1"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Background="{StaticResource GroupBoxBackground}"
                                        BorderBrush="{StaticResource MutedForeground}"
                                        FontFamily="Roboto"
                                        FontSize="12"
                                        Foreground="{StaticResource FormForeground}"
                                        Header="System Instructions">

                                        <b:MetroDropDown
                                            x:Name="PromptDropDown"
                                            Height="35"
                                            Margin="3,3,3,3"
                                            VerticalAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Background="{StaticResource ControlInteriorBrush}"
                                            BorderBrush="{StaticResource BlueBorderBrush}"
                                            FontSize="14"
                                            Foreground="{StaticResource FormForeground}"
                                            Text="Select Prompt" />
                                    </GroupBox>

                                    <Separator
                                        Height="10"
                                        Background="{x:Null}"
                                        BorderBrush="{x:Null}"
                                        Foreground="{StaticResource TransparentBrush}" />

                                    <Separator
                                        Height="10"
                                        Background="{x:Null}"
                                        BorderBrush="{x:Null}"
                                        Foreground="{StaticResource TransparentBrush}" />

                                </Canvas>
                            </TabItem>

                            <!--  ********************************************* SETTING TAB *************************************  -->

                            <TabItem
                                x:Name="SettingTab"
                                Width="60"
                                Height="30"
                                Margin="3"
                                Padding="1,1,1,1"
                                Background="{StaticResource BackgroundBrush}"
                                Foreground="{StaticResource BlueBorderBrush}"
                                Header="Options"
                                Tag="GPT"
                                ToolTip="Parameters">


                                <Canvas
                                    Height="564"
                                    Margin="3,3,3,3">


                                    <GroupBox
                                        x:Name="ReasoningGroupBox"
                                        Canvas.Left="12"
                                        Canvas.Top="40"
                                        Width="247"
                                        Height="80"
                                        Padding="1"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Background="{StaticResource GroupBoxBackground}"
                                        BorderBrush="{StaticResource MutedForeground}"
                                        FontFamily="Roboto"
                                        FontSize="12"
                                        Foreground="{StaticResource FormForeground}"
                                        Header="Reasoning Effort">

                                        <b:MetroDropDown
                                            x:Name="EffortDropDown"
                                            Height="35"
                                            Margin="3,3,3,3"
                                            VerticalAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Background="{StaticResource ControlInteriorBrush}"
                                            BorderBrush="{StaticResource BlueBorderBrush}"
                                            FontSize="14"
                                            Foreground="{StaticResource FormForeground}"
                                            Text="Select Effort">

                                            <b:MetroDropDownItem
                                                Height="35"
                                                Background="{StaticResource ControlInteriorBrush}"
                                                Content="low"
                                                FontFamily="Roboto"
                                                FontSize="14"
                                                Foreground="{StaticResource WhiteForeground}"
                                                Tag="low" />

                                            <b:MetroDropDownItem
                                                Height="35"
                                                Background="{StaticResource ControlInteriorBrush}"
                                                Content="medium"
                                                FontFamily="Roboto"
                                                FontSize="14"
                                                Foreground="{StaticResource WhiteForeground}"
                                                Tag="medium" />

                                            <b:MetroDropDownItem
                                                Height="35"
                                                Background="{StaticResource ControlInteriorBrush}"
                                                Content="high"
                                                FontFamily="Roboto"
                                                Foreground="{StaticResource WhiteForeground}"
                                                Tag="high" />
                                        </b:MetroDropDown>
                                    </GroupBox>
                                    <GroupBox
                                        x:Name="TemperatureGroupBox"
                                        Canvas.Left="10"
                                        Canvas.Top="191"
                                        Width="249"
                                        Height="125"
                                        Padding="1,1,1,1"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Center"
                                        Background="{StaticResource GroupBoxBackground}"
                                        BorderBrush="{StaticResource MutedForeground}"
                                        FontFamily="Roboto"
                                        FontSize="12"
                                        Foreground="{StaticResource FormForeground}"
                                        Header="Temperature"
                                        UseLayoutRounding="True">

                                        <Slider
                                            x:Name="TemperatureSlider"
                                            Width="216"
                                            Height="70"
                                            Margin="1,0,6,0"
                                            Padding="1"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            AutoToolTipPlacement="TopLeft"
                                            Background="{StaticResource GroupBoxBackground}"
                                            BorderThickness="1"
                                            FontSize="14"
                                            Foreground="{StaticResource FormForeground}"
                                            IsMoveToPointEnabled="True"
                                            IsSelectionRangeEnabled="True"
                                            IsSnapToTickEnabled="True"
                                            LargeChange="0.25"
                                            Maximum="1"
                                            Minimum="0"
                                            SelectionStart="-3"
                                            SmallChange="0.1"
                                            Style="{DynamicResource MahApps.Styles.Slider.Win10}"
                                            Tag="TopPercent"
                                            TickFrequency="0.1"
                                            TickPlacement="BottomRight"
                                            ToolTip="Temperature"
                                            UseLayoutRounding="True"
                                            Value="0.8" />
                                    </GroupBox>


                                    <b:MetroTextBox
                                        x:Name="TemperatureTextBox"
                                        Canvas.Left="284"
                                        Canvas.Top="234"
                                        Width="76"
                                        Height="48"
                                        Padding="1,1,1,1"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Background="{StaticResource ControlInteriorBrush}"
                                        BorderBrush="{StaticResource BlueBorderBrush}"
                                        ClipToBounds="True"
                                        FontSize="14"
                                        Text="{Binding Value, ElementName=TemperatureSlider, StringFormat=P0}"
                                        UseLayoutRounding="True"
                                        VerticalScrollBarVisibility="Disabled" />


                                    <b:MetroTextBox
                                        x:Name="TopPercentTextBox"
                                        Canvas.Left="284"
                                        Canvas.Top="416"
                                        Width="76"
                                        Height="50"
                                        Padding="1,1,1,1"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Background="{StaticResource ControlInteriorBrush}"
                                        BorderBrush="{StaticResource BlueBorderBrush}"
                                        ClipToBounds="True"
                                        FontSize="14"
                                        Text="{Binding Value, ElementName=TopPercentSlider, StringFormat=P0}"
                                        UseLayoutRounding="True"
                                        VerticalScrollBarVisibility="Disabled"
                                        Watermark="" />

                                    <GroupBox
                                        x:Name="TopPercentGroupBox"
                                        Canvas.Left="10"
                                        Canvas.Top="376"
                                        Width="249"
                                        Height="130"
                                        Padding="1,1,1,1"
                                        Background="{StaticResource GroupBoxBackground}"
                                        BorderBrush="{StaticResource MutedForeground}"
                                        FontFamily="Roboto"
                                        FontSize="12"
                                        Foreground="{StaticResource FormForeground}"
                                        Header="Top Percent"
                                        UseLayoutRounding="True">

                                        <Slider
                                            x:Name="TopPercentSlider"
                                            Height="70"
                                            Margin="9,0,1,0"
                                            Padding="1"
                                            HorizontalContentAlignment="Stretch"
                                            VerticalContentAlignment="Center"
                                            Background="{StaticResource GroupBoxBackground}"
                                            BorderThickness="1"
                                            FontSize="14"
                                            Foreground="{StaticResource FormForeground}"
                                            Maximum="1"
                                            Minimum="0"
                                            SmallChange="0.1"
                                            Style="{DynamicResource MahApps.Styles.Slider.Win10}"
                                            Tag="TopPercent"
                                            TickFrequency="0.1"
                                            TickPlacement="BottomRight"
                                            ToolTip="top p% probability mass"
                                            UseLayoutRounding="True"
                                            Value="0.9" />
                                    </GroupBox>


                                </Canvas>

                            </TabItem>
                            <!--  ********************************************* PENALTY TAB *************************************  -->

                            <TabItem
                                x:Name="PenaltyTab"
                                Width="60"
                                Height="30"
                                Margin="3,3,3,3"
                                Padding="1"
                                Background="{StaticResource BackgroundBrush}"
                                Foreground="{StaticResource BlueBorderBrush}"
                                Header="Penalty"
                                Tag="Penalty"
                                ToolTip="Penalty Options">

                                <Canvas
                                    Height="564"
                                    Margin="3,3,3,3">

                                    <GroupBox
                                        x:Name="ResponseFormatGroupBox"
                                        Canvas.Left="5"
                                        Canvas.Top="36"
                                        Width="254"
                                        Height="80"
                                        Padding="1"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Background="{StaticResource GroupBoxBackground}"
                                        BorderBrush="{StaticResource MutedForeground}"
                                        FontFamily="Roboto"
                                        FontSize="12"
                                        Foreground="{StaticResource FormForeground}"
                                        Header="Response Format">

                                        <b:MetroDropDown
                                            x:Name="ResponseFormatDropDown"
                                            Grid.Row="0"
                                            Height="35"
                                            Margin="3,3,3,3"
                                            VerticalAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Background="{StaticResource ControlInteriorBrush}"
                                            BorderBrush="{StaticResource BlueBorderBrush}"
                                            FontSize="14"
                                            Foreground="{StaticResource FormForeground}"
                                            Text="Select Format">

