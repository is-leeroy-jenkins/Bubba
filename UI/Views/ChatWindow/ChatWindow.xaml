<Window
    x:Class="Bubba.ChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Bubba"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:num="clr-namespace:System.Globalization;assembly=System.Runtime"
    xmlns:plt="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:sp="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:web="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
    xmlns:wpf="http://schemas.syncfusion.com/wpf"
    Title="Bubba"
    Width="1310"
    Height="700"
    MinWidth="1000"
    MinHeight="400"
    wpf:SfSkinManager.Theme="{wpf:SkinManager ThemeName=FluentDark}"
    Background="{StaticResource FormBackground}"
    BorderBrush="{StaticResource BlueBorderBrush}"
    BorderThickness="1,1,1,1"
    FontFamily="Roboto"
    Foreground="{StaticResource FormForeground}"
    Icon="/Resources/Assets/ApplicationImages/Bubba.png"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">


    <!--  ******************************************** RESOURCES *********************************************  -->

    <Window.Resources>
        <Style TargetType="{x:Type ToolTip}">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderBrush" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Background" Value="{StaticResource BlackBackground}" />
            <Setter Property="Foreground" Value="{StaticResource LightBlueBrush}" />
        </Style>

        <Style TargetType="{x:Type Thumb}">
            <Setter Property="Width" Value="13" />
            <Setter Property="Height" Value="13" />
            <Setter Property="BorderBrush" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Background" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border
                            x:Name="ThumbBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="12" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!--  *********************************************  CONTEXT MENU *************************************  -->

    <Window.ContextMenu>
        <ContextMenu x:Name="ChatWindowContextMenu">
            <wpf:MenuItemAdv
                Click="OnFileMenuOptionClick"
                Header="File"
                ToolTip="Browse File System">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FileItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnPromptOptionClick"
                Header="System Prompt"
                ToolTip="Change System Prompt">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ChatItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <wpf:MenuItemAdv
                Click="OnChromeOptionClick"
                Header="Chrome"
                ToolTip="Launch Chrome Browser">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ChromeItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnEdgeOptionClick"
                Header="Edge"
                ToolTip="Launch Edge Browser">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/EdgeItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnFirefoxOptionClick"
                Header="FireFox"
                ToolTip="Launch Firefox Browser">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FirefoxItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <wpf:MenuItemAdv
                Click="OnCalculatorMenuOptionClick"
                Header="Calculator"
                ToolTip="Open Calculator">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CalculatorItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnControlPanelOptionClick"
                Header="Control Panel"
                ToolTip="Windows Control Panel">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ControlPanelItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnTaskManagerOptionClick"
                Header="Task Manager"
                ToolTip="Windows Task Manager">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/TaskManagerItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <wpf:MenuItemAdv
                Click="OnCloseOptionClick"
                Header="Exit"
                ToolTip="Exit Application">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CloseItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

        </ContextMenu>
    </Window.ContextMenu>

    <!--  ********************************************* MAIN LAYOUT *************************************  -->

    <Grid>
        <Grid x:Name="WindowGrid">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="58.04" />
            </Grid.RowDefinitions>

            <!--  *********************************************  TOOLSTRIP *************************************  -->

            <ToolBar
                x:Name="ToolStrip"
                Grid.Row="1"
                Margin="0,5,5,5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{StaticResource FormBackground}"
                BorderBrush="{StaticResource FormBackground}"
                ClipToBounds="True"
                FontFamily="Roboto"
                Foreground="{StaticResource FormForeground}"
                SnapsToDevicePixels="True"
                UseLayoutRounding="True">

                <Label
                    x:Name="StatusLabel"
                    Width="180"
                    Height="30"
                    Padding="1,1,1,1"
                    VerticalContentAlignment="Center"
                    FontFamily="Roboto" />

                <Separator
                    Width="2"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />

                <b:ToolStripTextBox
                    x:Name="ToolStripTextBox"
                    Width="576"
                    Height="35"
                    Padding="15,1,1,1"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    Background="{StaticResource ControlInteriorBrush}"
                    BorderBrush="{StaticResource BlueBorderBrush}"
                    BorderThickness="2"
                    FontFamily="Roboto"
                    FontSize="14"
                    Foreground="{StaticResource WhiteForeground}"
                    SelectionBackgroundColor="{StaticResource ControlHoverBrush}"
                    SelectionBrush="{StaticResource GreenBackground}"
                    ToolTip="Input Text" />

                <Separator
                    Width="2"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />

                <b:ToolStripButton
                    x:Name="ToolStripSendButton"
                    Margin="5,1,5,1"
                    ImageSource="/Resources/Assets/ToolStripImages/PromptButton.png"
                    ToolTip="Send Text" />

                <b:ToolStripButton
                    x:Name="ToolStripRefreshButton"
                    Margin="5,1,5,1"
                    ImageSource="/Resources/Assets/MenuImages/RefreshItem.png"
                    ToolTip="Clear Propmt Text" />

                <b:ToolStripButton
                    x:Name="ToolStripDeleteButton"
                    Margin="5,1,5,1"
                    ImageSource="/Resources/Assets/ToolStripImages/PreviousButton.png"
                    ToolTip="Delete/Backspace" />

                <b:ToolStripButton
                    x:Name="ToolStripCancelButton"
                    Margin="5,1,5,1"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/StopButton.png"
                    ToolTip="Cancel" />

                <wpf:SfLinearProgressBar
                    x:Name="ProgressBar"
                    Width="240"
                    Height="28"
                    HorizontalContentAlignment="Right"
                    Background="{StaticResource ControlBackground}"
                    BorderBrush="{StaticResource ControlBackground}"
                    FontFamily="Roboto"
                    Foreground="{StaticResource BlueBorderBrush}"
                    ProgressColor="{StaticResource GreenBackground}"
                    TrackColor="{StaticResource BlueBackground}" />

                <Separator
                    Width="5"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />

                <b:ToolStripButton
                    x:Name="ToolStripMenuButton"
                    Width="40"
                    Height="30"
                    Margin="15,1,5,1"
                    HorizontalAlignment="Right"
                    HorizontalContentAlignment="Right"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/ToggleButton.png"
                    ToolTip="Show/Hide Toolbar" />
            </ToolBar>

            <!--  *********************************************  TAB CONTROL *************************************  -->

            <Grid Grid.Row="0" />

            <mah:MetroTabControl
                x:Name="TabControl"
                Grid.Row="0">

                <!--  ********************************************* CHAT TAB *************************************  -->

                <TabItem
                    x:Name="ChatTabItem"
                    Header="Chat">
                    <Grid
                        x:Name="ChatTabGrid"
                        Background="{StaticResource FormBackground}">
                        <GroupBox
                            x:Name="ChatLogGroupBox"
                            Width="1240"
                            Margin="30,37,0,33"
                            HorizontalAlignment="Left"
                            Background="{StaticResource GroupBoxBackground}"
                            Foreground="{StaticResource FormForeground}">

                            <wpf:SfTextBoxExt
                                x:Name="GptTextBox"
                                Width="1195"
                                Height="480"
                                Margin="10,0,0,0"
                                Padding="15,10,5,5"
                                HorizontalAlignment="Left"
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Top"
                                AutoCompleteMode="Suggest"
                                Background="{StaticResource BlackBackground}"
                                BorderBrush="{StaticResource BlueBorderBrush}"
                                BorderThickness="2"
                                FontFamily="Roboto"
                                FontSize="14"
                                Foreground="{StaticResource FormForeground}"
                                ScrollViewer.VerticalScrollBarVisibility="Visible"
                                Text=""
                                TextWrapping="Wrap" />
                        </GroupBox>

                        <Label
                            x:Name="TokenLabel"
                            Width="930"
                            Margin="30,574,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content=""
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{DynamicResource FormForeground}" />

                    </Grid>
                </TabItem>

                <!--  ********************************************* PARAMETER TAB *************************************  -->

                <TabItem
                    x:Name="ParameterTabItem"
                    Header="GPT">
                    <Grid
                        x:Name="ParameterTabGrid"
                        Height="Auto"
                        Background="{StaticResource FormBackground}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="167*" />
                            <RowDefinition Height="333*" />
                        </Grid.RowDefinitions>

                        <GroupBox
                            Grid.Row="1"
                            Margin="885,10,10,245"
                            Background="{StaticResource GroupBoxBackground}"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}"
                            Header="Options">
                            <Canvas
                                x:Name="OptionCanvas"
                                Height="121">

                                <b:MetroButton
                                    x:Name="GptFileButton"
                                    Canvas.Left="301"
                                    Canvas.Top="66"
                                    Width="70"
                                    Height="40"
                                    HorizontalAlignment="Left"
                                    Background="{DynamicResource ButtonBackground}"
                                    BorderBrush="{DynamicResource BlueBorderBrush}"
                                    ClipToBounds="True"
                                    FontFamily="Roboto"
                                    FontSize="12"
                                    IsMultiLine="False"
                                    Label=""
                                    SmallIcon="/Resources/Assets/ToolStripImages/GptUploadButton.png"
                                    ToolTip="GPT Upload API"
                                    UseLayoutRounding="True" />

                                <b:MetroDropDown
                                    x:Name="VoiceDropDown"
                                    Canvas.Left="10"
                                    Canvas.Top="6"
                                    Width="120"
                                    Height="40"
                                    HorizontalAlignment="Right"
                                    FontFamily="Roboto"
                                    Text="    Voices" />
                                
                                <b:MetroButton
                                    x:Name="ClearParameterButton"
                                    Canvas.Left="301"
                                    Canvas.Top="10"
                                    Width="70"
                                    Height="40"
                                    Padding="1,0,1,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Background="{DynamicResource ButtonBackground}"
                                    BorderBrush="{DynamicResource BlueBorderBrush}"
                                    BorderThickness="0,0,0,0"
                                    ClipToBounds="True"
                                    FontFamily="Roboto"
                                    FontSize="12"
                                    IsMultiLine="False"
                                    Label=""
                                    SmallIcon="/Resources/Assets/MenuImages/RefreshItem.png"
                                    ToolTip="Reset Parameters"
                                    UseLayoutRounding="True" />
                            </Canvas>
                        </GroupBox>

                        <GroupBox
                            Grid.Row="1"
                            Margin="885,176,10,75"
                            Background="{StaticResource GroupBoxBackground}"
                            BorderBrush="{StaticResource MutedForeground}"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}"
                            Header="Tokens">
                            <TextBox
                                x:Name="MaxTokenTextBox"
                                Height="40"
                                Margin="315,0,5,0"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Background="{DynamicResource ControlInteriorBrush}"
                                BorderBrush="{DynamicResource BlueBorderBrush}"
                                FontFamily="Roboto"
                                FontSize="14"
                                Foreground="{StaticResource WhiteForeground}"
                                Tag="MaxTokens"
                                Text="{Binding Path=Value, StringFormat=N0, ElementName=MaxTokenSlider}"
                                ToolTip="Upper limit on tokens per response" />
                        </GroupBox>

                        <GroupBox
                            Grid.Row="1"
                            Margin="10,13,913,248"
                            Background="{StaticResource GroupBoxBackground}"
                            BorderBrush="{StaticResource MutedForeground}"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}"
                            Header="Temperature">
                            <TextBox
                                x:Name="TemperatureTextBox"
                                Height="40"
                                Margin="290,0,7,0"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Background="{DynamicResource ControlInteriorBrush}"
                                BorderBrush="{DynamicResource BlueBorderBrush}"
                                FontFamily="Roboto"
                                FontSize="14"
                                Foreground="{StaticResource WhiteForeground}"
                                Tag="Temperature"
                                Text="{Binding ElementName=TemperatureSlider, Path=Value, StringFormat=N2, Mode=Default}" />
                        </GroupBox>

                        <GroupBox
                            Grid.Row="1"
                            Margin="435,176,478,75"
                            Background="{StaticResource GroupBoxBackground}"
                            BorderBrush="{StaticResource MutedForeground}"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}"
                            Header="Frequency">
                            <TextBox
                                x:Name="FrequencyTextBox"
                                Height="40"
                                Margin="290,0,12,0"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Background="{DynamicResource ControlInteriorBrush}"
                                BorderBrush="{DynamicResource BlueBorderBrush}"
                                FontFamily="Roboto"
                                FontSize="14"
                                Foreground="{StaticResource WhiteForeground}"
                                Tag="FrequencyPenalty"
                                Text="{Binding ElementName=FrequencySlider, Path=Value, Mode=Default, StringFormat=N2}" />
                        </GroupBox>

                        <GroupBox
                            Grid.Row="1"
                            Height="140"
                            Margin="435,10,478,245"
                            Background="{StaticResource GroupBoxBackground}"
                            BorderBrush="{StaticResource MutedForeground}"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}"
                            Header="Presense">
                            <TextBox
                                x:Name="PresenseTextBox"
                                Height="40"
                                Margin="285,0,12,0"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Background="{DynamicResource ControlInteriorBrush}"
                                BorderBrush="{DynamicResource BlueBorderBrush}"
                                FontFamily="Roboto"
                                FontSize="14"
                                Foreground="{StaticResource WhiteForeground}"
                                Tag="PresensePenalty"
                                Text="{Binding ElementName=PresenceSlider, Path=Value, Mode=Default, StringFormat=N2}"
                                TextWrapping="Wrap" />
                        </GroupBox>

                        <GroupBox
                            Grid.Row="1"
                            Height="150"
                            Margin="10,176,913,0"
                            VerticalAlignment="Top"
                            Background="{StaticResource GroupBoxBackground}"
                            BorderBrush="{StaticResource MutedForeground}"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}"
                            Header="Top P">
                            <TextBox
                                x:Name="TopPercentTextBox"
                                Width="70"
                                Height="40"
                                Margin="290,0,0,0"
                                HorizontalAlignment="Left"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Background="{DynamicResource ControlInteriorBrush}"
                                BorderBrush="{DynamicResource BlueBorderBrush}"
                                FontFamily="Roboto"
                                FontSize="14"
                                Foreground="{StaticResource WhiteForeground}"
                                Tag="TopPercent"
                                Text="{Binding ElementName=TopPercentSlider, Path=Value, StringFormat=N2}" />
                        </GroupBox>

                        <Grid
                            x:Name="SystemGrid"
                            Grid.Row="0"
                            Margin="0,0,10,10"
                            ClipToBounds="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="390*" />
                                <ColumnDefinition Width="229*" />
                                <ColumnDefinition Width="181*" />
                                <ColumnDefinition Width="181*" />
                                <ColumnDefinition Width="195*" />
                                <ColumnDefinition Width="123*" />
                            </Grid.ColumnDefinitions>


                            <GroupBox
                                x:Name="InputGroupBox"
                                Grid.Column="5"
                                Height="171"
                                Margin="3,0,3,0"
                                VerticalAlignment="Center"
                                Background="{StaticResource GroupBoxBackground}"
                                BorderBrush="{StaticResource MutedForeground}"
                                FontFamily="Roboto"
                                FontSize="14"
                                Foreground="{StaticResource FormForeground}"
                                Header="IO">
                                <Canvas
                                    x:Name="InputOutputCanvas"
                                    Height="146">

                                    <CheckBox
                                        x:Name="StoreCheckBox"
                                        Canvas.Left="3"
                                        Canvas.Top="3"
                                        Width="93"
                                        Height="31"
                                        Content="Store"
                                        FontFamily="Roboto"
                                        FontSize="14"
                                        Foreground="{StaticResource FormForeground}"
                                        ToolTip="Store Output" />

                                    <CheckBox
                                        x:Name="StreamCheckBox"
                                        Canvas.Left="3"
                                        Canvas.Top="40"
                                        Width="93"
                                        Height="30"
                                        Content="Stream"
                                        FontFamily="Roboto"
                                        FontSize="14"
                                        Foreground="{StaticResource FormForeground}"
                                        ToolTip="Stream Output" />

                                    <CheckBox
                                        x:Name="ListenCheckBox"
                                        Canvas.Left="3"
                                        Canvas.Top="76"
                                        Width="93"
                                        Height="31"
                                        Content="Listen"
                                        FontFamily="Roboto"
                                        FontSize="14"
                                        Foreground="{StaticResource FormForeground}"
                                        ToolTip="Activate Audio" />

                                    <CheckBox
                                        x:Name="MuteCheckBox"
                                        Canvas.Left="3"
                                        Canvas.Top="113"
                                        Width="93"
                                        Height="30"
                                        Content="Mute"
                                        FontFamily="Roboto"
                                        FontSize="14"
                                        Foreground="{StaticResource FormForeground}"
                                        ToolTip="Deactivate Audio" />

                                </Canvas>
                            </GroupBox>


                            <GroupBox
                                x:Name="VoiceLabel"
                                Grid.Column="4"
                                Height="171"
                                Margin="3,0,10,0"
                                VerticalAlignment="Center"
                                Background="{StaticResource GroupBoxBackground}"
                                BorderBrush="{StaticResource MutedForeground}"
                                FontFamily="Roboto"
                                FontSize="14"
                                Foreground="{StaticResource FormForeground}"
                                Header="Formats">
                                <Canvas
                                    x:Name="AudioCanvas"
                                    Height="146">

                                    <b:MetroDropDown
                                        x:Name="ResponseFormatComboBox"
                                        Canvas.Left="7"
                                        Canvas.Top="14"
                                        Width="147"
                                        Height="39"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        AllowMultiSelect="False"
                                        Background="{DynamicResource ControlInteriorBrush}"
                                        BorderThickness="1,1,1,1"
                                        Tag="response_format"
                                        Text="    Response Formats"
                                        ToolTip="Select Response Format">
                                        <b:MetroDropDownItem
                                            Width="Auto"
                                            Height="30"
                                            Content="text"
                                            FontFamily="Roboto" />
                                        <b:MetroDropDownItem
                                            Width="Auto"
                                            Height="30"
                                            Content="json"
                                            FontFamily="Roboto" />
                                        <b:MetroDropDownItem
                                            Width="Auto"
                                            Height="30"
                                            Content="url"
                                            FontFamily="Roboto" />
                                        <b:MetroDropDownItem
                                            Width="Auto"
                                            Height="30"
                                            Content="json_schema"
                                            FontFamily="Roboto" />
                                        <b:MetroDropDownItem
                                            Width="Auto"
                                            Height="30"
                                            Content="json_obect"
                                            FontFamily="Roboto" />
                                    </b:MetroDropDown>

                                    <b:MetroDropDown
                                        x:Name="AudioFormatComboBox"
                                        Canvas.Left="10"
                                        Canvas.Top="88"
                                        Width="144"
                                        Height="39"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        AllowMultiSelect="False"
                                        Background="{DynamicResource ControlInteriorBrush}"
                                        BorderThickness="1"
                                        Tag="audio"
                                        Text="    Audio Format"
                                        ToolTip="Select Audio Format">
                                        <b:MetroDropDownItem
                                            Width="Auto"
                                            Height="30"
                                            Content="mp3" />

                                        <b:MetroDropDownItem
                                            Width="Auto"
                                            Height="30"
                                            Content="opus" />

                                        <b:MetroDropDownItem
                                            Width="Auto"
                                            Height="30"
                                            Content="aac" />

                                        <b:MetroDropDownItem
                                            Width="Auto"
                                            Height="30"
                                            Content="flac" />

                                        <b:MetroDropDownItem
                                            Width="Auto"
                                            Height="30"
                                            Content="wav" />

                                        <b:MetroDropDownItem
                                            Width="Auto"
                                            Height="30"
                                            Content="pcm" />
                                    </b:MetroDropDown>
                                </Canvas>
                            </GroupBox>

                            <GroupBox
                                x:Name="SpeechGroupBox"
                                Grid.Column="2"
                                Height="171"
                                Margin="5,0,5,0"
                                VerticalAlignment="Center"
                                Background="{StaticResource GroupBoxBackground}"
                                BorderBrush="{StaticResource MutedForeground}"
                                FontFamily="Roboto"
                                FontSize="14"
                                Foreground="{StaticResource FormForeground}"
                                Header="Sound">
                                <Canvas
                                    x:Name="SoundCanvas"
                                    Height="146">

                                    <wpf:IntegerTextBox
                                        x:Name="SpeechRateTextBox"
                                        Canvas.Left="42"
                                        Canvas.Top="96"
                                        Width="75"
                                        Height="40"
                                        HorizontalAlignment="Left"
                                        HorizontalContentAlignment="Center"
                                        Background="{DynamicResource ControlInteriorBrush}"
                                        BorderBrush="{DynamicResource BlueBorderBrush}"
                                        BorderThickness="2"
                                        Foreground="{StaticResource FormForeground}"
                                        ShowSpinButton="True"
                                        TextWrapping="Wrap"
                                        ToolTip="Speech Rate"
                                        UseLayoutRounding="True"
                                        UseNullOption="True"
                                        WatermarkText="Enter Speech Rate:"
                                        WatermarkTextIsVisible="True"
                                        Value="1" />

                                    <wpf:IntegerTextBox
                                        x:Name="NumberTextBox"
                                        Canvas.Left="36"
                                        Canvas.Top="10"
                                        Width="81"
                                        Height="38"
                                        Padding="5,1,1,1"
                                        VerticalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        ApplyNegativeForeground="True"
                                        Background="{StaticResource ControlInteriorBrush}"
                                        BorderBrush="{StaticResource BlueBorderBrush}"
                                        BorderThickness="2,2,2,2"
                                        FontFamily="Roboto"
                                        FontSize="14"
                                        NegativeForeground="{StaticResource RedForeground}"
                                        SelectionBrush="{StaticResource YellowBackground}"
                                        ShowSpinButton="True"
                                        Tag="Number"
                                        ToolTip="GPT Responses"
                                        Value="1" />

                                </Canvas>
                            </GroupBox>

                            <GroupBox
                                x:Name="TaskGroupBox"
                                Grid.Column="0"
                                Margin="10,10,31,10"
                                Background="{StaticResource GroupBoxBackground}"
                                BorderBrush="{StaticResource MutedForeground}"
                                FontFamily="Roboto"
                                FontSize="14"
                                Foreground="{StaticResource FormForeground}"
                                Header="GPT Configuration">

                                <Canvas Height="146">
                                    <b:MetroDropDown
                                        x:Name="GenerationListBox"
                                        Canvas.Left="57"
                                        Canvas.Top="33"
                                        Width="217"
                                        Height="40"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Text="  Tasks" />
                                    <b:MetroDropDown
                                        x:Name="ModelDropDown"
                                        Canvas.Left="57"
                                        Canvas.Top="96"
                                        Width="217"
                                        Height="40"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        FontFamily="Roboto"
                                        FontSize="12"
                                        Text="  Models" />
                                </Canvas>

                            </GroupBox>

                            <GroupBox
                                x:Name="ImageSizeGroup"
                                Grid.Column="3"
