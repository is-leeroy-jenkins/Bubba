<Window
    x:Class="Bubba.ChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Bubba"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:num="clr-namespace:System.Globalization;assembly=System.Runtime"
    xmlns:plt="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:sp="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:web="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
    xmlns:wpf="http://schemas.syncfusion.com/wpf"
    Title="Bubba"
    Width="1310"
    Height="700"
    MinWidth="1000"
    MinHeight="400"
    wpf:SfSkinManager.Theme="{wpf:SkinManager ThemeName=FluentDark}"
    Background="{StaticResource FormBackground}"
    BorderBrush="{StaticResource BlueBorderBrush}"
    BorderThickness="1,1,1,1"
    FontFamily="Roboto"
    Foreground="{StaticResource FormForeground}"
    Icon="/Resources/Assets/ApplicationImages/Bubba.png"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">


    <!--  ******************************************** RESOURCES *********************************************  -->

    <Window.Resources>
        <Style TargetType="{x:Type ToolTip}">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderBrush" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Background" Value="{StaticResource BlackBackground}" />
            <Setter Property="Foreground" Value="{StaticResource LightBlueBrush}" />
        </Style>

        <Style TargetType="{x:Type Thumb}">
            <Setter Property="Width" Value="13" />
            <Setter Property="Height" Value="13" />
            <Setter Property="BorderBrush" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Background" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border
                            x:Name="ThumbBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="12" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!--  *********************************************  CONTEXT MENU *************************************  -->

    <Window.ContextMenu>
        <ContextMenu x:Name="ChatWindowContextMenu">
            <wpf:MenuItemAdv
                Click="OnFileMenuOptionClick"
                Header="File"
                ToolTip="Browse File System">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FileItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnPromptOptionClick"
                Header="System Prompt"
                ToolTip="Change System Prompt">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ChatItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <wpf:MenuItemAdv
                Click="OnChromeOptionClick"
                Header="Chrome"
                ToolTip="Launch Chrome Browser">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ChromeItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnEdgeOptionClick"
                Header="Edge"
                ToolTip="Launch Edge Browser">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/EdgeItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnFirefoxOptionClick"
                Header="FireFox"
                ToolTip="Launch Firefox Browser">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FirefoxItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <wpf:MenuItemAdv
                Click="OnCalculatorMenuOptionClick"
                Header="Calculator"
                ToolTip="Open Calculator">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CalculatorItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnControlPanelOptionClick"
                Header="Control Panel"
                ToolTip="Windows Control Panel">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ControlPanelItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnTaskManagerOptionClick"
                Header="Task Manager"
                ToolTip="Windows Task Manager">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/TaskManagerItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <wpf:MenuItemAdv
                Click="OnCloseOptionClick"
                Header="Exit"
                ToolTip="Exit Application">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CloseItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

        </ContextMenu>
    </Window.ContextMenu>

    <!--  ********************************************* MAIN LAYOUT *************************************  -->

    <Grid>
        <Grid x:Name="WindowGrid">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="58.04" />
            </Grid.RowDefinitions>

            <!--  *********************************************  TOOLSTRIP *************************************  -->

            <ToolBar
                x:Name="ToolStrip"
                Grid.Row="1"
                Margin="0,5,5,5"
                Background="{StaticResource FormBackground}"
                BorderBrush="{StaticResource FormBackground}"
                ClipToBounds="True"
                FontFamily="Roboto"
                Foreground="{StaticResource FormForeground}"
                SnapsToDevicePixels="True"
                UseLayoutRounding="True">

                <Label
                    x:Name="StatusLabel"
                    Width="180"
                    Height="30"
                    Padding="1,1,1,1"
                    VerticalContentAlignment="Center"
                    FontFamily="Roboto" />

                <b:ToolStripTextBox
                    x:Name="ToolStripTextBox"
                    Width="576"
                    Height="35"
                    Padding="15,1,1,1"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    Background="{StaticResource ControlInteriorBrush}"
                    BorderBrush="{StaticResource BlueBorderBrush}"
                    BorderThickness="2"
                    FontFamily="Roboto"
                    FontSize="14"
                    Foreground="{StaticResource WhiteForeground}"
                    SelectionBackgroundColor="{StaticResource ControlHoverBrush}"
                    SelectionBrush="{StaticResource GreenBackground}"
                    ToolTip="Input Text" />

                <b:ToolStripButton
                    x:Name="ToolStripSendButton"
                    Margin="5,1,5,1"
                    ImageSource="/Resources/Assets/ToolStripImages/PromptButton.png"
                    ToolTip="Begin Search" />

                <b:ToolStripButton
                    x:Name="ToolStripRefreshButton"
                    Margin="5,1,5,1"
                    ImageSource="/Resources/Assets/MenuImages/RefreshItem.png"
                    ToolTip="Resets Input Text" />

                <b:ToolStripButton
                    x:Name="ToolStripDeleteButton"
                    Margin="5,1,5,1"
                    ImageSource="/Resources/Assets/ToolStripImages/PreviousButton.png"
                    ToolTip="Delete/Backspace" />

                <b:ToolStripButton
                    x:Name="ToolStripCancelButton"
                    Margin="5,1,5,1"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/StopButton.png"
                    ToolTip="Developer Tools" />

                <wpf:SfLinearProgressBar
                    x:Name="ProgressBar"
                    Width="240"
                    Height="24"
                    HorizontalContentAlignment="Right"
                    Background="{StaticResource ControlBackground}"
                    BorderBrush="{StaticResource ControlBackground}"
                    FontFamily="Roboto"
                    Foreground="{StaticResource BlueBorderBrush}"
                    ProgressColor="{StaticResource GreenBackground}"
                    TrackColor="{StaticResource BlueBackground}" />

                <Separator
                    Width="5"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />

                <b:ToolStripButton
                    x:Name="ToolStripMenuButton"
                    Width="40"
                    Height="30"
                    Margin="15,1,5,1"
                    HorizontalAlignment="Right"
                    HorizontalContentAlignment="Right"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/ToggleButton.png"
                    ToolTip="Show/Hide Toolbar" />
            </ToolBar>


            <!--  *********************************************  TAB CONTROL *************************************  -->
            <Grid Grid.Row="0" />

            <mah:MetroTabControl
                x:Name="TabControl"
                Grid.Row="0">

                <TabItem
                    x:Name="ChatTabItem"
                    Header="Chat">
                    <Grid
                        x:Name="ChatTabGrid"
                        Background="{StaticResource FormBackground}">
                        <GroupBox
                            x:Name="ChatLogGroupBox"
                            Width="1240"
                            Margin="30,37,0,33"
                            HorizontalAlignment="Left"
                            Background="{StaticResource GroupBoxBackground}"
                            Foreground="{StaticResource FormForeground}">

                            <wpf:SfTextBoxExt
                                x:Name="ChatTextBox"
                                Width="1195"
                                Height="480"
                                Margin="10,0,0,0"
                                Padding="15,10,5,5"
                                HorizontalAlignment="Left"
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Top"
                                Background="{StaticResource BlackBackground}"
                                BorderBrush="{StaticResource BlueBorderBrush}"
                                BorderThickness="2"
                                FontFamily="Roboto"
                                FontSize="12"
                                Foreground="{StaticResource FormForeground}"
                                ScrollViewer.VerticalScrollBarVisibility="Visible"
                                Text=""
                                TextWrapping="Wrap" />
                        </GroupBox>

                    </Grid>
                </TabItem>

                <!--  ********************************************* PARAMETER TAB *************************************  -->

                <TabItem
                    x:Name="ParameterTabItem"
                    Header="Parameters">
                    <Grid
                        x:Name="ParameterTabGrid"
                        Height="Auto"
                        Background="{StaticResource FormBackground}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="167*" />
                            <RowDefinition Height="333*" />
                        </Grid.RowDefinitions>

                        <GroupBox
                            Grid.Row="1"
                            Margin="885,10,23,245"
                            Background="{StaticResource GroupBoxBackground}"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}"
                            Header="Options">
                            <Grid x:Name="OptionGrid">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="52*" />
                                    <RowDefinition Height="69*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <b:MetroLabel
                                    x:Name="NumberLabel"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="20,20,25,10"
                                    Content="Responses" Padding="3,3,3,3" UseLayoutRounding="True" FontSize="14" />

                                <b:MetroLabel
                                    x:Name="SpeedLabel"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="20,10,10,0"
                                    Content="Speed" 
                                    FontSize="14" VerticalAlignment="Center" Padding="3,3,3,3" UseLayoutRounding="True" />

                                <wpf:IntegerTextBox
                                    x:Name="NumberTextBox"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="26,10,25,21"
                                    Padding="5,1,1,1"
                                    VerticalAlignment="Stretch"
                                    HorizontalContentAlignment="Center"
                                    ApplyNegativeForeground="True"
                                    Background="{StaticResource ControlInteriorBrush}"
                                    BorderBrush="{StaticResource BlueBorderBrush}"
                                    BorderThickness="2,2,2,2"
                                    FontFamily="Roboto"
                                    FontSize="14"
                                    NegativeForeground="{StaticResource RedForeground}"
                                    SelectionBrush="{StaticResource YellowBackground}"
                                    ShowSpinButton="True"
                                    Tag="Number"
                                    Text="1"
                                    ToolTip="GPT Responses" />

                                <wpf:IntegerTextBox
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Width="80"
                                    Margin="20,10,20,20"
                                    VerticalAlignment="Stretch"
                                    HorizontalContentAlignment="Center"
                                    Background="{DynamicResource ControlInteriorBrush}"
                                    BorderBrush="{DynamicResource BlueBorderBrush}"
                                    BorderThickness="2"
                                    ShowSpinButton="True"
                                    TextWrapping="Wrap"
                                    UseLayoutRounding="True"
                                    UseNullOption="True"
                                    WatermarkText="Enter your age:"
                                    WatermarkTextIsVisible="True"
                                    Value="1" />

                                <b:MetroButton
                                    x:Name="ClearButton"
                                    Grid.Column="2"
                                    Width="70"
                                    Height="40"
                                    Margin="20,0,0,0"
                                    Padding="1,0,1,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Background="{DynamicResource ButtonBackground}"
                                    BorderBrush="{DynamicResource BlueBorderBrush}"
                                    BorderThickness="0,0,0,0"
                                    ClipToBounds="True"
                                    FontFamily="Roboto"
                                    FontSize="12"
                                    IsMultiLine="False"
                                    Label=""
                                    SmallIcon="/Resources/Assets/MenuImages/RefreshItem.png"
                                    ToolTip="Reset Parameters"
                                    UseLayoutRounding="True" />

                                <b:MetroButton
                                    x:Name="GptFileButton"
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Width="70"
                                    Height="40"
                                    Margin="20,14,0,15"
                                    HorizontalAlignment="Left"
                                    Background="{DynamicResource ButtonBackground}"
                                    BorderBrush="{DynamicResource BlueBorderBrush}"
                                    ClipToBounds="True"
                                    FontFamily="Roboto"
                                    FontSize="12"
                                    IsMultiLine="False"
                                    Label=""
                                    SmallIcon="/Resources/Assets/ToolStripImages/GptUploadButton.png"
                                    ToolTip="GPT Upload API"
                                    UseLayoutRounding="True" />
                            </Grid>
                        </GroupBox>

                        <GroupBox
                            Grid.Row="1"
                            Margin="885,176,23,75"
                            Background="{StaticResource GroupBoxBackground}"
                            BorderBrush="{StaticResource MutedForeground}"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}"
                            Header="Tokens" />

                        <GroupBox
                            Grid.Row="1"
                            Margin="20,13,913,248"
                            Background="{StaticResource GroupBoxBackground}"
                            BorderBrush="{StaticResource MutedForeground}"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}"
                            Header="Randomness" />

                        <GroupBox
                            Grid.Row="1"
                            Margin="435,176,478,75"
                            Background="{StaticResource GroupBoxBackground}"
                            BorderBrush="{StaticResource MutedForeground}"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}"
                            Header="Frequency Penalty" />

                        <GroupBox
                            Grid.Row="1"
                            Height="140"
                            Margin="435,10,478,245"
                            Background="{StaticResource GroupBoxBackground}"
                            BorderBrush="{StaticResource MutedForeground}"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}"
                            Header="Presense Penalty" />

                        <GroupBox
                            Grid.Row="1"
                            Height="150"
                            Margin="20,176,913,0"
                            VerticalAlignment="Top"
                            Background="{StaticResource GroupBoxBackground}"
                            BorderBrush="{StaticResource MutedForeground}"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}"
                            Header="Top Percent" />

                        <Grid
                            x:Name="SystemCanvas"
                            Grid.Row="0"
                            Margin="0,0,10,10"
                            ClipToBounds="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="258*" />
                                <ColumnDefinition Width="354*" />
                                <ColumnDefinition Width="215*" />
                                <ColumnDefinition Width="200*" />
                                <ColumnDefinition Width="121*" />
                                <ColumnDefinition Width="137*" />
                            </Grid.ColumnDefinitions>


                            <GroupBox
                                x:Name="InputGroupBox"
                                Grid.Column="5"
                                Height="125"
                                Margin="10,22,10,10"
                                Background="{StaticResource GroupBoxBackground}"
                                BorderBrush="{StaticResource MutedForeground}"
                                FontFamily="Roboto"
                                FontSize="14"
                                Foreground="{StaticResource FormForeground}"
                                Header="IO">
                                <Grid Height="67">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <CheckBox
                                        x:Name="StreamCheckBox"
                                        Grid.Row="1"
                                        Margin="22,0,10,-3"
                                        Content="Stream"
                                        FontFamily="Roboto"
                                        FontSize="14"
                                        Foreground="{StaticResource FormForeground}"
                                        ToolTip="Streams the responses" />

                                    <CheckBox
                                        x:Name="StoreCheckBox"
                                        Grid.Row="0"
                                        Margin="22,0,22,6"
                                        Content="Store"
                                        FontFamily="Roboto"
                                        FontSize="14"
                                        Foreground="{StaticResource FormForeground}"
                                        ToolTip="Save to the model" />
                                </Grid>
                            </GroupBox>


                            <GroupBox
                                x:Name="VoiceLabel"
                                Grid.Column="4"
                                Width="100"
                                Height="125"
                                Margin="0,22,0,10"
                                HorizontalAlignment="Center"
                                Background="{StaticResource GroupBoxBackground}"
                                BorderBrush="{StaticResource MutedForeground}"
                                FontFamily="Roboto"
                                FontSize="14"
                                Foreground="{StaticResource FormForeground}"
                                Header="Audio">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <CheckBox
                                        x:Name="MuteCheckBox"
                                        Height="22"
                                        Margin="10,0,4,10"
                                        VerticalAlignment="Bottom"
                                        Content="Mute"
                                        FontFamily="Roboto"
                                        FontSize="14"
                                        Foreground="{StaticResource FormForeground}"
                                        ToolTip="Deactivates Text-to-speech (TTS)" />

                                    <CheckBox
                                        x:Name="ListenCheckBox"
                                        Grid.Row="1"
                                        Margin="10,5,10,15"
                                        Content="Listen"
                                        FontFamily="Roboto"
                                        FontSize="14"
                                        Foreground="{StaticResource FormForeground}"
                                        ToolTip="Transcribes audio" />
                                </Grid>
                            </GroupBox>


                            <GroupBox
                                Grid.Column="1"
                                Height="128"
                                Margin="10,19,10,10"
                                Background="{StaticResource GroupBoxBackground}"
                                BorderBrush="{StaticResource MutedForeground}"
                                FontFamily="Roboto"
                                FontSize="14"
                                Foreground="{StaticResource FormForeground}"
                                Header="Models">
                                <Grid>
                                    <b:MetroListBox
                                        x:Name="ModelListBox"
                                        Width="296"
                                        Height="94"
                                        Margin="10,3,0,0"
                                        Padding="3,3,3,3"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        FontFamily="Roboto"
                                        FontSize="12" />
                                </Grid>
                            </GroupBox>

                            <GroupBox
                                x:Name="SpeechGroupBox"
                                Grid.Column="2"
                                Height="128"
                                Margin="10,19,9,10"
                                Background="{StaticResource GroupBoxBackground}"
                                BorderBrush="{StaticResource MutedForeground}"
                                FontFamily="Roboto"
                                FontSize="14"
                                Foreground="{StaticResource FormForeground}"
                                Header="Speech">
                                <Grid>
                                    <b:MetroListBox
                                        x:Name="VoiceListBox"
                                        Width="158"
                                        Height="94"
                                        Margin="10,3,0,0"
                                        Padding="3,3,3,3"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        FontFamily="Roboto" />
                                </Grid>
                            </GroupBox>

                            <GroupBox
                                x:Name="TaskGroupBox"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Height="128"
                                Margin="20,19,354,10"
                                Background="{StaticResource GroupBoxBackground}"
                                BorderBrush="{StaticResource MutedForeground}"
                                FontFamily="Roboto"
                                FontSize="14"
                                Foreground="{StaticResource FormForeground}"
                                Header="Tasks">

                                <Grid>
                                    <b:MetroListBox
                                        x:Name="GenerationListBox"
                                        Width="203"
                                        Height="94"
                                        Margin="7,3,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top" />
                                </Grid>
                            </GroupBox>

                            <GroupBox
                                x:Name="ImageSizeGroup"
                                Grid.Column="3"
                                Height="128"
                                Margin="10,19,10,10"
                                Background="{StaticResource GroupBoxBackground}"
                                FontFamily="Roboto"
                                FontSize="14"
                                Foreground="{StaticResource FormForeground}"
                                Header="Sizes">
                                <Grid>
                                    <b:MetroListBox
                                        x:Name="ImageSizeListBox"
                                        Width="142"
                                        Height="94"
                                        Margin="10,3,0,0"
                                        Padding="3,3,3,3"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        VerticalContentAlignment="Top"
                                        FontFamily="Roboto"
                                        FontSize="12" />
                                </Grid>
                            </GroupBox>


                        </Grid>

                        <wpf:SfRangeSlider
                            x:Name="TemperatureSlider"
                            Grid.Row="1"
                            Width="220"
                            Height="80"
                            Margin="75,43,0,0"
                            Padding="1,1,1,1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch"
                            ActiveMinorTickStroke="{StaticResource WhiteForeground}"
                            ActiveTickStroke="{StaticResource WhiteForeground}"
                            AllowRangeDrag="True"
                            Foreground="{StaticResource FormForeground}"
                            Maximum="100"
                            Minimum="0"
                            MinorTickFrequency="2"
                            MinorTickLength="4"
                            MinorTickStroke="{StaticResource WhiteForeground}"
                            ShowValueLabels="True"
                            SnapsTo="Ticks"
                            TickFrequency="20"
                            TickPlacement="BottomRight"
                            TickStroke="{StaticResource WhiteForeground}"
                            Value="40" />

                        <wpf:SfRangeSlider
                            x:Name="PresenceSlider"
                            Grid.Row="1"
                            Width="220"
                            Height="80"
                            Margin="480,43,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            ActiveMinorTickStroke="{StaticResource WhiteForeground}"
                            ActiveTickStroke="{StaticResource WhiteForeground}"
                            AllowRangeDrag="True"
                            BorderThickness="0,2,0,0"
                            Foreground="{StaticResource FormForeground}"
                            Maximum="100"
                            Minimum="0"
                            MinorTickFrequency="2"
                            MinorTickLength="4"
                            ShowValueLabels="True"
                            SnapsTo="Ticks"
                            ThumbInterval="1"
                            ThumbToolTipPrecision="1"
                            TickFrequency="20"
                            TickPlacement="BottomRight"
                            TickStroke="{StaticResource WhiteForeground}"
                            Value="40" />

                        <wpf:SfRangeSlider
                            x:Name="TopPercentSlider"
                            Grid.Row="1"
                            Width="220"
                            Height="90"
                            Margin="75,200,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            ActiveMinorTickStroke="{StaticResource WhiteForeground}"
                            ActiveTickStroke="{StaticResource WhiteForeground}"
                            AllowRangeDrag="True"
                            Foreground="{StaticResource FormForeground}"
                            Maximum="100"
                            Minimum="0"
                            MinorTickFrequency="2"
                            MinorTickLength="4"
                            MinorTickStroke="{StaticResource WhiteForeground}"
                            ShowValueLabels="True"
                            SnapsTo="Ticks"
                            TickFrequency="20"
                            TickPlacement="BottomRight"
                            TickStroke="{StaticResource WhiteForeground}"
                            Value="40" />

                        <wpf:SfRangeSlider
                            x:Name="FrequencySlider"
                            Grid.Row="1"
                            Width="220"
                            Height="80"
                            Margin="480,200,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            ActiveMinorTickStroke="{StaticResource WhiteForeground}"
                            ActiveTickStroke="{StaticResource WhiteForeground}"
                            AllowRangeDrag="True"
                            BorderThickness="0,2,0,0"
                            Foreground="{StaticResource FormForeground}"
                            Maximum="100"
                            Minimum="0"
                            MinorTickFrequency="2"
                            MinorTickLength="4"
                            ShowValueLabels="True"
                            SnapsTo="Ticks"
                            ThumbInterval="1"
                            ThumbToolTipPrecision="1"
                            TickFrequency="20"
                            TickPlacement="BottomRight"
                            TickStroke="{StaticResource WhiteForeground}"
                            Value="40" />

                        <wpf:SfRangeSlider
                            x:Name="MaxTokenSlider"
                            Grid.Row="1"
                            Width="220"
                            Height="80"
                            Margin="925,200,163,0"
                            VerticalAlignment="Top"
                            ActiveMinorTickStroke="{StaticResource WhiteForeground}"
                            ActiveTickStroke="{StaticResource WhiteForeground}"
                            AllowRangeDrag="True"
                            Foreground="{StaticResource FormForeground}"
                            Maximum="100"
                            Minimum="0"
                            MinorTickFrequency="2"
