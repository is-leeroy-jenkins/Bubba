                                    Tag="PY" />
                                <b:MetroDropDownItem
                                    Content="JavaScript"
                                    Tag="JS" />
                                <b:MetroDropDownItem
                                    Content="VBA"
                                    Tag="VBA" />
                            </b:MetroDropDown>
                        </Canvas>
                        <Canvas
                            x:Name="EditorCanvas"
                            Grid.Column="1" />
                    </Grid>
                </TabItem>


                <!--  *********************************************  IMAGE TAB *************************************  -->

                <TabItem
                    x:Name="ImageTabItem"
                    BorderBrush="{x:Null}"
                    Foreground="{StaticResource FormForeground}"
                    Header="Image"
                    Tag="Image">
                    <Grid
                        x:Name="ImageTabGrid"
                        Background="{StaticResource FormBackground}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="335*" />
                            <ColumnDefinition Width="101*" />
                        </Grid.ColumnDefinitions>
                        <GroupBox
                            x:Name="ImageGroupBox"
                            Width="970"
                            Height="482"
                            Margin="20,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Background="{StaticResource GroupBoxBackground}"
                            Foreground="{StaticResource FormForeground}">

                            <b:MetroImageEditor
                                x:Name="ImageEditor"
                                Height="472"
                                Margin="14,0,12,0"
                                Background="{StaticResource ControlInteriorBrush}" />

                        </GroupBox>
                        <Canvas Grid.Column="1">
                            <wpf:ColorEdit
                                x:Name="ColorEdit"
                                Canvas.Left="10"
                                Canvas.Top="52"
                                Width="286"
                                Height="264"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Background="{DynamicResource ControlBackground}"
                                BorderBrush="{DynamicResource BlueBorderBrush}"
                                BorderThickness="2,2,2,2"
                                Brush="Blue"
                                FontFamily="Roboto"
                                UseLayoutRounding="True" />
                            <b:MetroTile
                                x:Name="DeleteImageButton"
                                Title=""
                                Canvas.Left="15"
                                Canvas.Top="546"
                                Width="70"
                                Height="40"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Header=""
                                ImageSource="/Resources/Assets/ToolStripImages/DeleteButton.png" />
                        </Canvas>
                    </Grid>
                </TabItem>

                <!--  *********************************************  CHART TAB *************************************  -->

                <TabItem
                    x:Name="ChartTabItem"
                    BorderBrush="{x:Null}"
                    Foreground="{StaticResource FormForeground}"
                    Header="Chart"
                    Tag="Chart">
                    <Grid
                        x:Name="ChartTabGrid"
                        Height="Auto"
                        Background="{StaticResource FormBackground}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="515*" />
                            <ColumnDefinition Width="139*" />
                        </Grid.ColumnDefinitions>

                        <wpf:SfChart3D
                            x:Name="Chart"
                            Margin="20,35,10,35"
                            BorderBrush="{StaticResource BlueBorderBrush}"
                            Foreground="{StaticResource FormForeground}"
                            TopWallBrush="{StaticResource FormBackground}" />

                        <Canvas Grid.Column="1" />
                        <b:MetroListBox
                            Grid.Column="1"
                            Width="231"
                            Height="370"
                            Margin="19,0,0,85"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            d:ItemsSource="{d:SampleData ItemCount=5}" />

                        <b:MetroDropDown
                            Grid.Column="1"
                            Width="231"
                            Height="35"
                            Margin="19,82,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            AllowMultiSelect="True"
                            DefaultText="ComboBox Items" />
                        <Canvas Grid.Column="1" />
                    </Grid>
                </TabItem>

                <!--  ********************************************* DATA TAB *************************************  -->

                <TabItem
                    x:Name="DataTabItem"
                    Foreground="{StaticResource FormForeground}"
                    Header="Data"
                    Tag="Data">

                    <Grid
                        x:Name="DatabaseGrid"
                        Background="{StaticResource FormBackground}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="165*" />
                            <ColumnDefinition Width="53*" />
                        </Grid.ColumnDefinitions>

                        <b:MetroDataGrid
                            x:Name="DataGrid"
                            Margin="40,60,30,80"
                            BorderBrush="{StaticResource BlueBorderBrush}"
                            BorderThickness="2" />
                        <Canvas
                            x:Name="DataFilterGrid"
                            Grid.Column="1">

                            <b:MetroDropDown
                                x:Name="DataComboBox"
                                Canvas.Left="30"
                                Canvas.Top="64"
                                Width="243"
                                Height="43"
                                HorizontalAlignment="Left"
                                AllowMultiSelect="True"
                                DefaultText="ComboBox Items">
                                <wpf:ComboBoxItemAdv Content="Item 1" />
                                <wpf:ComboBoxItemAdv Content="Item 2" />
                                <wpf:ComboBoxItemAdv Content="Item 3" />
                                <wpf:ComboBoxItemAdv Content="Item 4" />
                                <wpf:ComboBoxItemAdv Content="Item 5" />
                            </b:MetroDropDown>

                            <b:MetroListBox
                                Canvas.Left="30"
                                Canvas.Top="127"
                                Width="243"
                                Height="395"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top" />
                        </Canvas>
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                        </Grid>
                    </Grid>
                </TabItem>

                <!--  ********************************************* PLOT TAB *************************************  -->

                <TabItem
                    x:Name="PlotTabItem"
                    Foreground="{StaticResource FormForeground}"
                    Header="Graph"
                    Tag="Graph">

                    <Grid
                        x:Name="PlotTabGrid"
                        Background="{StaticResource FormBackground}">

                        <sp:WpfPlot
                            x:Name="Plotter"
                            Width="1210"
                            Height="530"
                            Margin="40,42,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            BorderBrush="{StaticResource BlueBorderBrush}"
                            Foreground="{StaticResource FormForeground}" />


                    </Grid>
                </TabItem>

                <!--  ********************************************* BUSY TAB *************************************  -->

                <TabItem
                    x:Name="BusyTabItem"
                    BorderBrush="{x:Null}"
                    Foreground="{StaticResource FormForeground}"
                    Header="Busy"
                    Tag="Busy">

                    <Grid
                        x:Name="BusyTabGrid"
                        Background="{StaticResource FormBackground}">

                        <Image
                            Width="1288"
                            Height="Auto"
                            Margin="10,5,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Source="/Resources/Assets/LoaderImages/Processing.gif"
                            Stretch="Fill" />
                    </Grid>

                </TabItem>

            </mah:MetroTabControl>
        </Grid>
    </Grid>
</Window>
