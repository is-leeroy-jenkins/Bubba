<Window
    x:Class="Bubba.ChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Bubba"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:num="clr-namespace:System.Globalization;assembly=System.Runtime"
    xmlns:plt="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:web="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
    xmlns:wpf="http://schemas.syncfusion.com/wpf"
    Title="Bubba"
    Width="1290"
    Height="795"
    MinWidth="1000"
    MinHeight="400"
    wpf:SfSkinManager.Theme="{wpf:SkinManager ThemeName=FluentDark}"
    Background="{StaticResource FormBackground}"
    BorderBrush="{StaticResource BlueBorderBrush}"
    Foreground="{StaticResource FormForeground}"
    Icon="/Resources/Assets/ApplicationImages/Bubba.png"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <!--  ******************************************** RESOURCES *********************************************  -->

    <Window.Resources>
        <Style TargetType="{x:Type ToolTip}">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderBrush" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Background" Value="{StaticResource BlackBackground}" />
            <Setter Property="Foreground" Value="{StaticResource LightBlueBrush}" />
        </Style>

        <Style TargetType="{x:Type Thumb}">
            <Setter Property="Width" Value="13" />
            <Setter Property="Height" Value="13" />
            <Setter Property="BorderBrush" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Background" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border
                            x:Name="ThumbBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="12" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!--  *********************************************  CONTEXT MENU *************************************  -->

    <Window.ContextMenu>
        <ContextMenu x:Name="ChatWindowContextMenu">
            <wpf:MenuItemAdv
                Click="OnFileMenuOptionClick"
                Header="File"
                ToolTip="Browse File System">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FileItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnPromptOptionClick"
                Header="System Prompt"
                ToolTip="Change System Prompt">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ChatItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnGuidanceOptionClick"
                Header="Guidance"
                ToolTip="Federal Regulations">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/DocumentaionItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>


            <Separator Background="{StaticResource BlueBorderBrush}" />

            <wpf:MenuItemAdv
                Click="OnChromeOptionClick"
                Header="Chrome"
                ToolTip="Launch Chrome Browser">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ChromeItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnEdgeOptionClick"
                Header="Edge"
                ToolTip="Launch Edge Browser">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/EdgeItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnFirefoxOptionClick"
                Header="FireFox"
                ToolTip="Launch Firefox Browser">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FirefoxItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <wpf:MenuItemAdv
                Click="OnCalculatorMenuOptionClick"
                Header="Calculator"
                ToolTip="Open Calculator">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CalculatorItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnControlPanelOptionClick"
                Header="Control Panel"
                ToolTip="Windows Control Panel">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ControlPanelItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <wpf:MenuItemAdv
                Click="OnTaskManagerOptionClick"
                Header="Task Manager"
                ToolTip="Windows Task Manager">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/TaskManagerItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <wpf:MenuItemAdv
                Click="OnCloseOptionClick"
                Header="Exit"
                ToolTip="Exit Application">
                <wpf:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CloseItem.png" />
                </wpf:MenuItemAdv.Icon>
            </wpf:MenuItemAdv>

        </ContextMenu>
    </Window.ContextMenu>


    <!--  *********************************************  MAIN GRID *************************************  -->


    <Grid
        x:Name="MainGrid"
        Height="769"
        Margin="3,0,3,0"
        VerticalAlignment="Center">

        <Grid.RowDefinitions>
            <RowDefinition
                x:Name="Header"
                Height="40" />
            <RowDefinition
                x:Name="Body"
                Height="672" />
            <RowDefinition
                x:Name="Footer"
                Height="63" />
        </Grid.RowDefinitions>

        <!--  ********************************************* TOOLSTRIP *************************************  -->

        <Grid
            x:Name="ToolStripCanvas"
            Grid.Row="2"
            Margin="0">

            <ToolBar
                x:Name="ToolStrip"
                Margin="0"
                Background="{StaticResource FormBackground}"
                BorderBrush="{StaticResource FormBackground}"
                ClipToBounds="True"
                FontFamily="Roboto"
                Foreground="{StaticResource FormForeground}"
                SnapsToDevicePixels="True">

                <Label
                    x:Name="StatusLabel"
                    Width="223"
                    Height="30"
                    Padding="1,1,1,1"
                    VerticalContentAlignment="Center"
                    FontFamily="Roboto" />

                <b:ToolStripTextBox
                    x:Name="ToolStripTextBox"
                    Width="576"
                    Height="30"
                    Padding="15,1,1,1"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    Background="{StaticResource ControlInteriorBrush}"
                    BorderBrush="{StaticResource BlueBorderBrush}"
                    BorderThickness="2"
                    FontFamily="Roboto"
                    FontSize="14"
                    SelectionBackgroundColor="{DynamicResource ControlHoverBrush}"
                    SelectionBrush="{DynamicResource GreenBackground}"
                    ToolTip="Enter text" />

                <b:ToolStripButton
                    x:Name="LookupButton"
                    Margin="5,1,5,1"
                    ImageSource="/Resources/Assets/ToolStripImages/PromptButton.png"
                    ToolTip="Begin Search" />

                <b:ToolStripButton
                    x:Name="RefreshButton"
                    Margin="5,1,5,1"
                    ImageSource="/Resources/Assets/MenuImages/RefreshItem.png"
                    ToolTip="Resets Input Controls and GPT Parameters" />

                <b:ToolStripButton
                    x:Name="CancelButton"
                    Margin="5,1,5,1"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/StopButton.png"
                    ToolTip="Developer Tools" />

                <wpf:SfLinearProgressBar
                    x:Name="ProgressBar"
                    Width="220"
                    Height="24"
                    HorizontalContentAlignment="Right"
                    Background="{DynamicResource ControlBackground}"
                    BorderBrush="{DynamicResource ControlBackground}"
                    FontFamily="Roboto"
                    Foreground="{DynamicResource BlueBorderBrush}"
                    ProgressColor="{DynamicResource GreenBackground}"
                    TrackColor="{DynamicResource BlueBackground}" />
                <Separator
                    Width="5"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />

                <b:ToolStripButton
                    x:Name="MenuButton"
                    Width="40"
                    Height="30"
                    Margin="15,1,5,1"
                    HorizontalAlignment="Right"
                    FontFamily="Roboto"
                    ImageSource="/Resources/Assets/ToolStripImages/ToggleButton.png"
                    ToolTip="Show/Hide Toolbar" />
            </ToolBar>
        </Grid>

        <Grid
            x:Name="BodyGrid"
            Grid.Row="1"
            Height="656"
            VerticalAlignment="Top">

            <Grid.RowDefinitions>
                <RowDefinition
                    x:Name="SystemRow"
                    Height="131" />
                <RowDefinition
                    x:Name="ParameterRow"
                    Height="210" />
                <RowDefinition
                    x:Name="UserRow"
                    Height="355" />
            </Grid.RowDefinitions>

            <Grid
                x:Name="SystemCanvas"
                Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="258*" />
                    <ColumnDefinition Width="354*" />
                    <ColumnDefinition Width="215*" />
                    <ColumnDefinition Width="200*" />
                    <ColumnDefinition Width="121*" />
                    <ColumnDefinition Width="137*" />
                </Grid.ColumnDefinitions>


                <GroupBox
                    x:Name="InputGroupBox"
                    Grid.Column="5"
                    Margin="10,15,10,11"
                    Background="{StaticResource GroupBoxBackground}"
                    BorderBrush="{StaticResource MutedForeground}"
                    FontSize="12"
                    Foreground="{StaticResource LightBlueBrush}"
                    Header="IO">
                    <Grid Height="67">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <CheckBox
                            x:Name="StreamCheckBox"
                            Grid.Row="1"
                            Margin="22,0,10,-3"
                            Content="Stream"
                            Foreground="{DynamicResource LightBlueBrush}" />
                        <CheckBox
                            x:Name="StoreCheckBox"
                            Grid.Row="0"
                            Margin="22,0,22,6"
                            Content="Store"
                            Foreground="{DynamicResource LightBlueBrush}" />
                    </Grid>
                </GroupBox>


                <GroupBox
                    x:Name="VoiceLabel"
                    Grid.Column="4"
                    Width="100"
                    Margin="0,15,10,11"
                    HorizontalAlignment="Right"
                    Background="{StaticResource GroupBoxBackground}"
                    BorderBrush="{StaticResource MutedForeground}"
                    FontSize="12"
                    Foreground="{StaticResource LightBlueBrush}"
                    Header="Audio">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <CheckBox
                            x:Name="MuteCheckBox"
                            Height="22"
                            Margin="10,0,4,0"
                            VerticalAlignment="Center"
                            Content="Mute"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}"
                            ToolTip="Deactivates Text-to-speech (TTS)" />

                        <CheckBox
                            x:Name="ListenCheckBox"
                            Grid.Row="1"
                            Height="22"
                            Margin="10,0,10,0"
                            VerticalAlignment="Center"
                            Content="Listen"
                            FontFamily="Roboto"
                            FontSize="14"
                            Foreground="{StaticResource FormForeground}"
                            ToolTip="Transcribes audio" />
                    </Grid>
                </GroupBox>


                <GroupBox
                    Grid.Column="1"
                    Margin="10,10,10,11"
                    Background="{StaticResource GroupBoxBackground}"
                    BorderBrush="{StaticResource MutedForeground}"
                    Foreground="{StaticResource LightBlueBrush}"
                    Header="Models">
                    <Grid>
                        <b:MetroListBox
                            x:Name="ModelListBox"
                            Width="286"
                            Height="75"
                            Margin="10,10,0,4"
                            Padding="3,3,3,3"
                            HorizontalAlignment="Left"
                            FontFamily="Roboto"
                            FontSize="12" />
                    </Grid>
                </GroupBox>

                <GroupBox
                    x:Name="SpeechGroupBox"
                    Grid.Column="2"
                    Margin="9,10,10,10"
                    Background="{StaticResource GroupBoxBackground}"
                    BorderBrush="{StaticResource MutedForeground}"
                    FontSize="12"
                    Foreground="{StaticResource LightBlueBrush}"
                    Header="Speech">
                    <Grid>
                        <b:MetroListBox
                            x:Name="VoiceListBox"
                            Width="158"
                            Margin="10,6,0,6"
                            Padding="3,3,3,3"
                            HorizontalAlignment="Left"
                            FontFamily="Roboto" />
                    </Grid>
                </GroupBox>

                <GroupBox
                    x:Name="TaskGroupBox"
                    Grid.Column="0"
                    Margin="10,10,10,11"
                    Background="{StaticResource GroupBoxBackground}"
                    BorderBrush="{StaticResource MutedForeground}"
                    Foreground="{StaticResource LightBlueBrush}"
                    Header="Tasks">

                    <Grid>
                        <b:MetroListBox
                            x:Name="GenerationListBox"
                            Width="203"
                            Height="75"
                            Margin="7,7,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top" />
                    </Grid>
                </GroupBox>

                <GroupBox
                    x:Name="ImageSizeGroup"
                    Grid.Column="3"
                    Margin="10,15,10,10"
                    Background="{StaticResource GroupBoxBackground}"
                    Foreground="{StaticResource LightBlueBrush}"
                    Header="Sizes">
                    <Grid>
                        <b:MetroListBox
                            x:Name="ImageSizeListBox"
                            Width="142"
                            Height="75"
                            Margin="0,5,0,0"
                            Padding="3,3,3,3"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            VerticalContentAlignment="Top"
                            FontFamily="Roboto"
                            FontSize="12" />
                    </Grid>
                </GroupBox>


            </Grid>
            <Grid
                x:Name="ParameterCanvas"
                Grid.Row="1"
                Margin="0,5,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>


                <GroupBox
                    Height="188"
                    Margin="10,0,10,0"
                    VerticalAlignment="Top"
                    Background="{StaticResource GroupBoxBackground}"
                    BorderBrush="{StaticResource MutedForeground}"
                    FontFamily="Roboto"
                    FontSize="12"
                    Foreground="{StaticResource LightBlueBrush}"
                    Header="Randomness">
                    <wpf:SfRangeSlider
                        x:Name="TemperatureSlider"
                        Height="44"
                        Margin="10,58,10,0"
                        VerticalAlignment="Top"
                        ActiveMinorTickStroke="{StaticResource BlueBorderBrush}"
                        ActiveTickStroke="{StaticResource BlueBorderBrush}"
                        Background="{StaticResource BlueBorderBrush}"
                        ClipToBounds="True"
                        FontFamily="Roboto"
                        Foreground="{StaticResource WhiteForeground}"
                        LargeChange="0.05"
                        Maximum="2"
                        Minimum="0"
                        MinorTickFrequency="0.125"
                        MinorTickLength="6"
                        MinorTickStroke="{StaticResource WhiteForeground}"
                        SnapsTo="Ticks"
                        SnapsToDevicePixels="True"
                        ThumbToolTipPlacement="BottomRight"
                        TickFrequency="0.10"
                        TickLength="12"
                        TickStroke="{StaticResource WhiteForeground}"
                        ToolTip="A number between 0 and 2. Default=1"
                        ToolTipFormat="P2"
                        Value="0.08" />
                </GroupBox>


                <GroupBox
                    Grid.Column="5"
                    Height="188"
                    Margin="10,1,10,1"
                    VerticalAlignment="Center"
                    Background="{StaticResource GroupBoxBackground}"
                    BorderBrush="{StaticResource MutedForeground}"
                    FontFamily="Roboto"
                    FontSize="12"
                    Foreground="{StaticResource LightBlueBrush}"
                    Header="Max Tokens">
                    <wpf:SfRangeSlider
                        x:Name="MaxTokenSlider"
                        Height="40"
                        Margin="10,58,10,0"
                        VerticalAlignment="Top"
                        ActiveMinorTickStroke="{StaticResource BlueBorderBrush}"
                        ActiveTickStroke="{StaticResource BlueBorderBrush}"
                        Background="{StaticResource BlueBorderBrush}"
                        ClipToBounds="True"
                        FontFamily="Roboto"
                        Foreground="{StaticResource WhiteForeground}"
                        LabelPlacement="BottomRight"
                        LargeChange="4"
                        Maximum="20"
                        Minimum="1"
                        MinorTickFrequency="1"
                        MinorTickLength="4"
                        MinorTickStroke="{StaticResource WhiteForeground}"
                        SmallChange="1"
                        SnapsTo="Ticks"
                        SnapsToDevicePixels="True"
                        TickFrequency="4"
                        TickLength="10"
                        TickStroke="{StaticResource WhiteForeground}" />
                </GroupBox>


                <GroupBox
                    x:Name="TopPercentGroupBox"
                    Grid.Column="1"
                    Height="188"
                    Margin="10,0,10,0"
                    VerticalAlignment="Top"
                    Background="{StaticResource GroupBoxBackground}"
                    BorderBrush="{StaticResource MutedForeground}"
                    FontFamily="Roboto"
                    FontSize="12"
                    Foreground="{StaticResource LightBlueBrush}"
                    Header="Nucleus Sampling">
                    <wpf:SfRangeSlider
                        x:Name="TopPercentSlider"
                        Height="44"
                        Margin="10,58,10,0"
                        VerticalAlignment="Top"
                        ActiveMinorTickStroke="{StaticResource LightBlueBrush}"
                        ActiveTickStroke="{StaticResource BlueBorderBrush}"
                        Background="{StaticResource BlueBorderBrush}"
                        BorderBrush="{StaticResource GroupBoxBackground}"
                        ClipToBounds="True"
                        FontFamily="Roboto"
                        LabelPlacement="BottomRight"
                        LargeChange="0.10"
                        Maximum="1.0"
                        Minimum="0.0"
                        MinorTickFrequency="0.125"
                        MinorTickLength="5"
                        MinorTickStroke="{StaticResource WhiteForeground}"
                        SmallChange="0.05"
                        SnapsTo="Ticks"
                        SnapsToDevicePixels="True"
                        Tag="TopPercent"
                        ThumbToolTipPlacement="BottomRight"
                        TickFrequency="0.05"
                        TickLength="10"
                        TickStroke="{StaticResource WhiteForeground}"
                        ToolTip="A number between 0 and 1. (%) Default=0"
                        ToolTipFormat="P2"
                        ValuePlacement="TopLeft"
                        Value="0.09" />
                </GroupBox>

                <GroupBox
                    x:Name="FrequencyPenaltyGroupBox"
                    Grid.Column="2"
                    Height="188"
                    Margin="10,0,10,0"
                    VerticalAlignment="Center"
                    Background="{StaticResource GroupBoxBackground}"
                    BorderBrush="{StaticResource MutedForeground}"
                    FontFamily="Roboto"
                    FontSize="12"
                    Foreground="{StaticResource LightBlueBrush}"
                    Header="Presence Penalty">
                    <wpf:SfRangeSlider
                        x:Name="PresenceSlider"
                        Height="44"
                        Margin="10,58,10,0"
                        VerticalAlignment="Top"
                        ActiveMinorTickStroke="{StaticResource BlueBorderBrush}"
                        ActiveTickStroke="{StaticResource BlueBorderBrush}"
                        Background="{StaticResource BlueBorderBrush}"
                        BorderBrush="{StaticResource GroupBoxBackground}"
                        ClipToBounds="True"
                        FontFamily="Roboto"
                        LabelPlacement="BottomRight"
                        LargeChange="0.10"
                        Maximum="2"
                        Minimum="-2"
                        MinorTickFrequency="0.5"
                        MinorTickLength="4"
                        MinorTickStroke="{StaticResource WhiteForeground}"
                        SmallChange="0.25"
                        SnapsTo="Ticks"
                        SnapsToDevicePixels="True"
                        Tag="FrequencyPenalty"
                        TickFrequency="0.2"
                        TickLength="10"
                        TickStroke="{StaticResource WhiteForeground}"
                        ToolTip="A number between -2 and 2. Default=0"
                        ToolTipFormat="P2"
                        ValuePlacement="TopLeft"
                        Value="0.00" />
                </GroupBox>

                <GroupBox
                    Grid.Column="3"
                    Height="188"
                    Margin="10,1,10,1"
                    VerticalAlignment="Center"
                    Background="{StaticResource GroupBoxBackground}"
                    BorderBrush="{StaticResource MutedForeground}"
                    FontFamily="Roboto"
                    FontSize="12"
                    Foreground="{StaticResource LightBlueBrush}"
                    Header="Frequency Penalty">
                    <wpf:SfRangeSlider
                        x:Name="FrequencySlider"
                        Height="44"
                        Margin="10,58,10,0"
                        VerticalAlignment="Top"
                        ActiveMinorTickStroke="{StaticResource BlueBorderBrush}"
                        ActiveTickStroke="{StaticResource BlueBorderBrush}"
                        Background="{StaticResource BlueBorderBrush}"
                        Foreground="{StaticResource WhiteForeground}"
                        LabelPlacement="BottomRight"
                        LargeChange="0.10"
                        Maximum="2"
                        Minimum="-2"
                        MinorTickLength="4"
                        MinorTickStroke="{StaticResource WhiteForeground}"
                        SmallChange="0.20"
                        SnapsTo="Ticks"
                        Tag="FrequencyPenalty"
                        TickFrequency="0.25"
                        TickLength="10"
                        TickStroke="{StaticResource WhiteForeground}"
                        ToolTip="A number between -2 and 2. Default=0"
                        ToolTipFormat="N2"
                        ValuePlacement="TopLeft"
                        Value="0.00" />
                </GroupBox>

                <TextBox
                    x:Name="TemperatureTextBox"
                    Grid.Column="0"
                    Width="80"
                    Height="30"
                    Margin="76,145,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    Background="{StaticResource ControlInteriorBrush}"
                    BorderBrush="{StaticResource BlueBorderBrush}"
                    BorderThickness="2"
                    ClipToBounds="True"
                    FontFamily="Roboto"
                    FontSize="16"
                    Foreground="{StaticResource WhiteForeground}"
                    SelectionOpacity="1"
                    SnapsToDevicePixels="True"
                    Tag="Temperature"
                    Text="{Binding Value, ElementName=TemperatureSlider, Mode=TwoWay, StringFormat=N2}"
                    ToolTip="A number between 0 and 2. Default=1" />

                <TextBox
                    x:Name="TopPercentTextBox"
                    Grid.Column="1"
                    Width="80"
                    Height="30"
                    Margin="0,145,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    Background="{StaticResource ControlInteriorBrush}"
                    BorderBrush="{StaticResource BlueBorderBrush}"
                    BorderThickness="2"
                    ClipToBounds="True"
                    FontFamily="Roboto"
                    FontSize="16"
                    Foreground="{StaticResource WhiteForeground}"
                    SelectionOpacity="1"
                    SnapsToDevicePixels="True"
                    Tag="TopPercent"
                    Text="{Binding Value, ElementName=TopPercentSlider, Mode=TwoWay, StringFormat=N2}"
                    ToolTip="A number between 0 and 1. (%) Default=0" />

                <TextBox
                    x:Name="PresenceTextBox"
                    Grid.Column="2"
                    Height="30"
                    Margin="54,145,80,0"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    Background="{StaticResource ControlInteriorBrush}"
                    BorderBrush="{StaticResource BlueBorderBrush}"
                    BorderThickness="2"
                    ClipToBounds="True"
                    FontFamily="Roboto"
                    FontSize="16"
                    Foreground="{StaticResource WhiteForeground}"
                    SelectionOpacity="1"
                    SnapsToDevicePixels="True"
                    Tag="PresencePenalty"
                    Text="{Binding Value, ElementName=PresenceSlider, Mode=TwoWay, StringFormat=N2}"
                    ToolTip="A number between -2 and 2. Default=0" />

                <TextBox
                    x:Name="FrequencyTextBox"
                    Grid.Column="3"
                    Height="30"
                    Margin="64,145,70,0"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    Background="{StaticResource ControlInteriorBrush}"
                    BorderBrush="{StaticResource BlueBorderBrush}"
                    BorderThickness="2"
                    ClipToBounds="True"
                    FontFamily="Roboto"
                    FontSize="16"
                    Foreground="{StaticResource WhiteForeground}"
                    SelectionOpacity="1"
                    SnapsToDevicePixels="True"
                    Tag="FrequencyPenalty"
                    Text="{Binding Value, ElementName=FrequencySlider, Mode=TwoWay, StringFormat=N2}"
                    ToolTip="A number between -2 and 2. Default=0" />

                <GroupBox
                    Grid.Column="4"
                    Height="188"
                    Margin="10,1,10,1"
                    VerticalAlignment="Center"
                    Background="{StaticResource GroupBoxBackground}"
                    BorderBrush="{StaticResource MutedForeground}"
                    FontFamily="Roboto"
                    FontSize="12"
                    Foreground="{StaticResource LightBlueBrush}"
                    Header="Responses">
                    <wpf:SfRangeSlider
                        x:Name="NumberSlider"
                        Height="48"
                        Margin="10,58,10,0"
                        VerticalAlignment="Top"
                        ActiveMinorTickStroke="{StaticResource BlueBorderBrush}"
                        ActiveTickStroke="{StaticResource BlueBorderBrush}"
                        Background="{StaticResource BlueBorderBrush}"
                        ClipToBounds="True"
                        FontFamily="Roboto"
                        Foreground="{StaticResource WhiteForeground}"
                        LabelPlacement="BottomRight"
                        LargeChange="4"
                        Maximum="20"
                        Minimum="1"
                        MinorTickFrequency="1"
                        MinorTickLength="4"
                        MinorTickStroke="{StaticResource WhiteForeground}"
                        SmallChange="1"
                        SnapsTo="Ticks"
                        SnapsToDevicePixels="True"
                        TickFrequency="4"
                        TickLength="10"
                        TickStroke="{StaticResource WhiteForeground}"
                        ToolTip="The number of responses (text, image, speech, etc)"
                        ToolTipFormat="N1"
                        ValuePlacement="TopLeft"
                        Value="1" />
                </GroupBox>

                <TextBlock
                    x:Name="TemperatureText"
                    Grid.Column="0"
                    Margin="84,42,58,139"
                    FontFamily="Roboto"
                    FontSize="16"
                    Foreground="{StaticResource BlueBorderBrush}"
                    Text="{Binding Value, ElementName=TemperatureSlider, Mode=OneWay, StringFormat=P2}" />

                <TextBlock
                    x:Name="FrequencyText"
                    Grid.Column="3"
                    Margin="74,40,80,139"
                    Padding="1,1,1,1"
                    FontFamily="Roboto"
                    FontSize="16"
                    Foreground="{StaticResource BlueBorderBrush}"
                    Text="{Binding Value, ElementName=FrequencySlider, Mode=TwoWay, StringFormat=N2}" />

                <TextBlock
                    x:Name="PresenceText"
                    Grid.Column="2"
                    Width="54"
                    Margin="80,42,0,139"
                    HorizontalAlignment="Left"
                    ClipToBounds="True"
                    FontFamily="Roboto"
                    FontSize="16"
                    Foreground="{StaticResource BlueBorderBrush}"
                    SnapsToDevicePixels="True"
