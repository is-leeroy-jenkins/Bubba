<Window
    x:Class="Bubba.GptImageDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Bubba"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:wpf="http://schemas.syncfusion.com/wpf"
    x:Name="ImageDialog"
    Width="750"
    Height="450"
    wpf:SfSkinManager.Theme="{wpf:SkinManager ThemeName=FluentDark}"
    Background="{StaticResource FormBackground}"
    BorderBrush="{StaticResource BlueBorderBrush}"
    FontFamily="Roboto"
    Foreground="{StaticResource FormForeground}"
    Icon="/Resources/Assets/ApplicationImages/Bubba.png"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <wpf:SfImageEditor
            x:Name="Editor"
            Grid.Row="1"
            Margin="10,10,10,10"
            Padding="3,3,3,3"
            Background="{DynamicResource ControlInteriorBrush}"
            FontFamily="Roboto"
            UseLayoutRounding="True" />


        <!--  ********************************************* TOOLSTRIP *************************************  -->


        <ToolBar
            x:Name="ToolStrip"
            Grid.Row="2"
            Height="40"
            Margin="0,0,10,0"
            VerticalAlignment="Center"
            Background="{StaticResource FormBackground}"
            BorderBrush="{StaticResource FormBackground}"
            ClipToBounds="True"
            FontFamily="Roboto"
            Foreground="{StaticResource FormForeground}"
            SnapsToDevicePixels="True">

            <Label
                x:Name="StatusLabel"
                Width="80"
                Height="30"
                FontFamily="Roboto" />

            <local:ToolStripButton
                x:Name="FirstButton"
                Width="40"
                Height="30"
                Margin="5,1,5,1"
                FontFamily="Roboto"
                ImageSource="/Resources/Assets/ToolStripImages/FirstButton.png"
                ToolTip="First Item" />

            <local:ToolStripButton
                x:Name="PreviousButton"
                Margin="5,1,5,1"
                ImageSource="/Resources/Assets/ToolStripImages/PreviousButton.png"
                ToolTip="Previous Item" />

            <local:ToolStripTextBox
                x:Name="ToolStripTextBox"
                Width="200"
                Height="30"
                Margin="5,1,5,1"
                Padding="15,1,1,1"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center"
                Background="{StaticResource ControlInteriorBrush}"
                BorderBrush="{StaticResource BlueBorderBrush}"
                BorderThickness="2"
                FontFamily="Roboto"
                FontSize="14"
                SelectionBackgroundColor="{StaticResource SteelBlueBackground}"
                ToolTip="Enter text" />

            <local:ToolStripButton
                x:Name="LookupButton"
                Margin="5,1,5,1"
                ImageSource="/Resources/Assets/ToolStripImages/GoButton.png"
                ToolTip="Begin Search" />

            <local:ToolStripButton
                x:Name="NextButton"
                Margin="5,1,5,1"
                ImageSource="/Resources/Assets/ToolStripImages/NextButton.png"
                ToolTip="Next Item" />

            <local:ToolStripButton
                x:Name="LastButton"
                Margin="5,1,5,1"
                ImageSource="/Resources/Assets/ToolStripImages/LastButton.png"
                ToolTip="Last Item" />

            <mah:MetroProgressBar
                x:Name="ProgressBar"
                Width="130"
                Background="{StaticResource FormBackground}" />
            <local:ToolStripButton
                Width="40"
                Height="30"
                VerticalContentAlignment="Stretch"
                ClipToBounds="True"
                ImageSource="/Resources/Assets/ToolStripImages/ExitButton.png"
                SnapsToDevicePixels="True"
                ToolTip="Close Window"
                UseLayoutRounding="True" />
        </ToolBar>
        <Grid x:Name="HeaderGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*" />
                <ColumnDefinition Width="33*" />
                <ColumnDefinition Width="11*" />
            </Grid.ColumnDefinitions>
            <Image
                x:Name="HeaderIcon"
                Width="65"
                Margin="10,-2,0,7"
                HorizontalAlignment="Left" />
            <Label
                Grid.Column="2"
                Width="145"
                Margin="0,0,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                Content="Label" />
        </Grid>
    </Grid>
</Window>
