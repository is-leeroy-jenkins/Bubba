<Window
    x:Class="Bubba.BubbaWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Bubba"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:sync="http://schemas.syncfusion.com/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:core="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
    x:Name="Bubba"
    Title="Bubba GPT"
    Width="1210"
    Height="750"
    MinWidth="1000"
    MinHeight="600"
    MaxWidth="1500"
    MaxHeight="1000"
    sync:SfSkinManager.Theme="{sync:SkinManager ThemeName=FluentDark}"
    Background="{StaticResource FormBackground}"
    Foreground="{StaticResource LightBlueBrush}"
    BorderBrush="{StaticResource BlueBorderBrush}"
    WindowStartupLocation="CenterScreen"
    Icon="/Resources/Assets/ApplicationImages/Bubba.ico"
    BorderThickness="1"
    FontFamily="Roboto"
    FontSize="12"
    mc:Ignorable="d">

    <!--  ******************************************** Resources *********************************************  -->

    <Window.Resources>
        <Style TargetType="{x:Type ToolTip}">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderBrush" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Background" Value="{StaticResource BlackBackground}" />
            <Setter Property="Foreground" Value="{StaticResource LightBlueBrush}" />
        </Style>
    </Window.Resources>

    <!--  ******************************************** Context Menu ******************************************  -->

    <Canvas>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
        </Grid>
        <b:MetroTabControl
            Canvas.Left="1"
            Canvas.Top="1"
            Width="1208"
            Height="713"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">
            <TabItem Header="TabItem">
                <Grid Background="{StaticResource TransparentBrush}" />
            </TabItem>
            <TabItem Header="TabItem">
                <Canvas
                    Height="Auto"
                    Margin="0,0,0,-15"
                    Background="{StaticResource TransparentBrush}">
                    <b:ToolStrip
                        x:Name="ToolStrip"
                        Canvas.Left="3"
                        Canvas.Top="650"
                        Width="1198"
                        Height="40"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="{StaticResource FormBackground}"
                        FontFamily="Roboto"
                        FontSize="12">

                        <b:ToolStripLabel
                            x:Name="StatusLabel"
                            Width="100"
                            Foreground="{StaticResource BlueBorderBrush}" />

                        <b:ToolStripButton
                            x:Name="FirstButton"
                            Margin="5,1,5,1"
                            ToolTip="First Item"
                            ImageSource="/Resources/Assets/ToolStripImages/FirstButton.png" />

                        <b:ToolStripButton
                            x:Name="PreviousButton"
                            Margin="5,1,5,1"
                            ToolTip="Previous Item"
                            ImageSource="/Resources/Assets/ToolStripImages/PreviousButton.png" />

                        <b:ToolStripButton
                            x:Name="NextButton"
                            Margin="5,1,5,1"
                            ToolTip="Next Item"
                            ImageSource="/Resources/Assets/ToolStripImages/NextButton.png" />

                        <b:ToolStripButton
                            x:Name="LastButton"
                            Margin="5,1,5,1"
                            ToolTip="Last Item"
                            ImageSource="/Resources/Assets/ToolStripImages/LastButton.png" />

                        <TextBox
                            x:Name="ToolStripTextBox"
                            Width="300"
                            Background="{StaticResource ControlInteriorBrush}"
                            BorderBrush="{StaticResource BlueBorderBrush}"
                            FontFamily="Roboto" />

                        <b:ToolStripButton
                            x:Name="LookupButton"
                            Margin="5,1,5,1"
                            ToolTip="Begin Search"
                            ImageSource="/Resources/Assets/ToolStripImages/LookUpButton.png" />

                        <b:ToolStripButton
                            x:Name="RefreshButton"
                            Margin="5,1,5,1"
                            ToolTip="Resets input controls and parameters"
                            ImageSource="/Resources/Assets/ToolStripImages/RefreshButton.png" />

                        <b:ToolStripButton
                            x:Name="DeleteButton"
                            Margin="5,1,5,1"
                            ToolTip="Delete Item"
                            ImageSource="/Resources/Assets/ToolStripImages/DeleteButton.png" />

                        <b:ToolStripDropDown
                            x:Name="ToolStripComboBox"
                            Width="150"
                            BorderBrush="{StaticResource BlueBorderBrush}" />

                        <Separator
                            Width="5"
                            Background="{StaticResource TransparentBrush}" />

                        <mah:MetroProgressBar
                            x:Name="ProgressBar"
                            Width="200"
                            Background="{StaticResource TransparentBrush}" />

                        <b:ToolStripButton
                            x:Name="MenuButton"
                            Margin="5,1,5,1"
                            ToolTip="Show/Hide Toolbar"
                            ImageSource="/Resources/Assets/ToolStripImages/ToggleButton.png" />
                    </b:ToolStrip>
                </Canvas>
            </TabItem>
            <core:ChromiumWebBrowser
                Padding="1,1,1,1"
                ScrollViewer.CanContentScroll="True" />
        </b:MetroTabControl>
    </Canvas>
</Window>
