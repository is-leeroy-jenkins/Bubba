                        BorderBrush="{StaticResource BlueBorderBrush}"
                        FontFamily="Roboto" />

                    <b:ToolStripButton
                        x:Name="LookupButton"
                        Margin="5,1,5,1"
                        ToolTip="Begin Search"
                        ImageSource="/Resources/Assets/ToolStripImages/LookupButton.png" />

                    <b:ToolStripButton
                        x:Name="RefreshButton"
                        Margin="5,1,5,1"
                        ToolTip="Resets input controls and parameters"
                        ImageSource="/Resources/Assets/ToolStripImages/RefreshButton.png" />

                    <b:ToolStripDropDown
                        x:Name="ToolStripComboBox"
                        Width="115"
                        Margin="5,1,5,1"
                        AllowMultiSelect="True"
                        BorderBrush="{StaticResource BlueBorderBrush}" />

                    <b:ToolStripButton
                        x:Name="ToolButton"
                        Margin="5,1,5,1"
                        ToolTip="Developer Tools"
                        ImageSource="/Resources/Assets/ToolStripImages/ToolsButton.png" />

                    <b:ToolStripButton
                        x:Name="DownloadButton"
                        Margin="5,1,5,1"
                        ToolTip="Web Downloads"
                        ImageSource="/Resources/Assets/ToolStripImages/WebDownload.png" />

                    <b:ToolStripButton
                        x:Name="BrowserButton"
                        Margin="5,1,5,1"
                        ToolTip="Web Browser"
                        ImageSource="/Resources/Assets/ToolStripImages/GoogleSearchButton.png" />

                    <b:ToolStripButton
                        x:Name="ChatButton"
                        Margin="5,1,5,1"
                        ToolTip="GPT Mode"
                        ImageSource="/Resources/Assets/ToolStripImages/ChatButton.png" />

                    <mah:MetroProgressBar
                        x:Name="ProgressBar"
                        Width="100"
                        Background="{StaticResource FormBackground}" />

                    <b:ToolStripButton
                        x:Name="MenuButton"
                        Margin="5,1,5,1"
                        ToolTip="Show/Hide Toolbar"
                        ImageSource="/Resources/Assets/ToolStripImages/ToggleButton.png" />

                </b:ToolStrip>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>
                    <Grid />
                    <Grid Grid.Column="1">
                        <Canvas>
                            <Slider
                                x:Name="TemperatureSlider"
                                Canvas.Left="10"
                                Canvas.Top="64"
                                Width="100"
                                Height="40"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Maximum="1"
                                Minimum="0"
                                ToolTip="A number between 0 and 1 (Temperature). Default=1"
                                LargeChange="0.10"
                                SmallChange="0.025"
                                TickFrequency="0.20"
                                Foreground="{DynamicResource FormForeground}"
                                Background="{DynamicResource FormBackground}"
                                BorderBrush="{DynamicResource FormBackground}"
                                TickPlacement="Both"
                                Value="1" />

                            <Slider
                                x:Name="FrequencySlider"
                                Canvas.Left="134"
                                Canvas.Top="64"
                                Width="100"
                                Height="40"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Maximum="2"
                                Minimum="-2"
                                ToolTip="A number between -2 and 2 (Frequency). Default=0"
                                LargeChange="0.10"
                                SmallChange="0.25"
                                TickFrequency="0.50"
                                Foreground="{DynamicResource FormForeground}"
                                Background="{DynamicResource FormBackground}"
                                BorderBrush="{DynamicResource FormBackground}"
                                TickPlacement="Both"
                                Value="0" />

                            <Slider
                                x:Name="PercentSlider"
                                Canvas.Left="285"
                                Canvas.Top="64"
                                Width="100"
                                Height="40"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Maximum="1"
                                Minimum="0"
                                ToolTip="A number between 0 and 1 (%). Default=0"
                                LargeChange="0.05"
                                SmallChange="0.025"
                                TickFrequency="0.10"
                                Foreground="{DynamicResource FormForeground}"
                                Background="{DynamicResource FormBackground}"
                                BorderBrush="{DynamicResource FormBackground}"
                                TickPlacement="Both"
                                Value="1" />

                            <Slider
                                x:Name="PresenceSlider"
                                Canvas.Left="415"
                                Canvas.Top="64"
                                Width="100"
                                Height="40"
                                Padding="1,1,1,1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                ToolTip="A number between -2.0 and 2.0 (Presence). Default 0.0"
                                Maximum="2"
                                Minimum="-2"
                                LargeChange="0.10"
                                SmallChange="0.025"
                                TickFrequency="0.5"
                                Foreground="{DynamicResource FormForeground}"
                                Background="{DynamicResource FormBackground}"
                                BorderBrush="{DynamicResource FormBackground}"
                                TickPlacement="Both"
                                AutoToolTipPlacement="TopLeft"
                                FontSize="12" />

                            <Label
                                Canvas.Left="10"
                                Canvas.Top="18"
                                Width="85"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                ToolTip="A number between 0 and 1 (Temperature). Default=1"
                                Content="Temperature" />

                            <Label
                                Canvas.Left="145"
                                Canvas.Top="18"
                                Width="85"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                ToolTip="A number between -2 and 2 (Frequency). Default=0"
                                Content="Frequency" />

                            <Label
                                Canvas.Left="285"
                                Canvas.Top="18"
                                Width="100"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                ToolTip="A number between 0 and 1 (%). Default=0"
                                Content="Probability Mass" />

                            <Label
                                x:Name="PresenceLabel"
                                Canvas.Left="430"
                                Canvas.Top="18"
                                Width="85"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                ToolTip="A number between -2.0 and 2.0 (Presence). Default 0.0"
                                Content="Presence" />

                            <b:MetroTextBox
                                x:Name="TemperatureTextBox"
                                Canvas.Left="29"
                                Canvas.Top="129"
                                Width="50"
                                Height="30"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                TextWrapping="Wrap"
                                Tag="Temperature"
                                Foreground="{StaticResource FormForeground}"
                                ToolTip="A number between 0 and 1 (Temperature). Default=1"
                                Text="{Binding Value, ElementName=TemperatureSlider, Mode=TwoWay}"
                                SelectionBackgroundColor="{StaticResource BlueBackground}" />

                            <b:MetroTextBox
                                x:Name="FrequencyTextBox"
                                Canvas.Left="164"
                                Canvas.Top="129"
                                Width="50"
                                Height="30"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Tag="Frequency"
                                Foreground="{StaticResource FormForeground}"
                                ToolTip="A number between -2 and 2 (Frequency). Default=0"
                                Text="{Binding Value, ElementName=FrequencySlider, Mode=TwoWay}" />

                            <b:MetroTextBox
                                x:Name="TopPercentTextBox"
                                Canvas.Left="315"
                                Canvas.Top="129"
                                Width="50"
                                Height="30"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Foreground="{StaticResource FormForeground}"
                                TextWrapping="Wrap"
                                Tag="TopPercent"
                                ToolTip="A number between 0 and 1 (%). Default=0"
                                Text="{Binding Value, ElementName=PercentSlider, Mode=TwoWay}" />

                            <b:MetroTextBox
                                x:Name="PresenceTextBox"
                                Canvas.Left="445"
                                Canvas.Top="129"
                                Width="50"
                                Height="30"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Foreground="{StaticResource FormForeground}"
                                Tag="Presence"
                                ToolTip="A number between -2.0 and 2.0 (Presence). Default 0.0"
                                Text="{Binding Value, ElementName=PresenceSlider, Mode=TwoWay}" />

                            <b:MetroTextBox
                                x:Name="MaxTokensTextBox"
                                Canvas.Left="596"
                                Canvas.Top="132"
                                Width="40"
                                Height="30"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Foreground="{StaticResource LightBlueBrush}"
                                Text="2048" />

                            <Label
                                Canvas.Left="586"
                                Canvas.Top="97"
                                Width="75"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="Max Tokens" />

                            <Label
                                Canvas.Left="586"
                                Canvas.Top="18"
                                Width="65"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Content="Responses" />

                            <b:MetroComboBox
                                x:Name="ModelComboBox"
                                Canvas.Left="705"
                                Canvas.Top="49"
                                Width="135"
                                Height="35"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                AllowMultiSelect="True"
                                DefaultText="ComboBox Items">
                                <wpf:ComboBoxItemAdv Content="Item 1" />
                                <wpf:ComboBoxItemAdv Content="Item 2" />
                                <wpf:ComboBoxItemAdv Content="Item 3" />
                                <wpf:ComboBoxItemAdv Content="Item 4" />
                                <wpf:ComboBoxItemAdv Content="Item 5" />
                            </b:MetroComboBox>

                            <b:MetroComboBox
                                x:Name="VoiceComboBox"
                                Canvas.Left="705"
                                Canvas.Top="129"
                                Width="135"
                                Height="35"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                AllowMultiSelect="True"
                                DefaultText="ComboBox Items">
                                <wpf:ComboBoxItemAdv Content="Item 1" />
                                <wpf:ComboBoxItemAdv Content="Item 2" />
                                <wpf:ComboBoxItemAdv Content="Item 3" />
                                <wpf:ComboBoxItemAdv Content="Item 4" />
                                <wpf:ComboBoxItemAdv Content="Item 5" />
                            </b:MetroComboBox>

                            <Button
                                x:Name="DecreaseMaxTokenButton"
                                Canvas.Left="571"
                                Canvas.Top="132"
                                Width="20"
                                Height="30"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Tag="MaxCompletionTokens"
                                ToolTip="Decrease Max Tokens"
                                Background="{StaticResource FormBackground}"
                                BorderBrush="{StaticResource FormBackground}"
                                Content="-" />

                            <Button
                                x:Name="DecreaseResponseButton"
                                Canvas.Left="571"
                                Canvas.Top="52"
                                Width="20"
                                Height="30"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Tag="Number"
                                ToolTip="Decrease Response Number"
                                Background="{StaticResource FormBackground}"
                                BorderBrush="{StaticResource FormBackground}"
                                Content="-" />

                            <Button
                                x:Name="IncreaseResponseButton"
                                Canvas.Left="641"
                                Canvas.Top="52"
                                Width="20"
                                Height="30"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Tag="Number"
                                ToolTip="Increase Response Number"
                                Background="{StaticResource FormBackground}"
                                BorderBrush="{StaticResource FormBackground}"
                                Content="+" />

                            <Button
                                x:Name="IncreaseMaxTokenButton"
                                Canvas.Left="641"
                                Canvas.Top="132"
                                Width="20"
                                Height="30"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Tag="MaxCompletionTokens"
                                ToolTip="Increase Max Tokens"
                                Background="{StaticResource FormBackground}"
                                BorderBrush="{StaticResource FormBackground}"
                                Content="+" />

                            <Label
                                x:Name="VoiceLabel"
                                Canvas.Left="705"
                                Canvas.Top="98"
                                Width="85"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Voices" />

                            <Label
                                x:Name="ModelLabel"
                                Canvas.Left="705"
                                Canvas.Top="13"
                                Width="85"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Models" />

                            <b:MetroTextBox
                                x:Name="NumberTextBox"
                                Canvas.Left="596"
                                Canvas.Top="52"
                                Width="40"
                                Height="30"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                TextWrapping="Wrap"
                                Text="1"
                                Watermark="Enter a Value" />

                        </Canvas>
                    </Grid>
                    <Canvas Grid.Column="0">

                        <b:MetroButton
                            Canvas.Left="84"
                            Canvas.Top="122"
                            Width="132"
                            Height="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content=""
                            Label="Clear"
                            FontFamily="Roboto"
                            IconHeight="0"
                            IconWidth="0" />

                        <b:MetroButton
                            x:Name="SendButton"
                            Canvas.Left="84"
                            Canvas.Top="54"
                            Width="132"
                            Height="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content=""
                            Label="Clear"
                            FontFamily="Roboto"
                            IconHeight="0"
                            IconWidth="0" />

                    </Canvas>
                </Grid>


            </Grid>


            <!--  ******************************************** CHAT LAYOUT ********************************************  -->

            <TabItem
                x:Name="ChatTab"
                Width="1189"
                Height="664"
                Margin="1,1,1,1"
                Padding="1,1,1,1"
                IsSelected="True"
                BorderBrush="{StaticResource FormBackground}"
                Foreground="{StaticResource LightBlueBrush}"
                FontFamily="Roboto"
                Header="GPT"
                Background="{StaticResource BackgroundBrush}" />


            <b:BrowserTabItem
                x:Name="BrowserTab"
                Width="150"
                Height="26"
                Background="{StaticResource FormBackground}"
                BorderBrush="{StaticResource FormBackground}"
                Foreground="{StaticResource FormForeground}"
                BorderThickness="0,0,0,0"
                Header=""
                IsSelected="False">

                <web:ChromiumWebBrowser
                    x:Name="Browser"
                    Address="https://www.google.com/" />

            </b:BrowserTabItem>

        </b:MetroTabControl>
        <!--  ******************************************** TOOLSTRIP  *********************************************  -->

        <!--  ******************************************** URL SEARCH BAR ***************************************  -->

        <Grid
            x:Name="UrlSearchGrid"
            Grid.Row="0"
            MinWidth="600"
            Margin="10,1,0,1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="663" />
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="144*" />
            </Grid.ColumnDefinitions>

            <b:ToolStripButton
                x:Name="SearchPanelForwardButton"
                Title=""
                Grid.Column="6"
                Width="40"
                Height="30"
                Padding="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                Background="{StaticResource FormBackground}"
                BorderBrush="{StaticResource FormBackground}"
                BorderThickness="1"
                Header=""
                ImageSource="/Resources/Assets/ToolStripImages/NextButton.png"
                ToolTip="Start Search" />

            <b:ToolStripButton
                x:Name="SearchPanelCancelButton"
                Title=""
                Grid.Column="7"
                Width="40"
                Height="30"
                Padding="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                Background="{StaticResource FormBackground}"
                BorderBrush="{StaticResource FormBackground}"
                BorderThickness="1"
                Header=""
                ImageSource="/Resources/Assets/ToolStripImages/CancelButton.png"
                ToolTip="Cancel Search" />


            <b:MetroLabel
                x:Name="DateLabel"
                Grid.Column="8"
                Height="28"
                MinWidth="100"
                Margin="10,3,10,0"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Content="MetroLabel"
                FontSize="11"
                Foreground="{StaticResource BlueBorderBrush}" />

            <b:MetroTextBox
                x:Name="UrlTextBox"
                Grid.Column="4"
                Grid.ColumnSpan="2"
                MinWidth="660"
                Margin="56,3,3,8"
                Padding="30,1,1,1"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center"
                Panel.ZIndex="1"
                Background="{StaticResource ControlInteriorBrush}"
                BorderBrush="{StaticResource BlueBorderBrush}"
                BorderThickness="1"
                ClipToBounds="True"
                FontFamily="Roboto"
                FontSize="16"
                Foreground="{StaticResource FormForeground}"
                Text="{Binding Address, ElementName=Browser}"
                TextWrapping="NoWrap"
                ToolTip="Search URL" />

            <b:ToolStripButton
                x:Name="SearchPanelBackButton"
                Title=""
                Grid.Column="4"
                Width="40"
                Height="30"
                Margin="3,0,0,0"
                Padding="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Background="{StaticResource FormBackground}"
                BorderBrush="{StaticResource FormBackground}"
                BorderThickness="1"
                Header=""
                ImageSource="/Resources/Assets/ToolStripImages/PreviousButton.png"
                ToolTip="Next Page" />
        </Grid>
    </Grid>
</Window>
