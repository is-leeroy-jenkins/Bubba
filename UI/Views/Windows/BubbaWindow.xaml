                        Width="189"
                        Height="24"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        VerticalContentAlignment="Top"
                        Foreground="{StaticResource BlueBorderBrush}"
                        Content="User ID" />
                </Canvas>

                <Canvas
                    Grid.Row="1"
                    Margin="0,0,0,8">

                    <CheckBox
                        x:Name="MuteCheckBox"
