                            Margin="15,0,0,0"
                            Content="VBA"
                            FontFamily="Roboto"
                            Background="{DynamicResource ControlInteriorBrush}"
                            BorderBrush="{DynamicResource ControlInteriorBrush}" />
                        <ListBoxItem
                            Margin="15,0,0,0"
                            Content="C/C++"
                            FontFamily="Roboto"
                            Background="{DynamicResource ControlInteriorBrush}"
                            BorderBrush="{DynamicResource ControlInteriorBrush}" />
