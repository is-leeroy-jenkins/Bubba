                    Header="Models"
                    Background="#FF181818"
                    Foreground="{DynamicResource LightBlueBrush}" />

                <GroupBox
                    Canvas.Left="37"
                    Canvas.Top="19"
                    Width="260"
                    Height="97"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Header="Tasks"
                    Background="#FF181818"
                    Foreground="{DynamicResource LightBlueBrush}" />

                <GroupBox
                    Canvas.Left="37"
                    Canvas.Top="393"
                    Width="150"
                    Height="73"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Header="Roles"
                    Background="#FF181818"
                    Foreground="{DynamicResource LightBlueBrush}"
                    FontFamily="Roboto"
                    FontSize="12" />

                <GroupBox
                    x:Name="OutputGroupBox"
                    Canvas.Left="1061"
                    Canvas.Top="171"
                    Width="172"
                    Height="89"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#FF181818"
                    Header="Output"
                    Foreground="{DynamicResource LightBlueBrush}" />

                <b:MetroEditor
