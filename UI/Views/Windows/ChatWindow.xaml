                    </ListBox>
                </GroupBox>

            </Canvas>

            <Canvas
                x:Name="ParameterCanvas"
                Grid.Row="1"
                Margin="0,0,0,10">

                <GroupBox
                    Canvas.Left="828"
                    Canvas.Top="149"
                    Width="192"
                    Height="101"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Foreground="{StaticResource LightBlueBrush}"
                    Background="#FF181818"
                    Header="Max Tokens"
                    FontFamily="Roboto"
                    FontSize="12" />

                <GroupBox
                    Canvas.Left="34"
                    Canvas.Top="40"
                    Width="150"
                    Height="210"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Foreground="{StaticResource LightBlueBrush}"
                    Header="Randomness"
                    Background="#FF181818"
                    BorderBrush="{StaticResource MutedForeground}"
                    FontFamily="Roboto"
                    FontSize="12" />

                <GroupBox
                    Canvas.Left="220"
                    Canvas.Top="40"
                    Width="160"
                    Height="210"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Foreground="{StaticResource LightBlueBrush}"
                    Header="Probability Mass"
                    Background="#FF181818"
                    BorderBrush="{StaticResource MutedForeground}"
                    FontFamily="Roboto"
                    FontSize="12" />

                <GroupBox
                    Canvas.Left="426"
                    Canvas.Top="40"
                    Width="160"
                    Height="210"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Foreground="{StaticResource LightBlueBrush}"
                    Header="Presence"
                    Background="#FF181818"
                    BorderBrush="{StaticResource MutedForeground}"
                    FontFamily="Roboto"
                    FontSize="12" />

                <GroupBox
                    Canvas.Left="627"
                    Canvas.Top="40"
                    Width="160"
                    Height="210"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Foreground="{StaticResource LightBlueBrush}"
                    Header="Frequency"
                    Background="#FF181818"
                    BorderBrush="{StaticResource MutedForeground}"
                    FontFamily="Roboto"
                    FontSize="12" />

                <GroupBox
                    Canvas.Left="1082"
                    Canvas.Top="320"
                    Width="125"
                    Height="170"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Foreground="{StaticResource LightBlueBrush}"
                    Header="Commands"
                    Background="#FF181818"
                    BorderBrush="{StaticResource MutedForeground}"
                    FontFamily="Roboto"
                    FontSize="12" />

                <Slider
                    x:Name="TemperatureSlider"
                    Canvas.Left="49"
                    Canvas.Top="110"
                    Width="120"
                    Height="45"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    ToolTip="A number between 0 and 1 (Temperature). Default=1"
                    LargeChange="0.2"
                    SmallChange="0.1"
                    TickFrequency="0.25"
                    Tag="TopPercent"
                    TickPlacement="Both"
                    Maximum="1"
                    Minimum="0"
                    Foreground="{StaticResource WhiteForeground}"
                    FontFamily="Roboto"
                    SnapsToDevicePixels="True"
                    ClipToBounds="True"
                    Value="1" />

                <wpf:DoubleTextBox
                    x:Name="TemperatureTextBox"
                    Canvas.Left="69"
                    Canvas.Top="189"
                    Width="80"
                    Height="30"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Center"
                    ToolTip="A number between 0 and 1 (Temperature). Default=1"
                    Foreground="{StaticResource WhiteForeground}"
                    Background="{StaticResource ControlInteriorBrush}"
                    BorderBrush="{StaticResource BlueBorderBrush}"
                    BorderThickness="2"
                    ClipToBounds="True"
                    SnapsToDevicePixels="True"
                    FontFamily="Roboto"
                    FontSize="12"
                    Tag="Temperature"
                    Text="{Binding Value, ElementName=TemperatureSlider, Mode=TwoWay}"
                    NegativeForeground="{StaticResource RedForeground}"
                    ZeroColor="#FFEFA90D"
                    NumberDecimalDigits="1"
                    UseNullOption="True"
                    SelectionOpacity="1"
                    ScrollInterval="0.1"
                    Step="0.1">
                    <wpf:DoubleTextBox.NumberFormat>
                        <num:NumberFormatInfo
                            CurrencyDecimalDigits="1"
                            PercentDecimalDigits="1" />
                    </wpf:DoubleTextBox.NumberFormat>
                </wpf:DoubleTextBox>

                <Slider
                    x:Name="PercentSlider"
                    Canvas.Left="240"
                    Canvas.Top="110"
                    Width="120"
                    Height="45"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    ToolTip="A ratio between 0 and 1 (%). Default=0"
                    LargeChange="0.2"
                    SmallChange="0.1"
                    TickFrequency="0.25"
                    Tag="TopPercent"
                    TickPlacement="Both"
                    Maximum="1"
                    Minimum="0"
                    Foreground="{StaticResource WhiteForeground}"
                    FontFamily="Roboto"
                    SnapsToDevicePixels="True"
                    ClipToBounds="True"
                    Value="1" />

                <wpf:DoubleTextBox
                    x:Name="TopPercentTextBox"
                    Canvas.Left="260"
                    Canvas.Top="189"
                    Width="80"
                    Height="30"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Center"
                    Foreground="{StaticResource WhiteForeground}"
                    Background="{StaticResource ControlInteriorBrush}"
                    BorderBrush="{StaticResource BlueBorderBrush}"
                    BorderThickness="2"
                    ClipToBounds="True"
                    SnapsToDevicePixels="True"
                    FontSize="12"
                    FontFamily="Roboto"
                    Text="{Binding Value, ElementName=PercentSlider, Mode=TwoWay, StringFormat=P0}"
                    Tag="TopPercent"
                    ToolTip="A number between 0 and 1 (%). Default=0"
                    NumberDecimalDigits="1"
                    RangeAdornerBackground="{StaticResource BrightGreenForeground}"
                    ZeroColor="#FFEFA90D"
                    SelectionOpacity="1"
                    NegativeForeground="{StaticResource RedForeground}"
                    UseNullOption="True"
                    MinValue="0"
                    MaxValue="1"
                    IsScrollingOnCircle="False">
                    <wpf:DoubleTextBox.NumberFormat>
                        <num:NumberFormatInfo />
                    </wpf:DoubleTextBox.NumberFormat>
                </wpf:DoubleTextBox>

                <Slider
                    x:Name="PresenceSlider"
                    Canvas.Left="446"
                    Canvas.Top="105"
                    Width="120"
                    Height="45"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Maximum="2"
                    Minimum="-2"
                    ToolTip="A number between -2 and 2 (Frequency). Default=0"
                    LargeChange="0.10"
                    SmallChange="0.25"
                    TickFrequency="0.50"
                    Tag="Frequency"
                    TickPlacement="Both"
                    Value="0" />

                <wpf:DoubleTextBox
                    x:Name="PresenceTextBox"
                    Canvas.Left="466"
                    Canvas.Top="189"
                    Width="80"
                    Height="30"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    ApplyNegativeForeground="True"
                    ApplyZeroColor="True"
                    ToolTip="A number between -2 and 2 (Frequency). Default=0"
                    Foreground="{StaticResource WhiteForeground}"
                    Background="{StaticResource ControlInteriorBrush}"
                    BorderBrush="{StaticResource BlueBorderBrush}"
                    BorderThickness="2"
                    Text="{Binding Value, ElementName=PresenceSlider, Mode=TwoWay, StringFormat=N1}"
                    ClipToBounds="True"
                    SnapsToDevicePixels="True"
                    FontFamily="Roboto"
                    FontSize="12"
                    RangeAdornerBackground="{StaticResource BrightGreenForeground}"
                    ZeroColor="#FFEFA90D"
                    SelectionOpacity="1"
                    Tag="Presence"
                    Step="3"
                    NumberDecimalDigits="1" />

                <Slider
                    x:Name="FrequencySlider"
                    Canvas.Left="647"
                    Canvas.Top="105"
                    Width="120"
                    Height="45"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Maximum="2"
                    Minimum="-2"
                    ToolTip="A number between -2 and 2 (Frequency). Default=0"
                    LargeChange="0.10"
                    SmallChange="0.25"
                    TickFrequency="0.50"
                    Tag="Frequency"
                    TickPlacement="Both" />

                <wpf:DoubleTextBox
                    x:Name="FrequencyTextBox"
                    Canvas.Left="667"
                    Canvas.Top="189"
                    Width="80"
                    Height="30"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Foreground="{StaticResource WhiteForeground}"
                    Background="{StaticResource ControlInteriorBrush}"
                    BorderBrush="{StaticResource BlueBorderBrush}"
                    BorderThickness="2"
                    FontFamily="Roboto"
                    FontSize="12"
                    ClipToBounds="True"
                    SnapsToDevicePixels="True"
                    ToolTip="A number between -2 and 2 (Frequency). Default=0"
                    Text="{Binding Value, ElementName=FrequencySlider, Mode=TwoWay, StringFormat=N1}"
                    Tag="Frequency"
                    SelectionOpacity="1"
                    ApplyNegativeForeground="True"
                    ApplyZeroColor="True"
                    NumberDecimalDigits="1"
                    NullValue="0">
                    <wpf:DoubleTextBox.NumberFormat>
                        <num:NumberFormatInfo CurrencyDecimalDigits="1" />
                    </wpf:DoubleTextBox.NumberFormat>
                </wpf:DoubleTextBox>

                <ComboBox
                    x:Name="VoiceComboBox"
                    Canvas.Left="1098"
                    Canvas.Top="65"
                    Width="114"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    BorderThickness="2"
                    Background="{StaticResource ControlInteriorBrush}"
                    BorderBrush="{StaticResource BlueBorderBrush}"
                    Foreground="{StaticResource WhiteForeground}">
                    <wpf:ComboBoxItemAdv Content="Item 1" />
                    <wpf:ComboBoxItemAdv Content="Item 2" />
                    <wpf:ComboBoxItemAdv Content="Item 3" />
                    <wpf:ComboBoxItemAdv Content="Item 4" />
                    <wpf:ComboBoxItemAdv Content="Item 5" />
                </ComboBox>

                <wpf:UpDown
