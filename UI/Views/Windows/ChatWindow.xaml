                    Background="{DynamicResource BlueBorderBrush}" />


            </Canvas>

            <wpf:UpDown
                x:Name="NumberTextBox"
                Grid.Row="1"
                Margin="862,85,267,195"
                Padding="10,1,1,1"
                NullValueText="Total Responses:"
                UseNullOption="True"
                Background="{StaticResource ControlInteriorBrush}"
                BorderBrush="{StaticResource BlueBorderBrush}"
                Foreground="{StaticResource LightBlueBrush}"
                FocusedBackground="{StaticResource BlackBackground}"
                BorderThickness="2"
                FontFamily="Roboto"
                SnapsToDevicePixels="True"
                MaxValue="25"
                MinValue="1"
                NumberDecimalDigits="0"
                ClipToBounds="True"
                Value="1" />
        </Grid>


        <!--  ********************************************* TOOLSTRIP *************************************  -->


        <Canvas
            x:Name="ToolStripCanvas"
            Grid.Row="2"
            Width="1234"
            Margin="0,1,0,1"
            HorizontalAlignment="Center">

            <ToolBar
                x:Name="ToolStrip"
                Canvas.Left="7"
                Canvas.Top="4"
                Width="1217"
                Height="40"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Background="{StaticResource FormBackground}"
                BorderBrush="{StaticResource FormBackground}"
                Foreground="{StaticResource FormForeground}">

                <Label
                    x:Name="StatusLabel"
                    Width="80"
                    Height="30"
                    FontFamily="Roboto" />

                <b:ToolStripButton
                    x:Name="FirstButton"
