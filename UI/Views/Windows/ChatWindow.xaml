                <Label
                    Canvas.Left="18"
                    Canvas.Top="69"
                    Width="40"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Left"
                    FontSize="10"
                    Content="Tasks"
                    Foreground="{DynamicResource LightBlueBrush}" />

                <Label
                    Canvas.Left="18"
                    Canvas.Top="116"
                    Width="40"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Left"
                    FontSize="10"
                    Content="Models"
                    Foreground="{DynamicResource LightBlueBrush}" />

                <ComboBox
