                <GroupBox
                    Canvas.Left="1059"
                    Canvas.Top="103"
                    Width="172"
                    Height="89"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Background="#FF181818"
                    Header="Sound"
                    Foreground="{DynamicResource LightBlueBrush}" />


                <GroupBox
                    Canvas.Left="838"
                    Canvas.Top="102"
                    Width="192"
                    Height="90"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Foreground="{StaticResource LightBlueBrush}"
                    Background="#FF181818"
                    Header="Max Token"
                    FontFamily="Roboto"
                    FontSize="12" />

                <GroupBox
                    Canvas.Left="44"
                    Canvas.Top="6"
                    Width="147"
                    Height="186"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Foreground="{StaticResource LightBlueBrush}"
                    Header="Randomness"
                    Background="#FF181818"
                    BorderBrush="{StaticResource MutedForeground}"
                    FontFamily="Roboto"
                    FontSize="12" />

                <GroupBox
                    Canvas.Left="222"
                    Canvas.Top="6"
                    Width="160"
                    Height="186"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Foreground="{StaticResource LightBlueBrush}"
                    Header="Probability Mass"
                    Background="#FF181818"
                    BorderBrush="{StaticResource MutedForeground}"
                    FontFamily="Roboto"
                    FontSize="12" />

                <GroupBox
                    Canvas.Left="427"
                    Canvas.Top="6"
                    Width="160"
                    Height="186"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Foreground="{StaticResource LightBlueBrush}"
                    Header="Presence"
                    Background="#FF181818"
                    BorderBrush="{StaticResource MutedForeground}"
                    FontFamily="Roboto"
                    FontSize="12" />

                <GroupBox
                    Canvas.Left="627"
                    Canvas.Top="6"
                    Width="160"
                    Height="186"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Foreground="{StaticResource LightBlueBrush}"
                    Header="Frequency"
                    Background="#FF181818"
                    BorderBrush="{StaticResource MutedForeground}"
                    FontFamily="Roboto"
                    FontSize="12" />

                <GroupBox
                    Canvas.Left="1059"
                    Canvas.Top="245"
                    Width="172"
                    Height="240"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Foreground="{StaticResource LightBlueBrush}"
                    Header="Command"
                    Background="#FF181818"
                    BorderBrush="{StaticResource MutedForeground}"
                    FontFamily="Roboto"
                    FontSize="12" />

                <Slider
                    x:Name="TemperatureSlider"
                    Canvas.Left="56"
                    Canvas.Top="76"
                    Width="120"
                    Height="45"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    ToolTip="A number between 0 and 1 (Temperature). Default=1"
                    LargeChange="0.2"
                    SmallChange="0.1"
                    TickFrequency="0.25"
                    Tag="TopPercent"
                    TickPlacement="Both"
                    Maximum="1"
                    Minimum="0"
                    Foreground="{StaticResource WhiteForeground}"
                    FontFamily="Roboto"
                    SnapsToDevicePixels="True"
                    ClipToBounds="True"
                    Value="1" />

                <wpf:DoubleTextBox
                    x:Name="TemperatureTextBox"
                    Canvas.Left="76"
                    Canvas.Top="132"
                    Width="80"
                    Height="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    ToolTip="A number between 0 and 1 (Temperature). Default=1"
                    Foreground="{StaticResource WhiteForeground}"
                    Background="{StaticResource ControlInteriorBrush}"
                    BorderBrush="{StaticResource BlueBorderBrush}"
                    BorderThickness="2"
                    ClipToBounds="True"
                    SnapsToDevicePixels="True"
                    FontFamily="Roboto"
                    FontSize="12"
                    Tag="Temperature"
                    Text="{Binding Value, ElementName=TemperatureSlider, Mode=TwoWay, StringFormat=N1}"
                    NegativeForeground="{StaticResource RedForeground}"
                    ZeroColor="#FFEFA90D"
                    NumberDecimalDigits="1"
                    UseNullOption="True"
                    SelectionOpacity="1"
                    ScrollInterval="0.1"
                    Step="0.1"
                    ApplyNegativeForeground="True"
                    ApplyZeroColor="True"
                    MaximumNumberDecimalDigits="1"
                    MinimumNumberDecimalDigits="0">
                    <wpf:DoubleTextBox.NumberFormat>
                        <num:NumberFormatInfo
                            CurrencyDecimalDigits="1"
                            PercentDecimalDigits="1" />
                    </wpf:DoubleTextBox.NumberFormat>
                </wpf:DoubleTextBox>

                <Slider
                    x:Name="PercentSlider"
                    Canvas.Left="242"
                    Canvas.Top="76"
                    Width="120"
                    Height="45"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    ToolTip="A ratio between 0 and 1 (%). Default=0"
                    LargeChange="0.2"
                    SmallChange="0.1"
                    TickFrequency="0.25"
                    Tag="TopPercent"
                    TickPlacement="Both"
                    Maximum="1"
                    Minimum="0"
                    Foreground="{StaticResource WhiteForeground}"
                    FontFamily="Roboto"
                    SnapsToDevicePixels="True"
                    ClipToBounds="True"
                    Value="1" />

                <wpf:DoubleTextBox
                    x:Name="TopPercentTextBox"
                    Canvas.Left="262"
                    Canvas.Top="132"
                    Width="80"
                    Height="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Foreground="{StaticResource WhiteForeground}"
                    Background="{StaticResource ControlInteriorBrush}"
                    BorderBrush="{StaticResource BlueBorderBrush}"
                    BorderThickness="2"
                    ClipToBounds="True"
                    SnapsToDevicePixels="True"
                    FontSize="12"
                    FontFamily="Roboto"
                    Text="{Binding Value, ElementName=PercentSlider, Mode=TwoWay, StringFormat=P1}"
                    Tag="TopPercent"
                    ToolTip="A number between 0 and 1 (%). Default=0"
                    NumberDecimalDigits="1"
                    RangeAdornerBackground="{StaticResource BrightGreenForeground}"
                    ZeroColor="#FFEFA90D"
                    SelectionOpacity="1"
                    NegativeForeground="{StaticResource RedForeground}"
                    UseNullOption="True"
                    MinValue="0"
                    MaxValue="1"
                    IsScrollingOnCircle="False">
                    <wpf:DoubleTextBox.NumberFormat>
                        <num:NumberFormatInfo />
                    </wpf:DoubleTextBox.NumberFormat>
                </wpf:DoubleTextBox>

                <Slider
                    x:Name="PresenceSlider"
                    Canvas.Left="447"
                    Canvas.Top="76"
                    Width="120"
                    Height="45"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Maximum="2"
                    Minimum="-2"
                    ToolTip="A number between -2 and 2 (Frequency). Default=0"
                    LargeChange="0.10"
                    SmallChange="0.25"
                    TickFrequency="0.50"
                    Tag="Frequency"
                    TickPlacement="Both"
                    Value="0" />

                <wpf:DoubleTextBox
                    x:Name="PresenceTextBox"
                    Canvas.Left="467"
                    Canvas.Top="132"
                    Width="80"
                    Height="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    ApplyNegativeForeground="True"
                    ApplyZeroColor="True"
                    ToolTip="A number between -2 and 2 (Frequency). Default=0"
                    Foreground="{StaticResource WhiteForeground}"
                    Background="{StaticResource ControlInteriorBrush}"
                    BorderBrush="{StaticResource BlueBorderBrush}"
                    BorderThickness="2"
                    Text="{Binding Value, ElementName=PresenceSlider, Mode=TwoWay, StringFormat=N1}"
                    ClipToBounds="True"
                    SnapsToDevicePixels="True"
                    FontFamily="Roboto"
                    FontSize="12"
                    RangeAdornerBackground="{StaticResource BrightGreenForeground}"
                    ZeroColor="#FFEFA90D"
                    SelectionOpacity="1"
                    Tag="Presence"
                    Step="3"
                    NumberDecimalDigits="1" />

                <Slider
                    x:Name="FrequencySlider"
                    Canvas.Left="647"
                    Canvas.Top="76"
                    Width="120"
                    Height="45"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Maximum="2"
                    Minimum="-2"
                    ToolTip="A number between -2 and 2 (Frequency). Default=0"
                    LargeChange="0.10"
                    SmallChange="0.25"
                    TickFrequency="0.50"
                    Tag="Frequency"
                    TickPlacement="Both" />

                <wpf:DoubleTextBox
                    x:Name="FrequencyTextBox"
                    Canvas.Left="667"
                    Canvas.Top="132"
                    Width="80"
                    Height="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Foreground="{StaticResource WhiteForeground}"
                    Background="{StaticResource ControlInteriorBrush}"
                    BorderBrush="{StaticResource BlueBorderBrush}"
                    BorderThickness="2"
                    FontFamily="Roboto"
                    FontSize="12"
                    ClipToBounds="True"
                    SnapsToDevicePixels="True"
                    ToolTip="A number between -2 and 2 (Frequency). Default=0"
                    Text="{Binding Value, ElementName=FrequencySlider, Mode=TwoWay, StringFormat=N1}"
                    Tag="Frequency"
                    SelectionOpacity="1"
                    ApplyNegativeForeground="True"
                    ApplyZeroColor="True"
                    NumberDecimalDigits="1"
                    NullValue="0">
                    <wpf:DoubleTextBox.NumberFormat>
                        <num:NumberFormatInfo CurrencyDecimalDigits="1" />
                    </wpf:DoubleTextBox.NumberFormat>
                </wpf:DoubleTextBox>

                <ComboBox
                    x:Name="VoiceComboBox"
                    Canvas.Left="1020"
                    Canvas.Top="-108"
                    Width="180"
                    Height="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    BorderThickness="2"
                    Background="{StaticResource ControlInteriorBrush}"
                    BorderBrush="{StaticResource BlueBorderBrush}"
                    Foreground="{StaticResource WhiteForeground}">
                    <wpf:ComboBoxItemAdv Content="Item 1" />
                    <wpf:ComboBoxItemAdv Content="Item 2" />
                    <wpf:ComboBoxItemAdv Content="Item 3" />
                    <wpf:ComboBoxItemAdv Content="Item 4" />
                    <wpf:ComboBoxItemAdv Content="Item 5" />
                </ComboBox>

                <wpf:UpDown
                    x:Name="MaxTokensTextBox"
                    Canvas.Left="881"
                    Canvas.Top="140"
                    Width="106"
                    Height="30"
                    Padding="15,1,1,1"
