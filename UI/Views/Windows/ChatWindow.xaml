                    Height="142"
                    Padding="15,15,5,5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Text="Enter System Prompt"
                    Background="{StaticResource ControlInteriorBrush}"
                    Foreground="{StaticResource WhiteForeground}"
