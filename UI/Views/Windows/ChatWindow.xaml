                    OutliningAreaWidth="15" />

                <CheckBox
                    x:Name="StoreCheckBox"
                    Canvas.Left="1112"
                    Canvas.Top="194"
                    Width="70"
                    Height="21"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Store"
                    FontFamily="Roboto"
                    FontSize="14" />

                <CheckBox
                    x:Name="StreamCheckBox"
                    Canvas.Left="1112"
                    Canvas.Top="229"
                    Width="70"
                    Height="22"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Stream"
                    FontSize="14"
                    FontFamily="Roboto" />

                <ComboBox
                    x:Name="TaskComboBox"
                    Canvas.Left="62"
                    Canvas.Top="57"
                    Width="200"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    BorderThickness="2"
                    Background="{StaticResource ControlInteriorBrush}"
                    BorderBrush="{StaticResource BlueBorderBrush}"
