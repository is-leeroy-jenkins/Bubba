                <GroupBox
                    Canvas.Left="667"
                    Canvas.Top="20"
                    Width="260"
                    Height="97"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Header="Endpoints"
                    Background="#FF181818"
                    Foreground="{DynamicResource LightBlueBrush}" />

                <ComboBox
