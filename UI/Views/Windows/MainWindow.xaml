<Window
    x:Class="Bubba.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Bubba"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:sync="http://schemas.syncfusion.com/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="BubbaWindow"
    Title="Bubba GPT"
    Width="825"
    Height="525"
    MaxWidth="1050"
    MaxHeight="550"
    sync:SfSkinManager.Theme="{skin:SkinManagerExtension ThemeName=FluentDark}"
    WindowStartupLocation="CenterScreen"
    Icon="/Resources/Assets/ApplicationImages/Bubba.ico"
    Background="{StaticResource FormBackground}"
    Foreground="{StaticResource FormForeground}"
    BorderBrush="{StaticResource BlueBorderBrush}"
    BorderThickness="1"
    FontFamily="Roboto"
    FontSize="12"
    mc:Ignorable="d">

    <!--  ******************************************** Resources *********************************************  -->

    <Window.Resources>
        <Style TargetType="ToolTip">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderBrush" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Background" Value="{StaticResource BlackBackground}" />
            <Setter Property="Foreground" Value="{StaticResource LightBlueBrush}" />
        </Style>
    </Window.Resources>

    <!--  ******************************************** Context Menu ******************************************  -->

    <Window.ContextMenu>
        <ContextMenu x:Name="MainWindowContextMenu">
            <sync:MenuItemAdv
                Click="OnFileMenuOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="File"
                ToolTip="Browse File System">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FileItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <sync:MenuItemAdv
                Click="OnFolderMenuOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Folder"
                ToolTip="Browse Directories">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FolderItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <sync:MenuItemAdv
                Click="OnChromeOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Chrome"
                ToolTip="Launch Chrome Browser">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ChromeItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <sync:MenuItemAdv
                Click="OnEdgeOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Edge"
                ToolTip="Launch Edge Browser">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/EdgeItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <sync:MenuItemAdv
                Click="OnFirefoxOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="FireFox"
                ToolTip="Launch Firefox Browser">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FirefoxItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <sync:MenuItemAdv
                Click="OnCalculatorMenuOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Calculator"
                ToolTip="Open Calculator">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CalculatorItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <sync:MenuItemAdv
                Click="OnControlPanelOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Control Panel"
                ToolTip="Windows 10 Control Panel">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ControlPanelItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <sync:MenuItemAdv
                Click="OnTaskManagerOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Task Manager"
                ToolTip="Windows 10 Task Manager">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/TaskManagerItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <sync:MenuItemAdv
                Click="OnCloseOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Close"
                ToolTip="Exit Application">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CloseItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

        </ContextMenu>
    </Window.ContextMenu>


    <!--  ******************************************** LAYOUT *****************************************  -->

    <Grid x:Name="BubbaGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="31*" />
            <RowDefinition Height="175*" />
            <RowDefinition Height="140*" />
            <RowDefinition Height="97*" />
            <RowDefinition Height="41*" />
        </Grid.RowDefinitions>

        <Canvas Grid.Row="3" />

        <Canvas Grid.Row="1" />

        <Grid
            Grid.Row="2"
            MaxHeight="125"
            Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="55*" />
                <ColumnDefinition Width="130" />
                <ColumnDefinition Width="135" />
                <ColumnDefinition Width="135" />
                <ColumnDefinition Width="86*" />
            </Grid.ColumnDefinitions>

            <Canvas
                x:Name="SenderCanvas"
                Height="125"
                Margin="0,-2,0,0"
                VerticalAlignment="Top">
                <Button
                    x:Name="SendButton"
                    Canvas.Left="41"
                    Canvas.Top="27"
                    Width="89"
                    Height="35"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="Send"
                    ToolTip="Send Chat Message"
                    RenderTransformOrigin="0.126,1.373" />

                <Button
                    x:Name="ClearButton"
                    Canvas.Left="41"
                    Canvas.Top="80"
                    Width="89"
                    Height="35"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Clear"
                    ToolTip="Clear Chat Log"
                    RenderTransformOrigin="0.126,1.373" />

            </Canvas>

            <Canvas
                x:Name="UserCanvas"
                Grid.Column="1"
                Height="125"
                Margin="0,-2,0,0"
                VerticalAlignment="Top">

                <Label
                    x:Name="UserIdLabel"
                    Canvas.Left="10"
                    Canvas.Top="20"
                    Width="49"
                    Height="24"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Stretch"
                    Content="User ID" />

                <b:MetroTextBox
                    x:Name="UserIdTextBox"
                    Canvas.Left="64"
                    Canvas.Top="20"
                    Width="40"
                    Height="24"
                    MaxWidth="60"
                    Padding="3,1,1,1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    TextWrapping="Wrap"
                    Text="1"
                    ToolTip="User ID"
                    FontFamily="Roboto"
                    FontSize="12" />
            </Canvas>
            <Canvas
                x:Name="RandomCanvas"
                Grid.Column="2"
                Height="125"
                Margin="0,-2,0,0"
                VerticalAlignment="Top">

                <Label
                    x:Name="RandomnessLabel"
                    Canvas.Left="10"
                    Canvas.Top="20"
                    Width="45"
                    Height="24"
                    Padding="1,1,1,1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Right"
                    VerticalContentAlignment="Center"
                    Content="Random" />

                <b:MetroTextBox
                    x:Name="TemperatureTextBox"
                    Canvas.Left="60"
                    Canvas.Top="20"
                    Width="45"
                    Height="24"
                    MaxWidth="60"
                    Padding="3,1,1,1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    TextWrapping="Wrap"
                    Text="0.5"
                    FontFamily="Roboto"
                    ToolTip="Number between 0 and 1"
                    FontSize="12" />

                <CheckBox
                    x:Name="ListenCheckBox"
                    Canvas.Left="14"
                    Canvas.Top="68"
                    Width="66"
                    Height="27"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Listen" />
            </Canvas>
            <Canvas
                x:Name="TokenCanvas"
                Grid.Column="3"
                Margin="0,0,0,6"
                SnapsToDevicePixels="True">

                <CheckBox
                    x:Name="MuteCheckBox"
                    Canvas.Left="22"
                    Canvas.Top="68"
                    Width="58"
                    Height="27"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Mute" />

                <Label
                    x:Name="MaxTokenLabel"
                    Canvas.Left="6"
                    Canvas.Top="20"
                    Width="48"
                    Height="24"
                    Padding="1,1,1,1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Right"
                    VerticalContentAlignment="Stretch"
                    Content="Tokens" />

                <b:MetroTextBox
                    x:Name="MaxTokensTextBox"
                    Canvas.Left="60"
                    Canvas.Top="20"
                    Width="55"
                    Height="24"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    TextWrapping="Wrap"
                    Text="2048"
                    ToolTip="Maximum Tokens"
                    FontFamily="Roboto"
                    FontSize="12" />
            </Canvas>

            <Canvas
                Grid.Column="4"
                Margin="0,0,0,4">

                <Label
                    x:Name="VoiceLabel"
                    Canvas.Left="5"
                    Canvas.Top="78"
                    Width="45"
                    Height="26"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Voice" />

                <Label
                    x:Name="ModelLabel"
                    Canvas.Left="5"
                    Canvas.Top="20"
                    Width="45"
                    Height="26"
                    VerticalAlignment="Top"
                    Content="Model" />

                <sync:ComboBoxAdv
                    x:Name="ModelComboBox"
                    Canvas.Left="60"
                    Canvas.Top="16"
                    Width="175"
                    Height="36"
                    Padding="15,1,1,1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    AllowMultiSelect="True"
                    DefaultText="Select"
                    ToolTip="Choose AI Model to be used"
                    BorderBrush="{DynamicResource BlueBorderBrush}">
                    <sync:ComboBoxItemAdv Content="Item 1" />
                    <sync:ComboBoxItemAdv Content="Item 2" />
                    <sync:ComboBoxItemAdv Content="Item 3" />
                    <sync:ComboBoxItemAdv Content="Item 4" />
                    <sync:ComboBoxItemAdv Content="Item 5" />
                </sync:ComboBoxAdv>

                <sync:ComboBoxAdv
                    x:Name="VoiceComboBox"
                    Canvas.Left="60"
                    Canvas.Top="78"
                    Width="175"
                    Height="37"
                    Padding="15,1,1,1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    AllowMultiSelect="True"
                    DefaultText="Select"
                    ToolTip="Make a Voice Selection"
                    BorderBrush="{DynamicResource BlueBorderBrush}">
                    <sync:ComboBoxItemAdv Content="Item 1" />
                    <sync:ComboBoxItemAdv Content="Item 2" />
                    <sync:ComboBoxItemAdv Content="Item 3" />
                    <sync:ComboBoxItemAdv Content="Item 4" />
                    <sync:ComboBoxItemAdv Content="Item 5" />
                </sync:ComboBoxAdv>
            </Canvas>
        </Grid>


        <b:MetroTextBox
            x:Name="AnswerTextBox"
            Grid.Row="1"
            MinWidth="780"
            MinHeight="150"
            Margin="10,10,10,10"
            Padding="15,15,5,5"
            TextWrapping="Wrap"
            Text="MetroTextBox"
            FontSize="12" />

        <b:MetroTextBox
            x:Name="QuestionTextBox"
            Grid.Row="3"
            MinWidth="780"
            MinHeight="75"
            Margin="10,10,10,10"
            Padding="15,15,5,5"
            TextWrapping="Wrap"
            Text="MetroTextBox"
            FontSize="12" />

        <Grid
            x:Name="BottomGrid"
            Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="430*" />
                <ColumnDefinition Width="205*" />
                <ColumnDefinition Width="188*" />
            </Grid.ColumnDefinitions>

            <b:MetroLabel
                x:Name="StatusLabel"
                Grid.Column="0"
                Margin="3,3,3,3"
                Padding="15,5,5,5"
                Foreground="{StaticResource BlueBorderBrush}"
                Content="Label" />

            <ProgressBar
                x:Name="ProgressBar"
                Grid.Column="2"
                Height="30"
                Margin="7,0,7,0"
                Visibility="Hidden"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                IsIndeterminate="True">
                <ProgressBar.Foreground>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Offset="0" Color="#FF0B3652" />
                        <GradientStop Offset="1" Color="#FF278ED0" />
                        <GradientStop Offset="0.224" Color="#FF0B283B" />
                    </LinearGradientBrush>
                </ProgressBar.Foreground>
            </ProgressBar>
            <b:MetroLabel
                x:Name="ProgressLabel"
                Grid.Column="1"
                Height="40"
                Margin="10,3,10,0"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Visibility="Hidden"
                Content="Processing" />
        </Grid>

    </Grid>
</Window>
