<Window
    x:Class="Bubba.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Bubba"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:sync="http://schemas.syncfusion.com/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Bubba GPT"
    Width="825"
    Height="525"
    MaxWidth="850"
    MaxHeight="550"
    Icon="/Resources/Assets/ApplicationImages/Bubba.ico"
    sync:SfSkinManager.Theme="{skin:SkinManagerExtension ThemeName=FluentDark}"
    Background="{StaticResource FormBackground}"
    Foreground="{StaticResource FormForeground}"
    BorderBrush="{StaticResource BlueBorderBrush}"
    BorderThickness="1"
    FontFamily="Roboto"
    FontSize="12"
    mc:Ignorable="d">

    <!--  ******************************************** Resources *********************************************  -->

    <Window.Resources>
        <Style TargetType="ToolTip">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderBrush" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Background" Value="{StaticResource BlackBackground}" />
            <Setter Property="Foreground" Value="{StaticResource LightBlueBrush}" />
        </Style>
    </Window.Resources>

    <!--  ******************************************** Context Menu ******************************************  -->

    <Window.ContextMenu>
        <ContextMenu x:Name="MainWindowContextMenu">
            <sync:MenuItemAdv
                Click="OnFileMenuOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="File"
                ToolTip="Browse File System">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FileItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <sync:MenuItemAdv
                Click="OnFolderMenuOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Folder"
                ToolTip="Browse Directories">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FolderItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <sync:MenuItemAdv
                Click="OnChromeOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Chrome"
                ToolTip="Launch Chrome Browser">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ChromeItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <sync:MenuItemAdv
                Click="OnEdgeOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Edge"
                ToolTip="Launch Edge Browser">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/EdgeItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <sync:MenuItemAdv
                Click="OnFirefoxOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="FireFox"
                ToolTip="Launch Firefox Browser">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FirefoxItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <sync:MenuItemAdv
                Click="OnCalculatorMenuOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Calculator"
                ToolTip="Open Calculator">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CalculatorItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <sync:MenuItemAdv
                Click="OnControlPanelOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Control Panel"
                ToolTip="Windows 10 Control Panel">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ControlPanelItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <sync:MenuItemAdv
                Click="OnTaskManagerOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Task Manager"
                ToolTip="Windows 10 Task Manager">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/TaskManagerItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <sync:MenuItemAdv
                Click="OnCloseOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Close"
                ToolTip="Exit Application">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CloseItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

        </ContextMenu>
    </Window.ContextMenu>


    <!--  ******************************************** LAYOUT *****************************************  -->

    <Grid x:Name="BubbaGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="31*" />
            <RowDefinition Height="175*" />
            <RowDefinition Height="140*" />
            <RowDefinition Height="97*" />
            <RowDefinition Height="41*" />
        </Grid.RowDefinitions>

        <Canvas Grid.Row="3" />

        <Canvas Grid.Row="1" />

        <Grid
            Grid.Row="2"
            MaxHeight="125"
            Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160*" />
                <ColumnDefinition Width="140" />
                <ColumnDefinition Width="160" />
                <ColumnDefinition Width="135" />
                <ColumnDefinition Width="203*" />
            </Grid.ColumnDefinitions>

            <Canvas x:Name="SenderCanvas">
                <Button
                    x:Name="SendButton"
                    Canvas.Left="25"
                    Canvas.Top="18"
                    Width="89"
                    Height="35"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Content="Send"
                    ToolTip="Send Chat Message"
                    RenderTransformOrigin="0.126,1.373" />
                <Button
                    x:Name="ClearButton"
                    Canvas.Left="25"
                    Canvas.Top="80"
                    Width="89"
                    Height="35"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Content="Clear"
                    ToolTip="Clear Chat Log"
                    RenderTransformOrigin="0.126,1.373" />
            </Canvas>

            <Canvas
                x:Name="UserCanvas"
                Grid.Column="1">

                <Label
                    x:Name="UserIdLabel"
                    Canvas.Left="10"
                    Canvas.Top="20"
                    Width="49"
                    Height="24"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Bottom"
                    Content="User ID" />

                <b:MetroTextBox
                    x:Name="UserIdTextBox"
                    Canvas.Left="64"
                    Canvas.Top="20"
                    Width="60"
                    Height="24"
                    MaxWidth="60"
                    Padding="5,5,1,1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    VerticalContentAlignment="Center"
                    TextWrapping="Wrap"
                    Text="1"
                    ToolTip="User ID"
                    FontFamily="Roboto"
                    FontSize="10" />
            </Canvas>
            <Canvas
                x:Name="RandomCanvas"
                Grid.Column="2">

                <Label
                    x:Name="RandomnessLabel"
                    Canvas.Left="10"
                    Canvas.Top="26"
                    Width="70"
                    Padding="1,1,1,1"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Right"
                    VerticalAlignment="Top"
                    VerticalContentAlignment="Bottom"
                    Content="Random" />

                <b:MetroTextBox
                    x:Name="TemperatureTextBox"
                    Canvas.Left="90"
                    Canvas.Top="20"
                    Width="60"
                    Height="24"
                    MaxWidth="60"
                    Padding="5,5,1,1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    TextWrapping="Wrap"
                    Text="0.5"
                    FontFamily="Roboto"
                    FontSize="10" />

                <CheckBox
                    x:Name="ListenCheckBox"
                    Canvas.Left="54"
                    Canvas.Top="62"
                    Width="66"
                    Height="27"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Listen" />
            </Canvas>
            <Canvas
                x:Name="TokenCanvas"
                Grid.Column="3"
                SnapsToDevicePixels="True">

                <CheckBox
                    x:Name="MuteCheckBox"
                    Canvas.Left="30"
                    Canvas.Top="62"
                    Width="58"
                    Height="27"
                    VerticalAlignment="Top"
                    Content="Mute" HorizontalAlignment="Center" />

                <Label
                    x:Name="MaxTokenLabel"
                    Canvas.Left="6"
                    Canvas.Top="20"
                    Width="48"
                    Height="24"
                    Padding="1,1,1,1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Right"
                    VerticalContentAlignment="Bottom"
                    Content="Tokens" />

                <b:MetroTextBox
                    x:Name="MaxTokensTextBox"
                    Canvas.Left="60"
                    Canvas.Top="20"
                    Width="60"
                    Height="24"
                    Padding="5,5,1,1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    TextWrapping="Wrap"
                    Text="2048"
                    ToolTip="Maximum Tokens"
                    FontFamily="Roboto"
                    FontSize="10" />
            </Canvas>
            <Canvas Grid.Column="4">

                <Label
                    x:Name="VoiceLabel"
                    Canvas.Left="10"
                    Canvas.Top="78"
                    Width="50"
                    Height="26"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Voice" />

                <Label
                    x:Name="ModelLabel"
                    Canvas.Left="10"
                    Canvas.Top="20"
                    Width="58"
                    Height="26"
                    VerticalAlignment="Top"
                    Content="Model" />

                <sync:ComboBoxAdv
                    x:Name="ModelComboBox"
                    Canvas.Left="65"
                    Canvas.Top="16"
                    Width="125"
                    Height="36"
                    Padding="15,1,1,1"
                    AllowMultiSelect="True"
                    DefaultText="Select"
                    ToolTip="Select AI Model"
                    BorderBrush="{DynamicResource BlueBorderBrush}">
                    <sync:ComboBoxItemAdv Content="Item 1" />
                    <sync:ComboBoxItemAdv Content="Item 2" />
                    <sync:ComboBoxItemAdv Content="Item 3" />
                    <sync:ComboBoxItemAdv Content="Item 4" />
                    <sync:ComboBoxItemAdv Content="Item 5" />
                </sync:ComboBoxAdv>

                <sync:ComboBoxAdv
                    x:Name="VoiceComboBox"
                    Canvas.Left="65"
                    Canvas.Top="78"
                    Width="125"
                    Height="37"
                    Padding="15,1,1,1"
                    AllowMultiSelect="True"
                    DefaultText="Select"
                    ToolTip="Make a Voice Selection"
                    BorderBrush="{DynamicResource BlueBorderBrush}">
                    <sync:ComboBoxItemAdv Content="Item 1" />
                    <sync:ComboBoxItemAdv Content="Item 2" />
                    <sync:ComboBoxItemAdv Content="Item 3" />
                    <sync:ComboBoxItemAdv Content="Item 4" />
                    <sync:ComboBoxItemAdv Content="Item 5" />
                </sync:ComboBoxAdv>
            </Canvas>
        </Grid>

        <b:MetroLabel
            x:Name="StatusLabel"
            Grid.Row="4"
            Width="335"
            Margin="10,7,0,10"
            Padding="15,5,5,5"
            HorizontalAlignment="Left"
            Foreground="{StaticResource BlueBorderBrush}"
            Content="Label" />

        <b:MetroTextBox
            x:Name="AnswerTextBox"
            Grid.Row="1"
            MinWidth="780"
            MinHeight="150"
            Margin="10,10,10,10"
            TextWrapping="Wrap"
            Text="MetroTextBox"
            FontSize="10" />

        <b:MetroTextBox
            x:Name="QuestionTextBox"
            Grid.Row="3"
            MinWidth="780"
            MinHeight="75"
            Margin="10,10,10,10"
            TextWrapping="Wrap"
            Text="MetroTextBox"
            FontSize="10" />

        <b:MetroLabel
            x:Name="SpeechLabel"
            Width="156"
            Margin="22,4,0,4"
            Padding="1,1,1,1"
            HorizontalAlignment="Left"
            Foreground="{StaticResource BlueBorderBrush}"
            Content="Speech..." />

    </Grid>
</Window>
