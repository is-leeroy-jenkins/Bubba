<Window
    x:Class="Bubba.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Bubba"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:sync="http://schemas.syncfusion.com/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    x:Name="BubbaWindow"
    Title="Bubba GPT"
    Width="1210"
    Height="700"
    MinWidth="1000"
    MinHeight="600"
    MaxWidth="1500"
    MaxHeight="1000"
    sync:SfSkinManager.Theme="{sync:SkinManager ThemeName=FluentDark}"
    WindowStartupLocation="CenterScreen"
    Icon="/Resources/Assets/ApplicationImages/Bubba.ico"
    BorderThickness="1"
    FontFamily="Roboto"
    FontSize="12"
    mc:Ignorable="d">

    <!--  ******************************************** Resources *********************************************  -->

    <Window.Resources>
        <Style TargetType="{x:Type ToolTip}">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderBrush" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Background" Value="{StaticResource BlackBackground}" />
            <Setter Property="Foreground" Value="{StaticResource LightBlueBrush}" />
        </Style>
    </Window.Resources>

    <Window.Background>
        <StaticResource ResourceKey="FormBackground" />
    </Window.Background>
    <Window.Foreground>
        <StaticResource ResourceKey="FormForeground" />
    </Window.Foreground>
    <Window.BorderBrush>
        <StaticResource ResourceKey="BlueBorderBrush" />
    </Window.BorderBrush>

    <!--  ******************************************** Context Menu ******************************************  -->

    <Window.ContextMenu>
        <ContextMenu x:Name="MainWindowContextMenu">
            <sync:MenuItemAdv
                Click="OnFileMenuOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="File"
                ToolTip="Browse File System">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FileItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <sync:MenuItemAdv
                Click="OnFolderMenuOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Folder"
                ToolTip="Browse Directories">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FolderItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <sync:MenuItemAdv
                Click="OnChromeOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Chrome"
                ToolTip="Launch Chrome Browser">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ChromeItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <sync:MenuItemAdv
                Click="OnEdgeOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Edge"
                ToolTip="Launch Edge Browser">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/EdgeItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <sync:MenuItemAdv
                Click="OnFirefoxOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="FireFox"
                ToolTip="Launch Firefox Browser">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FirefoxItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <sync:MenuItemAdv
                Click="OnCalculatorMenuOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Calculator"
                ToolTip="Open Calculator">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CalculatorItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <sync:MenuItemAdv
                Click="OnControlPanelOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Control Panel"
                ToolTip="Windows 10 Control Panel">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ControlPanelItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <sync:MenuItemAdv
                Click="OnTaskManagerOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Task Manager"
                ToolTip="Windows 10 Task Manager">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/TaskManagerItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <sync:MenuItemAdv
                Click="OnCloseOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Close"
                ToolTip="Exit Application">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CloseItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

        </ContextMenu>
    </Window.ContextMenu>


    <!--  ******************************************** LAYOUT *****************************************  -->

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="31*" />
            <RowDefinition Height="175*" />
            <RowDefinition Height="140*" />
            <RowDefinition Height="97*" />
            <RowDefinition Height="41*" />
        </Grid.RowDefinitions>
        <Canvas Grid.Row="3">
            <Label
                x:Name="UserLabel"
                Canvas.Left="1"
                Canvas.Top="5"
                Width="1197"
                Height="25"
                HorizontalContentAlignment="Center"
                Content="User"
                FontFamily="Roboto" />
            <b:MetroTextBox
                x:Name="UserTextBox"
                Canvas.Left="142"
                Canvas.Top="35"
                Width="915"
                Height="90"
                MinWidth="480"
                MinHeight="25"
                Padding="15,15,1,1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                TextWrapping="Wrap"
                Text=""
                FontSize="12" />
        </Canvas>
        <Canvas Grid.Row="1">
            <b:MetroTextBox
                x:Name="AnswerTextBox"
                Canvas.Left="140"
                Canvas.Top="27"
                Width="900"
                Height="222"
                MinWidth="480"
                MinHeight="50"
                Padding="15,15,5,5"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                TextWrapping="Wrap"
                Text=""
                FontSize="12" />
            <Label
                x:Name="SystemLabel"
                Canvas.Left="212"
                Canvas.Top="5"
                Width="784"
                Height="22"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                Content="System"
                FontFamily="Roboto" />
        </Canvas>

        <Grid
            Grid.Row="2"
            MaxHeight="125"
            Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="165*" />
                <ColumnDefinition Width="130" />
                <ColumnDefinition Width="135" />
                <ColumnDefinition Width="130" />
                <ColumnDefinition Width="263*" />
            </Grid.ColumnDefinitions>
            <Canvas
                Grid.Column="0"
                Margin="0,0,0,24">

                <Button
                    x:Name="SendButton"
                    Canvas.Left="140"
                    Canvas.Top="10"
                    Width="105"
                    Height="34"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Send"
                    ToolTip="Send Chat Message"
                    RenderTransformOrigin="0.126,1.373" />

                <Button
                    x:Name="ClearButton"
                    Canvas.Left="141"
                    Canvas.Top="62"
                    Width="101"
                    Height="36"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Clear"
                    ToolTip="Clear Chat Log"
                    RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="-0.017" />
                            <TranslateTransform />
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>

            </Canvas>

            <Canvas
                x:Name="UserCanvas"
                Grid.ColumnSpan="2"
                Height="140"
                Margin="313,0,0,0"
                VerticalAlignment="Top">

                <Label
                    x:Name="UserIdLabel"
                    Canvas.Left="10"
                    Canvas.Top="20"
                    Width="49"
                    Height="24"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    VerticalContentAlignment="Stretch"
                    Content="User ID" />

                <b:MetroTextBox
                    x:Name="UserIdTextBox"
                    Canvas.Left="64"
                    Canvas.Top="20"
                    Width="53"
                    Height="24"
                    MaxWidth="60"
                    Padding="3,1,1,1"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    TextWrapping="Wrap"
                    Text="1"
                    ToolTip="User ID"
                    FontFamily="Roboto"
                    FontSize="12" />
            </Canvas>

            <Canvas
                x:Name="RandomCanvas"
                Grid.Column="2"
                Height="125"
                Margin="0"
                VerticalAlignment="Top">

                <Label
                    x:Name="RandomnessLabel"
                    Canvas.Left="10"
                    Canvas.Top="20"
                    Width="45"
                    Height="24"
                    Padding="1,1,1,1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Right"
                    VerticalContentAlignment="Center"
                    Content="Random" />

                <b:MetroTextBox
                    x:Name="TemperatureTextBox"
                    Canvas.Left="60"
                    Canvas.Top="20"
                    Width="45"
                    Height="24"
                    MaxWidth="60"
                    Padding="3,1,1,1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    TextWrapping="Wrap"
                    Text="0.5"
                    FontFamily="Roboto"
                    ToolTip="Number between 0 and 1"
                    FontSize="12" />

                <CheckBox
                    x:Name="ListenCheckBox"
                    Canvas.Left="10"
                    Canvas.Top="68"
                    Width="66"
                    Height="27"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Listen" />
            </Canvas>

            <Canvas
                x:Name="TokenCanvas"
                Grid.Column="3"
                Margin="0"
                SnapsToDevicePixels="True">

                <CheckBox
                    x:Name="MuteCheckBox"
                    Canvas.Left="22"
                    Canvas.Top="68"
                    Width="58"
                    Height="27"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Mute" />

                <Label
                    x:Name="MaxTokenLabel"
                    Canvas.Left="6"
                    Canvas.Top="20"
                    Width="48"
                    Height="24"
                    Padding="1,1,1,1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Right"
                    VerticalContentAlignment="Stretch"
                    Content="Tokens" />

                <b:MetroTextBox
                    x:Name="MaxTokensTextBox"
                    Canvas.Left="60"
                    Canvas.Top="20"
                    Width="55"
                    Height="24"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    TextWrapping="Wrap"
                    Text="2048"
                    ToolTip="Maximum Tokens"
                    FontFamily="Roboto"
                    FontSize="12" />
            </Canvas>

            <Grid
                Grid.Column="4"
                Margin="3">

                <Label
                    x:Name="VoiceLabel"
                    Width="55"
                    Height="26"
                    Margin="92,67,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Right"
                    Content="Voice" />

                <Label
                    x:Name="ModelLabel"
                    Width="55"
                    Height="26"
                    Margin="92,15,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Right"
                    Content="Models" />

                <sync:ComboBoxAdv
                    x:Name="ModelComboBox"
                    Width="176"
                    Height="36"
                    Margin="152,10,0,0"
                    Padding="15,1,1,1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    AllowMultiSelect="True"
                    DefaultText="Select"
                    ToolTip="Choose AI Model for ChatGPT"
                    BorderBrush="{DynamicResource BlueBorderBrush}">
                    <sync:ComboBoxItemAdv Content="Item 1" />
                    <sync:ComboBoxItemAdv Content="Item 2" />
                    <sync:ComboBoxItemAdv Content="Item 3" />
                    <sync:ComboBoxItemAdv Content="Item 4" />
                    <sync:ComboBoxItemAdv Content="Item 5" />
                </sync:ComboBoxAdv>

                <sync:ComboBoxAdv
                    x:Name="VoiceComboBox"
                    Width="175"
                    Height="37"
                    Margin="153,61,0,0"
                    Padding="15,1,1,1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    AllowMultiSelect="True"
                    DefaultText="Select"
                    ToolTip="Make a Voice Selection"
                    BorderBrush="{DynamicResource BlueBorderBrush}">
                    <sync:ComboBoxItemAdv Content="Item 1" />
                    <sync:ComboBoxItemAdv Content="Item 2" />
                    <sync:ComboBoxItemAdv Content="Item 3" />
                    <sync:ComboBoxItemAdv Content="Item 4" />
                    <sync:ComboBoxItemAdv Content="Item 5" />
                </sync:ComboBoxAdv>
            </Grid>
        </Grid>
        <Canvas
            x:Name="TopGrid"
            Grid.Row="0">
            <b:MetroLabel
                x:Name="SpeechLabel"
                Canvas.Left="3"
                Canvas.Top="3"
                Width="656"
                Height="27"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Left"
                Content="Speech..."
                RenderTransformOrigin="0.5,0.5">
                <b:MetroLabel.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform Angle="0.309" />
                        <TranslateTransform />
                    </TransformGroup>
                </b:MetroLabel.RenderTransform>
            </b:MetroLabel>
        </Canvas>
        <Canvas
            x:Name="BottomGrid"
            Grid.Row="4"
            Margin="0,1,0,0"
            SnapsToDevicePixels="True">
            <b:ToolStrip
                Canvas.Left="4"
                Canvas.Top="15"
                Width="1198"
                Height="40"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="{StaticResource ResourceKey=FormBackground}">

                <Separator
                    Width="5"
                    Background="{StaticResource TransparentBrush}" />

                <b:ToolStripLabel
                    x:Name="StatusLabel"
                    Width="100"
                    Foreground="{StaticResource LightBlueBrush}" />

                <Separator
                    Width="5"
                    Background="{StaticResource TransparentBrush}" />

                <b:ToolStripButton
                    x:Name="FirstButton"
                    Margin="5,1,5,1"
                    ToolTip=""
                    ImageSource="/Resources/Assets/ButtonImages/FirstButton.png" />

                <b:ToolStripButton
                    x:Name="PreviousButton"
                    Margin="5,1,5,1"
                    ToolTip=""
                    ImageSource="/Resources/Assets/ButtonImages/PreviousButton.png" />

                <b:ToolStripButton
                    x:Name="NextButton"
                    Margin="5,1,5,1"
                    ToolTip=""
                    ImageSource="/Resources/Assets/ButtonImages/NextButton.png" />

                <b:ToolStripButton
                    x:Name="LastButton"
                    Margin="5,1,5,1"
                    ToolTip=""
                    ImageSource="/Resources/Assets/ButtonImages/LastButton.png" />
                <Separator
                    Width="5"
                    Background="{StaticResource TransparentBrush}" />

                <TextBox
                    x:Name="SearchTextBox"
                    Width="300"
                    Background="#FF2D2D2D"
                    BorderBrush="#FF0078D4"
                    FontFamily="Roboto" />

                <Separator
                    Width="5"
                    Background="{StaticResource TransparentBrush}" />

                <b:ToolStripButton
                    x:Name="LookupButton"
                    Margin="5,1,5,1"
                    ImageSource="/Resources/Assets/ButtonImages/LookUpButton.png" />

                <b:ToolStripButton
                    Margin="5,1,5,1"
                    ImageSource="/Resources/Assets/ButtonImages/RefreshButton.png" />

                <b:ToolStripButton
                    Margin="5,1,5,1"
                    ImageSource="/Resources/Assets/ButtonImages/DeleteButton.png" />

                <b:ToolStripDropDown
                    x:Name="ToolStripTextBox"
                    Width="120"
                    BorderBrush="{StaticResource BlueBorderBrush}" />

                <Separator
                    Width="5"
                    Background="{StaticResource TransparentBrush}" />

                <mah:MetroProgressBar
                    x:Name="ProgressBar"
                    Width="200" />

                <Separator
                    Width="10"
                    Background="{StaticResource TransparentBrush}" />

                <b:ToolStripButton 
                    ImageSource="/Resources/Assets/ButtonImages/ToggleButton.png" />
            </b:ToolStrip>
        </Canvas>
    </Grid>
</Window>
