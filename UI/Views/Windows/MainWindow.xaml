<Window
    x:Class="Bubba.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Bubba"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:sync="http://schemas.syncfusion.com/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    x:Name="BubbaWindow"
    Title="Bubba GPT"
    Width="840"
    Height="540"
    MaxWidth="1500"
    MaxHeight="1000"
    sync:SfSkinManager.Theme="{sync:SkinManager ThemeName=FluentDark}"
    WindowStartupLocation="CenterScreen"
    Icon="/Resources/Assets/ApplicationImages/Bubba.ico"
    BorderThickness="1"
    FontFamily="Roboto"
    FontSize="12"
    mc:Ignorable="d">

    <!--  ******************************************** Resources *********************************************  -->

    <Window.Resources>
        <Style TargetType="{x:Type ToolTip}">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderBrush" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Background" Value="{StaticResource BlackBackground}" />
            <Setter Property="Foreground" Value="{StaticResource LightBlueBrush}" />
        </Style>
    </Window.Resources>

    <Window.Background>
        <StaticResource ResourceKey="FormBackground" />
    </Window.Background>
    <Window.Foreground>
        <StaticResource ResourceKey="FormForeground" />
    </Window.Foreground>
    <Window.BorderBrush>
        <StaticResource ResourceKey="BlueBorderBrush" />
    </Window.BorderBrush>

    <!--  ******************************************** Context Menu ******************************************  -->

    <Window.ContextMenu>
        <ContextMenu x:Name="MainWindowContextMenu">
            <sync:MenuItemAdv
                Click="OnFileMenuOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="File"
                ToolTip="Browse File System">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FileItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <sync:MenuItemAdv
                Click="OnFolderMenuOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Folder"
                ToolTip="Browse Directories">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FolderItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <sync:MenuItemAdv
                Click="OnChromeOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Chrome"
                ToolTip="Launch Chrome Browser">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ChromeItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <sync:MenuItemAdv
                Click="OnEdgeOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Edge"
                ToolTip="Launch Edge Browser">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/EdgeItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <sync:MenuItemAdv
                Click="OnFirefoxOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="FireFox"
                ToolTip="Launch Firefox Browser">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FirefoxItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <sync:MenuItemAdv
                Click="OnCalculatorMenuOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Calculator"
                ToolTip="Open Calculator">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CalculatorItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <sync:MenuItemAdv
                Click="OnControlPanelOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Control Panel"
                ToolTip="Windows 10 Control Panel">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ControlPanelItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <sync:MenuItemAdv
                Click="OnTaskManagerOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Task Manager"
                ToolTip="Windows 10 Task Manager">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/TaskManagerItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <sync:MenuItemAdv
                Click="OnCloseOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Close"
                ToolTip="Exit Application">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CloseItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

        </ContextMenu>
    </Window.ContextMenu>


    <!--  ******************************************** LAYOUT *****************************************  -->

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="31*" />
            <RowDefinition Height="175*" />
            <RowDefinition Height="140*" />
            <RowDefinition Height="97*" />
            <RowDefinition Height="41*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="3">
            <Label
                x:Name="UserLabel"
                Margin="1,5,10,75"
                HorizontalContentAlignment="Center"
                Content="User"
                FontFamily="Roboto" />
            <b:MetroTextBox
                x:Name="UserTextBox"
                MinWidth="480"
                MinHeight="25"
                Margin="40,29,43,10"
                Padding="15,15,1,1"
                TextWrapping="Wrap"
                Text=""
                FontSize="12" />
        </Grid>
        <Grid Grid.Row="1">
            <b:MetroTextBox
                x:Name="AnswerTextBox"
                Height="140"
                MinWidth="480"
                MinHeight="50"
                Margin="28,27,28,0"
                Padding="15,15,5,5"
                VerticalAlignment="Top"
                TextWrapping="Wrap"
                Text=""
                FontSize="12" />
            <Label
                x:Name="SystemLabel"
                Width="783"
                Height="22"
                Margin="0,5,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                Content="System"
                FontFamily="Roboto" />
        </Grid>

        <Grid
            Grid.Row="2"
            MaxHeight="125"
            Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="165*" />
                <ColumnDefinition Width="130" />
                <ColumnDefinition Width="135" />
                <ColumnDefinition Width="130" />
                <ColumnDefinition Width="263*" />
            </Grid.ColumnDefinitions>

            <Grid
                x:Name="SenderCanvas"
                Height="125"
                Margin="0,-2,0,0"
                VerticalAlignment="Top">
                <Button
                    x:Name="SendButton"
                    Width="89"
                    Height="35"
                    Margin="41,27,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Send"
                    ToolTip="Send Chat Message"
                    RenderTransformOrigin="0.126,1.373" />

                <Button
                    x:Name="ClearButton"
                    Width="89"
                    Height="35"
                    Margin="41,80,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Clear"
                    ToolTip="Clear Chat Log" />

            </Grid>
            <Grid
                x:Name="UserCanvas"
                Grid.Column="1"
                Height="125"
                Margin="0"
                VerticalAlignment="Top">

                <Label
                    x:Name="UserIdLabel"
                    Width="49"
                    Height="24"
                    Margin="10,20,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    VerticalContentAlignment="Stretch"
                    Content="User ID" />

                <b:MetroTextBox
                    x:Name="UserIdTextBox"
                    MaxWidth="60"
                    Margin="64,20,26,81"
                    Padding="3,1,1,1"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    TextWrapping="Wrap"
                    Text="1"
                    ToolTip="User ID"
                    FontFamily="Roboto"
                    FontSize="12" />
            </Grid>

            <Canvas
                x:Name="RandomCanvas"
                Grid.Column="2"
                Height="125"
                Margin="0"
                VerticalAlignment="Top">

                <Label
                    x:Name="RandomnessLabel"
                    Canvas.Left="10"
                    Canvas.Top="20"
                    Width="45"
                    Height="24"
                    Padding="1,1,1,1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Right"
                    VerticalContentAlignment="Center"
                    Content="Random" />

                <b:MetroTextBox
                    x:Name="TemperatureTextBox"
                    Canvas.Left="60"
                    Canvas.Top="20"
                    Width="45"
                    Height="24"
                    MaxWidth="60"
                    Padding="3,1,1,1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    TextWrapping="Wrap"
                    Text="0.5"
                    FontFamily="Roboto"
                    ToolTip="Number between 0 and 1"
                    FontSize="12" />

                <CheckBox
                    x:Name="ListenCheckBox"
                    Canvas.Left="10"
                    Canvas.Top="68"
                    Width="66"
                    Height="27"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Listen" />
            </Canvas>

            <Canvas
                x:Name="TokenCanvas"
                Grid.Column="3"
                Margin="0"
                SnapsToDevicePixels="True">

                <CheckBox
                    x:Name="MuteCheckBox"
                    Canvas.Left="22"
                    Canvas.Top="68"
                    Width="58"
                    Height="27"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Mute" />

                <Label
                    x:Name="MaxTokenLabel"
                    Canvas.Left="6"
                    Canvas.Top="20"
                    Width="48"
                    Height="24"
                    Padding="1,1,1,1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Right"
                    VerticalContentAlignment="Stretch"
                    Content="Tokens" />

                <b:MetroTextBox
                    x:Name="MaxTokensTextBox"
                    Canvas.Left="60"
                    Canvas.Top="20"
                    Width="55"
                    Height="24"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    TextWrapping="Wrap"
                    Text="2048"
                    ToolTip="Maximum Tokens"
                    FontFamily="Roboto"
                    FontSize="12" />
            </Canvas>

            <Grid
                Grid.Column="4"
                Margin="3">

                <Label
                    x:Name="VoiceLabel"
                    Width="55"
                    Height="26"
                    Margin="5,84,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Right"
                    Content="Voice" />

                <Label
                    x:Name="ModelLabel"
                    Width="55"
                    Height="26"
                    Margin="5,20,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Right"
                    Content="Models" />

                <sync:ComboBoxAdv
                    x:Name="ModelComboBox"
                    Width="175"
                    Height="36"
                    Margin="65,15,0,0"
                    Padding="15,1,1,1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    AllowMultiSelect="True"
                    DefaultText="Select"
                    ToolTip="Choose AI Model for ChatGPT"
                    BorderBrush="{DynamicResource BlueBorderBrush}">
                    <sync:ComboBoxItemAdv Content="Item 1" />
                    <sync:ComboBoxItemAdv Content="Item 2" />
                    <sync:ComboBoxItemAdv Content="Item 3" />
                    <sync:ComboBoxItemAdv Content="Item 4" />
                    <sync:ComboBoxItemAdv Content="Item 5" />
                </sync:ComboBoxAdv>

                <sync:ComboBoxAdv
                    x:Name="VoiceComboBox"
                    Width="175"
                    Height="37"
                    Margin="65,78,0,0"
                    Padding="15,1,1,1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    AllowMultiSelect="True"
                    DefaultText="Select"
                    ToolTip="Make a Voice Selection"
                    BorderBrush="{DynamicResource BlueBorderBrush}">
                    <sync:ComboBoxItemAdv Content="Item 1" />
                    <sync:ComboBoxItemAdv Content="Item 2" />
                    <sync:ComboBoxItemAdv Content="Item 3" />
                    <sync:ComboBoxItemAdv Content="Item 4" />
                    <sync:ComboBoxItemAdv Content="Item 5" />
                </sync:ComboBoxAdv>
            </Grid>
        </Grid>

        <Grid
            x:Name="TopGrid"
            Grid.Row="0">
            <b:MetroLabel
                x:Name="SpeechLabel"
                Margin="31,3,21,5"
                HorizontalContentAlignment="Left"
                Content="Speech..."
                RenderTransformOrigin="0.5,0.5">
                <b:MetroLabel.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform Angle="0.309" />
                        <TranslateTransform />
                    </TransformGroup>
                </b:MetroLabel.RenderTransform>
            </b:MetroLabel>
        </Grid>

        <Grid
            x:Name="BottomGrid"
            Grid.Row="4"
            Margin="0,1,0,0"
            SnapsToDevicePixels="True">
            <b:ToolStrip
                Height="40"
                Margin="10,5,10,-2"
                Background="{StaticResource ResourceKey=FormBackground}">
                <Separator />
                <b:ToolStripLabel
                    x:Name="StatusLabel"
                    Width="80" />
                <Separator />
                <b:ToolStripButton />
                <b:ToolStripButton />
                <b:ToolStripButton />
                <b:ToolStripButton />
                <Separator />
                <b:ToolStripButton />
                <mah:MetroProgressBar x:Name="ProgressBar" />
                <Separator />
            </b:ToolStrip>
        </Grid>
    </Grid>
</Window>
