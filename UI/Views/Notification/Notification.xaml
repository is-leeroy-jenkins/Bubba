<Window
    x:Class="Bubba.Notification"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sync="http://schemas.syncfusion.com/wpf"
    x:Name="Toast"
    Width="525"
    Height="250"
    sync:SfSkinManager.Theme="{sync:SkinManagerExtension ThemeName=FluentDark}"
    Background="{StaticResource DarkBlueBackground}"
    BorderBrush="{StaticResource BlueBorderBrush}"
    BorderThickness="1"
    Foreground="{StaticResource LightBlueBrush}"
    Icon="/Resources/Assets/DialogImages/SplashNotification.png"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="353*" />
            <ColumnDefinition Width="74*" />
            <ColumnDefinition Width="38*" />
        </Grid.ColumnDefinitions>
        <Label
            x:Name="TitleLabel"
            Grid.ColumnSpan="2"
            Width="285"
            Height="30"
            Margin="24,1,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Important"
            Foreground="{StaticResource LightBlueBrush}" />
        <Image
            x:Name="Image"
            Width="18"
            Height="20"
            Margin="1,5,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Resources/Assets/DialogImages/SplashNotification.png" />
        <Label
            x:Name="MessageLabel"
            Grid.ColumnSpan="2"
            Height="58"
            Margin="66,0,30,0"
            VerticalAlignment="Center"
            Content="Label"
            Foreground="{StaticResource WhiteForeground}" />
    </Grid>
</Window>