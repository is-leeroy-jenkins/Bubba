<Window
    x:Class="Bubba.GptFileDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Bubba"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:sync="http://schemas.syncfusion.com/wpf"
    x:Name="Upload"
    Title="GPT Upload"
    Width="700"
    Height="480"
    MinWidth="500"
    MinHeight="400"
    MaxWidth="900"
    MaxHeight="700"
    Padding="1"
    sync:SfSkinManager.Theme="{skin:SkinManagerExtension ThemeName=FluentDark}"
    Background="{StaticResource FormBackground}"
    BorderBrush="{StaticResource BlueBorderBrush}"
    BorderThickness="1"
    Foreground="{StaticResource LightBlueBrush}"
    Icon="/Resources/Assets/ApplicationImages/Bubba.ico"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <!--  ******************************************** Resources *********************************************  -->

    <Window.Resources>
        <Style TargetType="ToolTip">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderBrush" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Background" Value="{StaticResource BlackBackground}" />
            <Setter Property="Foreground" Value="{StaticResource LightBlueBrush}" />
        </Style>
    </Window.Resources>


    <!--  ******************************************** Context Menu ******************************************  -->

    <Grid x:Name="BrowserGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="34*" />
            <RowDefinition Height="335*" />
            <RowDefinition Height="93*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="125*" />
            <ColumnDefinition Width="385*" />
            <ColumnDefinition Width="133*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <Canvas
            x:Name="ListBoxCanvas"
            Grid.RowSpan="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="0,34,0,0">

            <b:MetroListBox
                x:Name="ListBox"
                Canvas.Left="14"
                Canvas.Top="19"
                Width="390"
                Height="298"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                d:ItemsSource="{d:SampleData ItemCount=5}" />

        </Canvas>


        <Canvas
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="0,335,0,0">
            <Grid
                Width="440"
                Height="88">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button
                    x:Name="SelectButton"
                    Grid.Column="2"
                    Width="80"
                    Margin="10,26,0,26"
                    HorizontalAlignment="Left"
                    Background="{DynamicResource ControlBackground}"
                    BorderBrush="{DynamicResource BlueBorderBrush}"
                    Content="Select"
                    ToolTip="Select File" />

                <Button
                    x:Name="ClearButton"
                    Grid.Column="1"
                    Width="80"
                    Margin="10,26,0,26"
                    HorizontalAlignment="Left"
                    Background="{DynamicResource ControlBackground}"
                    BorderBrush="{DynamicResource BlueBorderBrush}"
                    Content="Clear"
                    ToolTip="Clear Selected" />

                <Button
                    x:Name="BrowseButton"
                    Grid.Column="0"
                    Width="80"
                    Margin="10,24,0,28"
                    HorizontalAlignment="Left"
                    Background="{DynamicResource ControlBackground}"
                    BorderBrush="{DynamicResource BlueBorderBrush}"
                    Content="Browse"
                    ToolTip="Browse File System" />
                <Button
                    x:Name="CloseButton"
                    Grid.Column="3"
                    Width="80"
                    Margin="10,26,0,26"
                    HorizontalAlignment="Left"
                    Background="{DynamicResource ControlBackground}"
                    BorderBrush="{DynamicResource BlueBorderBrush}"
                    Content="Close"
                    ToolTip="Close Window" />
            </Grid>
        </Canvas>

        <RadioButton
            x:Name="PdfRadioButton"
            Grid.Row="1"
            Grid.Column="2"
            Width="100"
            Height="16"
            Margin="0,14,22,0"
            Padding="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="{StaticResource LightBlueBrush}"
            BorderThickness="1"
            Content="  .pdf"
            FontSize="12"
            Foreground="{StaticResource FormForeground}"
            Tag="PDF"
            ToolTip="application/pdf" />

        <RadioButton
            x:Name="CRadioButton"
            Grid.Row="1"
            Grid.Column="2"
            Width="100"
            Height="20"
            Margin="0,36,0,0"
            Padding="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="{StaticResource LightBlueBrush}"
            BorderThickness="1"
            Content="  .c"
            FontSize="12"
            Foreground="{StaticResource BlueBorderBrush}"
            Tag="C"
            ToolTip="text/x-c" />

        <RadioButton
            x:Name="CppRadioButton"
            Grid.Row="1"
            Grid.Column="2"
            Width="100"
            Height="20"
            Margin="0,65,0,0"
            Padding="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="{StaticResource LightBlueBrush}"
            BorderThickness="1"
            Content="  .cpp "
            FontSize="12"
            Foreground="{StaticResource BlueBorderBrush}"
            Tag="CPP"
            ToolTip="text/x-c++" />

        <RadioButton
            x:Name="PyRadioButton"
            Grid.Row="1"
            Grid.Column="2"
            Width="100"
            Height="24"
            Margin="0,281,0,0"
            Padding="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="{StaticResource LightBlueBrush}"
            BorderThickness="1"
            Content=" .py"
            FontSize="12"
            Foreground="{StaticResource BlueBorderBrush}"
            Tag="PY"
            ToolTip="text/x-python" />

        <RadioButton
            x:Name="CssRadioButton"
            Grid.Row="1"
            Grid.Column="2"
            Width="100"
            Height="20"
            Margin="0,91,0,0"
            Padding="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="{StaticResource LightBlueBrush}"
            BorderThickness="1"
            Content="  .css"
            FontSize="12"
            Foreground="{StaticResource BlueBorderBrush}"
            Tag="CSS"
            ToolTip="text/css" />

        <RadioButton
            x:Name="DocRadioButton"
            Grid.Row="1"
            Grid.Column="2"
            Width="100"
            Height="20"
            Margin="0,116,0,0"
            Padding="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="{StaticResource LightBlueBrush}"
            BorderThickness="1"
            Content="  .doc"
            FontSize="12"
            Foreground="{StaticResource BlueBorderBrush}"
            IsChecked="False"
            Tag="DOC"
            ToolTip="application/msword" />

        <RadioButton
            x:Name="DocxRadioButton"
            Grid.Row="1"
            Grid.Column="2"
            Width="100"
            Height="20"
            Margin="0,141,0,0"
            Padding="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="{StaticResource LightBlueBrush}"
            BorderThickness="1"
            Content="  .docx"
            FontSize="12"
            Foreground="{StaticResource BlueBorderBrush}"
            Tag="DOCX"
            ToolTip="application/vnd.openxmlformats-officedocument.wordprocessingml.document" />

        <RadioButton
            x:Name="HtmlRadioButton"
            Grid.Row="1"
            Grid.Column="2"
            Width="100"
            Height="20"
            Margin="0,170,0,0"
            Padding="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="{StaticResource LightBlueBrush}"
            BorderThickness="1"
            Content="  .html"
            FontSize="12"
            Foreground="{StaticResource BlueBorderBrush}"
            Tag="HTML"
            ToolTip="text/html" />

        <RadioButton
            x:Name="JsRadioButton"
            Grid.Row="1"
            Grid.Column="2"
            Width="100"
            Height="20"
            Margin="0,201,0,0"
            Padding="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="{StaticResource LightBlueBrush}"
            BorderThickness="1"
            Content="  .js"
            FontSize="12"
            Foreground="{StaticResource BlueBorderBrush}"
            Tag="JS"
            ToolTip="text/javascript" />

        <RadioButton
            x:Name="MdRadioButton"
            Grid.Row="1"
            Grid.Column="2"
            Width="100"
            Height="24"
            Margin="0,230,0,0"
            Padding="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="{StaticResource LightBlueBrush}"
            BorderThickness="1"
            Content="  .md"
            FontSize="12"
            Foreground="{StaticResource BlueBorderBrush}"
            Tag="MD"
            ToolTip="text/markdown" />

        <RadioButton
            x:Name="JsonRadioButton"
            Grid.Row="1"
            Grid.Column="2"
            Width="100"
            Height="20"
            Margin="0,256,0,0"
            Padding="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="{StaticResource LightBlueBrush}"
            BorderThickness="1"
            Content="  .json"
            FontSize="12"
            Foreground="{StaticResource BlueBorderBrush}"
            Tag="JSON"
            ToolTip="*.json files" />


        <Grid
            Grid.Row="0"
            Grid.RowSpan="2"
            Margin="0,34,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition
                    Height="Auto"
                    MinHeight="20" />
            </Grid.RowDefinitions>


            <Label
                x:Name="CountLabel"
                Grid.Column="0"
                Height="30"
                Margin="1,0,3,0"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center"
                Content="Files: "
                FontSize="12"
                Foreground="{StaticResource LightBlueBrush}" />

            <Label
                x:Name="Timer"
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Height="30"
                Margin="1,0,84,0"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center"
                Content="Time: "
                FontSize="12"
                Foreground="{StaticResource LightBlueBrush}" />

            <Label
                x:Name="DurationLabel"
                Grid.Row="1"
                Grid.Column="1"
                Height="30"
                Margin="2,0,1,0"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center"
                Content="0"
                FontSize="12"
                Foreground="{StaticResource LightBlueBrush}" />

            <Label
                x:Name="FileCountLabel"
                Grid.Column="1"
                Height="30"
                Margin="2,0,1,0"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center"
                Content="0"
                FontSize="12"
                Foreground="{StaticResource LightBlueBrush}" />



        </Grid>
        <Canvas
            Grid.Row="1"
            Grid.RowSpan="2"
            Margin="0,335,0,0">

            <Label
                x:Name="DateLabel"
                Canvas.Left="20"
                Canvas.Top="47"
                Width="100"
                Height="25"
                Padding="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Left"
                Content="Date"
                FontSize="12"
                Foreground="{StaticResource BlueBorderBrush}" />
        </Canvas>

        <Canvas
            Grid.Row="0"
            Grid.Column="3" />

        <Label
            x:Name="TimeLabel"
            Grid.Column="2"
            Margin="10,5,10,9"
            Padding="1"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Top"
            Content="Time"
            FontSize="12"
            Foreground="{StaticResource BlueBorderBrush}" />
    </Grid>
</Window>
