<Window
    x:Class="Bubba.ColorDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Bubba"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:sync="http://schemas.syncfusion.com/wpf"
    Title="Color Builder"
    Width="605"
    Height="385"
    MinWidth="500"
    MinHeight="400"
    MaxWidth="900"
    MaxHeight="700"
    Padding="1"
    sync:SfSkinManager.Theme="{sync:SkinManager ThemeName=FluentDark}"
    Background="{StaticResource FormBackground}"
    BorderBrush="{StaticResource BlueBorderBrush}"
    BorderThickness="1"
    Foreground="{StaticResource LightBlueBrush}"
    Icon="/Resources/Assets/ApplicationImages/Bubba.ico"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="48.04" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
            </Grid.ColumnDefinitions>
            <Canvas>
                <sync:ColorPicker
                    x:Name="ColorPicker"
                    Canvas.Left="35"
                    Canvas.Top="44"
                    Width="235"
                    Height="262"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Background="{DynamicResource ControlInteriorBrush}"
                    BorderBrush="{DynamicResource BlueBorderBrush}"
                    BorderThickness="2"
                    Brush="Blue"
                    FontFamily="Roboto" />
                <Label
                    Grid.ColumnSpan="2"
                    Canvas.Left="35"
                    Canvas.Top="10"
                    Width="530"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    Content="Label"
                    Foreground="{DynamicResource BlueBorderBrush}" />
            </Canvas>
            <Canvas Grid.Column="1">
                <sync:ColorEdit
                    x:Name="ColorEditor"
                    Canvas.Left="33"
                    Canvas.Top="44"
                    Width="235"
                    Height="262"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="{DynamicResource ControlInteriorBrush}"
                    BorderBrush="{DynamicResource BlueBorderBrush}"
                    BorderThickness="2"
                    Brush="Blue"
                    FontFamily="Roboto" />
            </Canvas>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*" />
                <ColumnDefinition Width="30*" />
                <ColumnDefinition Width="30*" />
            </Grid.ColumnDefinitions>

            <b:MetroTile
                x:Name="SelectButton"
                Title="    Select"
                Grid.Column="1"
                Width="83"
                Height="28"
                Margin="0,10,0,10"
                HorizontalAlignment="Center"
                BorderBrush="{DynamicResource BlueBorderBrush}"
                Header="" />

            <b:MetroTile
                x:Name="ClearButton"
                Title="    Reset"
                Width="100"
                Height="28"
                Margin="50,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                BorderBrush="{DynamicResource BlueBorderBrush}"
                Header="" />

            <b:MetroTile
                x:Name="CloseButton"
                Title="    Close"
                Grid.Column="2"
                Width="90"
                Height="28"
                Margin="0,0,43,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                BorderBrush="{DynamicResource BlueBorderBrush}"
                Header="" />
        </Grid>

    </Grid>
</Window>
