        <ResourceDictionary Source="/UI/Themes/CheckBox/CheckBox.xaml" />
        <ResourceDictionary Source="/UI/Themes/CheckList/CheckList.xaml" />

        <!--  TILE  -->
        <ResourceDictionary Source="/UI/Themes/Tile/Tile.xaml" />

        <!--  WINDOWS  -->
        <ResourceDictionary Source="/UI/Themes/Window/Window.xaml" />

        <!--  MENU  -->
        <ResourceDictionary Source="/UI/Themes/Menu/Menu.xaml" />
